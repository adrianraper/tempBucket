<?xml version="1.0" encoding="utf-8" ?> 
<application xmlns="http://ns.adobe.com/air/application/3.7">
	
	<id>com.ClarityEnglish.ClarityRecorder</id> 
	<versionNumber>4.1.6</versionNumber> 
	<filename>AIRClarityRecorder</filename> 
	
	<name>Clarity Recorder</name> 
	<description>
		<text xml:lang="en">The Clarity Recorder - audio recording, playback and save.</text>
	</description> 
	<copyright>Copyright Clarity Language Consultants Ltd 2010</copyright> 
	
	<initialWindow> 
		<title>Clarity Recorder</title> 
		<content>AIRClarityRecorder.swf</content> 
		<systemChrome>standard</systemChrome> 
		<transparent>false</transparent> 
		<visible>true</visible> 
		<minimizable>true</minimizable> 
		<maximizable>true</maximizable> 
		<resizable>true</resizable>
	</initialWindow> 
	<installFolder>Clarity</installFolder>
	<programMenuFolder>Clarity</programMenuFolder>
	<icon>
		<image16x16>icons/CRIcon_16x16.png</image16x16>
		<image32x32>icons/CRIcon_32x32.png</image32x32>
		<image48x48>icons/CRIcon_48x48.png</image48x48>
		<image128x128>icons/CRIcon_128x128.png</image128x128> 
	</icon>
	<!-- How will this application be run? 
		We want to allow installation and launch from the browser.
		But for now we don't need it to run native processes. -->
	<allowBrowserInvocation>true</allowBrowserInvocation>
