<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:s="library://ns.adobe.com/flex/spark"
		xmlns:fx="http://ns.adobe.com/mxml/2009"
		xmlns:ui="com.clarityenglish.bento.view.recorder.ui.*"
		xmlns:assets="skins.assets.*"
		minWidth.full="660" height.full="200"
		minWidth.minimized="555" height.minimized="28">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.clarityenglish.bento.view.recorder.WaveformView")]
	</fx:Metadata>
	
	<fx:Declarations>
		<fx:Object id="mp3InfoObject" fileSizeString="MP3 file size 200kb" durationString="Duration 5 sec" />
	</fx:Declarations>
	
	<s:states>
		<s:State name="normal" />
		<s:State name="disabled" />
		
		<s:State name="record_minimized" stateGroups="record,minimized" />
		<s:State name="playback_minimized" stateGroups="playback,minimized" />
		<s:State name="record_full" stateGroups="record,full" />
		<s:State name="playback_full" stateGroups="playback,full" />
	</s:states>
	
	<assets:WaveformViewBackground left="0" width="100%" height="100%" includeIn="full" />
	
	<s:HGroup x.minimized="0" y.minimized="0"
			  right.full="78" bottom.full="6"
			  verticalAlign="middle">
		
		<s:Button id="recordButton" skinClass="skins.bento.recorder.buttons.RecordButtonSkin" toolTip="Record" includeIn="record" />
		<s:Button id="playButton" skinClass="skins.bento.recorder.buttons.PlayButtonSkin" toolTip="Play" />
		<s:Button id="stopButton" skinClass="skins.bento.recorder.buttons.StopButtonSkin" toolTip="Stop" />
		<s:Button id="pauseButton" skinClass="skins.bento.recorder.buttons.PauseButtonSkin" toolTip="Pause" />
		<s:Button id="saveButton" skinClass="skins.bento.recorder.buttons.SaveButtonSkin" toolTip="Save" includeIn="record" />
		<s:Button id="newButton" skinClass="skins.bento.recorder.buttons.NewButtonSkin" toolTip="New" includeIn="record" />
		<s:Button id="compareButton" skinClass="skins.bento.recorder.buttons.CompareButtonSkin" toolTip="Compare" includeIn="record" />
		<s:RichText id="richText" color="#001B0F" columnCount="1" fontFamily="Verdana" fontSize="9" height="22" kerning="on" lineHeight="13" tabStops="S31.4992408752441 S62.9984817504883 S94.4977226257324 S125.996963500977" whiteSpaceCollapse="preserve" width="180" x="310" y="5" />
		<s:Button id="maxButton" skinClass="skins.bento.recorder.buttons.MaxButtonSkin" toolTip="Hide" includeIn="minimized" />
		<s:Button id="minButton" skinClass="skins.bento.recorder.buttons.MinButtonSkin" y="7" toolTip="Hide" includeIn="full" />
		<s:Button id="helpButton" skinClass="skins.bento.recorder.buttons.HelpButtonSkin" toolTip="Help" includeIn="full" />
	</s:HGroup>
	
	<s:Group id="contentGroup" left="22" right="82" top="16" bottom="65" visible.minimized="false" includeInLayout.minimized="false" />
	<s:HSlider id="scrubSlider" skinClass="skins.bento.recorder.buttons.HorizontalSliderSkin"
			   enabled="{!hostComponent.isRecording}"
			   minimum="0" maximum="1" snapInterval="0.001" value="0" bottom="-15" left="0" right="0" toolTip="Scrub bar" includeIn="minimized" />
	
	<!--<s:Group id="contentGroup" left="22" right="82" top="16" bottom="47" visible.full="true" includeInLayout.full="true" />-->
	
	<s:VSlider id="gainSlider" skinClass="skins.bento.recorder.buttons.VerticalSliderSkin" minimum="0" maximum="2" snapInterval="0.05" value="1" top="26" right="52" bottom="58" toolTip="Visual gain" includeIn="full" />
	
	<ui:LevelMeter id="levelMeter" width="7"
				   top.minimized="0" bottom.minimized="0" right.minimized="0"
				   right.full="25" top.full="32" bottom.full="60"
				   toolTip="Recording level meter"
				   includeIn="record" />
	
</s:Skin>
