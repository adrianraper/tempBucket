<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx"
		minWidth="280" minHeight="80" width="50%" height="45%">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.clarityenglish.bento.view.warning.WarningView")]
	</fx:Metadata>
	
	<s:states>
		<s:State name="disabled" />
		<s:State name="normal" />
	</s:states>

	<s:layout>
		<s:VerticalLayout horizontalAlign="center" verticalAlign="middle" />
	</s:layout>
		
	<s:VGroup paddingLeft="67">

		<s:VGroup width="100%" paddingTop="20" horizontalAlign="center" verticalAlign="middle" >	
				<s:Label id="warningMessage" fontSize="14" width="310" lineHeight="20" textAlign="center" />
		</s:VGroup>
		
		<s:HGroup width="100%" paddingTop="8" paddingBottom="30" horizontalAlign="center" verticalAlign="middle">
			<s:Spacer width="50%" />
			<s:Spacer height="10" />
			<s:Button id="yesButton" fontSize="24" width="111" height="40" />
			<s:Spacer width="10" />
			<s:Button id="noButton" fontSize="14" width="111" height="40" />
			<s:Spacer width="50%" />
		</s:HGroup>
	</s:VGroup>
</s:Skin>
