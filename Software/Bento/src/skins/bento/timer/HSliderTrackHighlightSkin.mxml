<?xml version="1.0"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" width="100%" height="100%" creationComplete="onCreationComplete(event)">
    <fx:Metadata>
        [HostComponent("spark.components.Button")]
    </fx:Metadata>

    <fx:Script>
        <![CDATA[
            public function onCreationComplete(event:Event):void {
                if (parentDocument.hostComponent.isPlatformTablet) {
                    trackHighlightRect.top = -1
                } else {
                    trackHighlightRect.verticalCenter = -3;
                }
            }
        ]]>
    </fx:Script>

    <!-- states -->
    <s:states>
        <s:State name="up" />
        <s:State name="over" />
        <s:State name="down" />
        <s:State name="disabled" />
    </s:states>

    <s:Rect id="trackHighlightRect" left="0" right="0" height="{parentDocument.hostComponent.sliderHeight}" topRightRadiusX="3" topRightRadiusY="3" bottomRightRadiusX="3" bottomRightRadiusY="3">
        <s:fill>
            <s:SolidColor color="{parentDocument.hostComponent.trackHighLightColor}" />
        </s:fill>
    </s:Rect>

</s:Skin>
