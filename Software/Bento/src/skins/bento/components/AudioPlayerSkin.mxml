<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.clarityenglish.textLayout.components.AudioPlayer")]
	</fx:Metadata>
	
	<s:states>
		<s:State name="hidden" />
		
		<s:State name="stopped_compact" stateGroups="stopped,compact" />
		<s:State name="playing_compact" stateGroups="playing,compact" />
		<s:State name="played_compact" stateGroups="played,compact" />
		
		<s:State name="stopped_full" stateGroups="stopped,full" />
		<s:State name="playing_full" stateGroups="playing,full" />
		<s:State name="played_full" stateGroups="played,full" />
	</s:states>
	
	<!-- All in one button with different states (compact mode) -->
	<s:Image id="compactUIComponent" source.stopped="@Embed('/assets/play.png')" source.played="@Embed('/assets/play.png')" source.playing="@Embed('/assets/stop.png')" includeIn="compact" useHandCursor="true" buttonMode="true" />
	
	<!-- Full controller -->
	<s:Image source="@Embed('/assets/play.png')" includeIn="stopped_full" />
	
</s:Skin>