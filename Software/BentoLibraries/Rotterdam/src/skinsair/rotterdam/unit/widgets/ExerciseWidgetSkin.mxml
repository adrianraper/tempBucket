<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx"
		xmlns:widgets="skins.rotterdam.unit.widgets.*"
		minHeight="80">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.clarityenglish.rotterdam.view.unit.widgets.ExerciseWidget")]
	</fx:Metadata>
	
	<s:states>
		<s:State name="normal" />
		<s:State name="editing_normal" stateGroups="editing" />
		<s:State name="editing_selected" stateGroups="editing,selected" />
		<s:State name="dragging" />
	</s:states>
	
	<!-- Chrome -->
	<widgets:WidgetChrome id="widgetChrome"
						  caption="{hostComponent.caption}"
						  icon="@Embed(source='/skins/assets/exercise-icon.png', mimeType='image/png')"
						  editing="false"
						  selected="false"
						  left="0" right="0" top="0" bottom="0" />
	
	<s:VGroup left="0" right="0" top="25" paddingBottom="10">
		<!-- Text -->
		<widgets:WidgetText alpha="0.5" id="widgetText" widget="{hostComponent}" editing="false" width="100%" minHeight="20" />
		
		<s:HGroup paddingLeft="8" gap="10">
			<!-- Exercise icon -->
			<s:Image alpha="0.5" id="exerciseImage" source="{hostComponent.getThumbnailForUid(hostComponent.contentuid, hostComponent.exIndex)}" />
			
			<!--gh #181-->
			<s:Label id="exerciseTitle" text="{hostComponent.exercisetitle}" paddingTop="{exerciseImage.height/2}" />
		</s:HGroup>
	</s:VGroup>
	
</s:Skin>
