<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.clarityenglish.rotterdam.view.unit.UnitHeaderView")]
	</fx:Metadata>
	
	<!-- states -->
	<s:states>
		<s:State name="disabled" />
		<s:State name="normal" />
		<s:State name="editing" />
	</s:states>
	
	<s:Rect width="100%" height="37" radiusX="5" radiusY="5">
		<s:fill>
			<s:LinearGradient x="55.0005" y="45" scaleX="44.9995" rotation="-90">
				<s:GradientEntry color="#333333" ratio="0"/>
				<s:GradientEntry color="#595959" ratio="1"/>
			</s:LinearGradient>
		</s:fill>
	</s:Rect>	
	
	<s:Group left="8" right="8">
		<s:Label id="unitCaptionLabel" color="#FFFFFF" fontWeight="bold" includeIn="normal"  top="13" fontSize="13" left="10"/>
		<s:TextInput id="unitCaptionTextInput" color="#FFFFFF" contentBackgroundAlpha="0" fontSize="13" fontWeight="bold" width="100%" borderVisible="false" includeIn="editing" left="10" right="75" top="8"/>
		<s:Button id="editButton" includeIn="normal" fontSize="11" left="{unitCaptionLabel.width + 30}" top="7" useHandCursor="true" buttonMode="true" />
		<s:Button id="doneButton" includeIn="editing" fontSize="11" right="10" top="7" useHandCursor="true" buttonMode="true" />		
	</s:Group>
	
</s:Skin>
