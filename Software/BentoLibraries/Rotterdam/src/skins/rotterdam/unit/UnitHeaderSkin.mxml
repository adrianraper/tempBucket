<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.clarityenglish.rotterdam.view.unit.UnitHeaderView")]
	</fx:Metadata>
	
	<!-- states -->
	<s:states>
		<s:State name="disabled" />
		<s:State name="normal" />
		<s:State name="editing" />
	</s:states>
	
	<s:Rect width="100%" height="37" radiusX="5" radiusY="5">
		<s:fill>
			<s:LinearGradient x="55.0005" y="45" scaleX="44.9995" rotation="-90">
				<s:GradientEntry color="#333333" ratio="0"/>
				<s:GradientEntry color="#595959" ratio="1"/>
			</s:LinearGradient>
		</s:fill>
	</s:Rect>	
	
	<s:HGroup left="8" right="8" top="8" gap="10">
		<s:Button id="editButton" label="Edit" includeIn="normal" />
		<s:Button id="doneButton" label="Done" right="10" top="8" includeIn="editing" />
		<s:Label id="unitCaptionLabel" color="#FFFFFF" fontWeight="bold" includeIn="normal" paddingTop="4"/>
		<s:TextInput id="unitCaptionTextInput" color="#FFFFFF" contentBackgroundAlpha="0" fontWeight="bold" width="100%" borderVisible="false" includeIn="editing"/>		
	</s:HGroup>
	
</s:Skin>
