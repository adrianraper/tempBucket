<!--- The default skin class for the Spark Button component.  

@see spark.components.Button

@langversion 3.0
@playerversion Flash 10
@playerversion AIR 1.5
@productversion Flex 4
-->
<s:SparkButtonSkin xmlns:fx="http://ns.adobe.com/mxml/2009" 
				   xmlns:s="library://ns.adobe.com/flex/spark" 
				   xmlns:fb="http://ns.adobe.com/flashbuilder/2009"
				   minWidth="21" minHeight="21" 
				   alpha.disabled="0.5" xmlns:widgets="skins.assets.widgets.*">
	
	<fx:Metadata>
		<![CDATA[ 
		/** 
		* @copy spark.skins.spark.ApplicationSkin#hostComponent
		*/
		[HostComponent("spark.components.Button")]
		]]>
	</fx:Metadata>
	
	<fx:Script fb:purpose="styling">
		<![CDATA[         
			import spark.components.Group;
			/* Define the skin elements that should not be colorized. 
			For button, the graphics are colorized but the label is not. */
			static private const exclusions:Array = ["labelDisplay"];
			
			/** 
			 * @private
			 */     
			override public function get colorizeExclusions():Array {return exclusions;}
			
			/**
			 * @private
			 */
			override protected function initializationComplete():void
			{
				useChromeColor = true;
				super.initializationComplete();
			}  
			
			private var cornerRadius:Number = 2;
			
		]]>        
	</fx:Script>
	
	<fx:Declarations>
		<s:DropShadowFilter id="dropShadowFilter" angle="90" distance="0.5" alpha="0.8" />
	</fx:Declarations>
	
	<!-- states -->
	<s:states>
		<s:State name="up"  />
		<s:State name="over" stateGroups="overStates" />
		<s:State name="down" stateGroups="overStates" />
		<s:State name="disabled" />
	</s:states>
	
	<s:Rect id="fill" left="2" right="2" top="2" bottom="1" radiusX="5" radiusY="5" filters="{dropShadowFilter}" width="40" height="20">
		<s:fill>
			<!--s:LinearGradient rotation="90">
				<s:GradientEntry id="color1" color="0XFFC700" color.over="0XFFD43B" color.down="0XFFD43B" ratio="0.5"/>
				<s:GradientEntry id="color2" color="0XFF9D00" color.over="0XFFE382" color.down="0XFFE382" ratio="1" />							
			</s:LinearGradient-->
			<s:SolidColor color="0XE6E6E6" color.over="0XFFFFFF" color.down="0XFFFFFF" />
		</s:fill>
	</s:Rect>
	
	<s:Label id="labelDisplay"
			 maxDisplayedLines="1" horizontalCenter="0"
			 color="0x000000"
			 top="8" bottom="0">
	</s:Label>
	
</s:SparkButtonSkin>
