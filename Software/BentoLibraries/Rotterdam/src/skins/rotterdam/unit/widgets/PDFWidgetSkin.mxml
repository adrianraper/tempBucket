<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx"
		xmlns:widgets="skins.rotterdam.unit.widgets.*"
		minHeight="150">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.clarityenglish.rotterdam.view.unit.widgets.PDFWidget")]
	</fx:Metadata>
	
	<s:states>
		<s:State name="normal" />
		<s:State name="editing_normal" stateGroups="editing" />
		<s:State name="editing_selected" stateGroups="editing,selected" />
	</s:states>
	
	<!-- Chrome -->
	<widgets:WidgetChrome id="widgetChrome"
						  title="{hostComponent.title}"
						  icon="@Embed(source='/skins/assets/pdf-icon.png', mimeType='image/png')"
						  selected.selected="true"
						  left="0" right="0" top="0" bottom="0" />
	
	<!-- PDF icon -->
	<s:Image source="@Embed(source='/skins/assets/pdf-large-icon.png', mimeType='image/png')" top="35" left="6" />
	
	<!-- Text -->
	<widgets:WidgetText id="widgetText" widget="{hostComponent}" left="0" right="0" top="75" minHeight="75" />
	
</s:Skin>
