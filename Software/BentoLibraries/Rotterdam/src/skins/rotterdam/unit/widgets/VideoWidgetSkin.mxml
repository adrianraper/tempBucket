<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx"
		xmlns:widgets="skins.rotterdam.unit.widgets.*"
		xmlns:video="com.clarityenglish.controls.video.*"
		minHeight="80">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.clarityenglish.rotterdam.view.unit.widgets.VideoWidget")]
	</fx:Metadata>

    <!-- pick up styles from css -->
    <fx:Style source="../../content.css" />

    <s:states>
		<s:State name="normal" />
		<s:State name="editing_normal" stateGroups="editing" />
		<s:State name="editing_selected" stateGroups="editing,selected" />
		<s:State name="dragging" />
	</s:states>
	
	<!-- Chrome -->
	<widgets:WidgetChrome id="widgetChrome"
						  caption="{hostComponent.caption}"
						  icon="@Embed(source='/skins/assets/video-icon.png', mimeType='image/png')"
						  editing.editing="true"
						  selected.selected="true"
						  left="0" right="0" top="0" bottom="0" />
	
	<s:VGroup left="0" right="0" top="25">
		<!-- Text -->
		<widgets:WidgetText id="widgetText" widget="{hostComponent}" styleName="normalTextStyle" editing.editing="true" width="100%" minHeight="20" />
		
		<!-- gh#246 add height for videoHolder-->
		<s:Group id="videoHolder" left="0" right="0" height="375">
			<video:UniversalVideoPlayer id="videoPlayer" width="100%" height="100%" visible.dragging="false" />
		</s:Group>
	</s:VGroup>
	
</s:Skin>
