<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx"
		xmlns:widgets="skins.rotterdam.unit.widgets.*"
		xmlns:components="com.clarityenglish.textLayout.components.*"
		minHeight="150">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.clarityenglish.rotterdam.view.unit.widgets.AudioWidget")]
	</fx:Metadata>
	
	<s:states>
		<s:State name="normal" />
		<s:State name="editing_normal" stateGroups="editing" />
		<s:State name="editing_selected" stateGroups="editing,selected" />
		<s:State name="dragging" />
	</s:states>
	
	<!-- Chrome -->
	<widgets:WidgetChrome id="widgetChrome"
						  title="{hostComponent.title}"
						  icon="@Embed(source='/skins/assets/text-icon.png', mimeType='image/png')"
						  editing.editing="true"
						  selected.selected="true"
						  left="0" right="0" top="0" bottom="0" />
	
	<!-- Audio player -->
	<components:AudioPlayer src="{hostComponent.mediaFolder + '/' + hostComponent.src}" top="35" left="6" controls="full" />
	
	<!-- Progress bar -->
	<s:Range id="progressRange" left="6" right="6" top="45" height="10" />
	
	<!-- Text -->
	<widgets:WidgetText id="widgetText" widget="{hostComponent}" editing.editing="true" left="0" right="0" top="75" minHeight="75"  />
	
</s:Skin>
