<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark"
		xmlns:home="com.clarityenglish.ielts.view.home.*"
		creationComplete="creationComplete(event)" xmlns:title="skins.ieltsair.assets.title.*">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.clarityenglish.ielts.view.title.TitleView")]
	</fx:Metadata>
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			
			import skins.ieltsair.assets.title.*;
			
			protected function creationComplete(event:FlexEvent):void {
				homeViewNavigator.icon = new HomeIcon();
				myProgressViewNavigator.icon = new MyProgressIcon();
				myProfileViewNavigator.icon = new MyProfileIcon();
				helpViewNavigator.icon = new HelpIcon();
				creditsViewNavigator.icon = new CreditsIcon();
			}
			
		]]>
	</fx:Script>
	
	<!-- states -->
	<s:states>
		<s:State name="disabled" />
		<s:State name="normal" />
		
		<s:State name="home" />
		<s:State name="zone" />
		<s:State name="progress" />
		<s:State name="account" />
		<s:State name="support" />
		<s:State name="exercise" />
	</s:states>
	
	<title:IELTSLogo x="39" y="74" />
	<s:SWFLoader source="{hostComponent.productVersionLogo}" x="39" y="140" />
	<s:Label text="{hostComponent.productVersionText}" x="51" y="150" color="#FFFFFF" />
	
	<s:TabbedViewNavigator width="100%" height="100%" creationPolicy="all">
		<s:ViewNavigator id="homeViewNavigator" label="Home" firstView="com.clarityenglish.ielts.view.home.HomeView" title="Road to IELTS" width="100%" height="100%" >
			<s:navigationContent>
				<s:Button label="Back" click="homeViewNavigator.popView()" />
			</s:navigationContent>
			<s:actionContent>
				<s:Button label="Log out" />
			</s:actionContent>
		</s:ViewNavigator>
		
		<s:ViewNavigator id="myProgressViewNavigator" label="My Progress" firstView="com.clarityenglish.ielts.view.progress.ProgressView" title="Road to IELTS" width="100%" height="100%">
			<s:navigationContent>
				<s:Button label="Home" />
			</s:navigationContent>
			<s:actionContent>
				<s:Button label="Log out" />
			</s:actionContent>
		</s:ViewNavigator>
		
		<s:ViewNavigator id="myProfileViewNavigator" label="My Profile" firstView="com.clarityenglish.ielts.view.account.AccountView" title="Road to IELTS" width="100%" height="100%">
			<s:navigationContent>
				<s:Button label="Home" />
			</s:navigationContent>
			<s:actionContent>
				<s:Button label="Log out" />
			</s:actionContent>
		</s:ViewNavigator>
		
		<s:ViewNavigator id="helpViewNavigator" label="Help" firstView="com.clarityenglish.ielts.view.support.SupportView" title="Road to IELTS" width="100%" height="100%">
			<s:navigationContent>
				<s:Button label="Home" />
			</s:navigationContent>
			<s:actionContent>
				<s:Button label="Log out" />
			</s:actionContent>
		</s:ViewNavigator>
		
		<s:ViewNavigator id="creditsViewNavigator" label="Credits" firstView="com.clarityenglish.ielts.view.credits.CreditsView" title="Road to IELTS" width="100%" height="100%">
			<s:navigationContent>
				<s:Button label="Home" />
			</s:navigationContent>
			<s:actionContent>
				<s:Button label="Log out" />
			</s:actionContent>
		</s:ViewNavigator>
		
	</s:TabbedViewNavigator>
	
</s:Skin>