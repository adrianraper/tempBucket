<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark"
		xmlns:home="com.clarityenglish.ielts.view.home.*"
		xmlns:title="skins.ieltsair.assets.title.*"
		xmlns:assets="skins.ieltsair.assets.*"
		xmlns:zone="com.clarityenglish.ielts.view.zone.*"
		creationComplete="creationComplete(event)">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.clarityenglish.ielts.view.title.TitleView")]
	</fx:Metadata>
	<fx:Script>
		<![CDATA[
		import com.clarityenglish.bento.BentoApplication;
		import com.clarityenglish.bento.view.progress.ProgressView;
			import com.clarityenglish.ielts.IELTSApplication;
			import com.clarityenglish.ielts.view.account.AccountView;
			import com.clarityenglish.ielts.view.home.HomeView;
			import com.clarityenglish.ielts.view.support.SupportView;
			
			import mx.events.FlexEvent;
			
			import org.davekeen.util.ClassUtil;
			
			import skins.ieltsair.assets.title.*;
			
			protected function creationComplete(event:FlexEvent):void {
				homeViewNavigator.icon = new HomeIcon();
				myProgressViewNavigator.icon = new MyProgressIcon();
				myProfileViewNavigator.icon = new MyProfileIcon();
				helpViewNavigator.icon = new HelpIcon();
				creditsViewNavigator.icon = new CreditsIcon();
				moreViewNavigator.icon = new MoreIcon();
				candidatesViewNavigator.icon = new CandidatesIcon();
			}
		]]>
	</fx:Script>
	
	<!-- states -->
	<s:states>
		<s:State name="disabled" />
		<s:State name="normal" />
		
		<s:State name="home" />
		<s:State name="zone" />
		<s:State name="progress" />
		<s:State name="account" />
		<s:State name="support" />
		<s:State name="exercise" />
		<s:State name="candidates" />
	</s:states>
	
	<title:IELTSLogo x="39" y="74" excludeFrom="exercise" />
	<!--s:SWFLoader source="{hostComponent.productVersionLogo}" x="39" y="140" excludeFrom="exercise" />
	<s:Label text="{hostComponent.productVersionText}" x="51" y="150" color="#FFFFFF" excludeFrom="exercise" /-->
	<s:Group left="39" top="140">
		<s:Group left="{hostComponent.productVersion != BentoApplication.DEMO ? 2 : 35}" top="3" height="23">
			<s:Rect left="0" right="0" top="0" bottom="0" radiusX="10" radiusY="10">
				<s:fill>
					<s:SolidColor color="#08416B"/>
				</s:fill>
			</s:Rect>
			<s:Label left="{hostComponent.productVersion != IELTSApplication.FULL_VERSION ? 55 : 40}" right="40"
					 verticalCenter="{hostComponent.copyProvider.getLanguageCode() != 'ZH' ? 1 : 0}"
					 text="{hostComponent.productVersionText}" color="#FFFFFF"/>
		</s:Group>
		<s:SWFLoader source="{hostComponent.lastMinuteLogo}" left="0" top="0"
					 visible="{hostComponent.productVersion == IELTSApplication.LAST_MINUTE}"
					 includeInLayout="{hostComponent.productVersion == IELTSApplication.LAST_MINUTE}"/>
		<s:SWFLoader source="{hostComponent.testDriveLogo}" left="0" top="0"
					 visible="{hostComponent.productVersion == IELTSApplication.TEST_DRIVE}"
					 includeInLayout="{hostComponent.productVersion == IELTSApplication.TEST_DRIVE}"/>
		<s:SWFLoader source="{hostComponent.demoLogo}" left="0" top="0"
					 visible="{hostComponent.productVersion == BentoApplication.DEMO}"
					 includeInLayout="{hostComponent.productVersion == BentoApplication.DEMO}"/>
	</s:Group>
	<!-- gh#167 -->
	<s:SWFLoader id="infoButton" source="{hostComponent.productVersionInfo}" right="20" top="44" excludeFrom="exercise" buttonMode="true" useHandCursor="true" />
	
	<assets:BritishCouncilClarityLogo bottom="51" excludeFrom="exercise" />
	<assets:GreyCircles bottom="51" right="0" excludeFrom="exercise" />
	
	<zone:PracticeZonePopoutView id="practiceZonePopoutView" right="457" y="104" />
	
	<!-- #479 -->
	<s:Label text="v{hostComponent.parentApplication.versionNumber}" color="#AAAAAA" right="3" bottom="52" excludeFrom="exercise" />
	
	<s:TabbedViewNavigator id="sectionNavigator" left="0" right="0" top="0" bottom="0" creationPolicy="all">	
		<s:ViewNavigator id="homeViewNavigator" firstView="com.clarityenglish.ielts.view.home.HomeView" title="Road to IELTS" hide="practiceZonePopoutView.visible = false" left="0" right="0" height="100%" >
			<s:navigationContent>
				<s:Button id="homeViewNavigatorButton1" click="homeViewNavigator.popView();" visible="{ClassUtil.getClass(homeViewNavigator.activeView) !== homeViewNavigator.firstView}" />
			</s:navigationContent>
			<s:actionContent>
				<s:Button id="homeViewNavigatorButton2" click="hostComponent.logout.dispatch()" visible="{(ClassUtil.getClass(homeViewNavigator.activeView) == homeViewNavigator.firstView) &amp;&amp; !hostComponent.isLogoutButtonHide}"/>
			</s:actionContent>
		</s:ViewNavigator>
		
		<!-- gh#166 remove logout from all screens except home -->
		<s:ViewNavigator id="myProgressViewNavigator" firstView="com.clarityenglish.bento.view.progress.ProgressView" title="Road to IELTS" left="0" right="0" height="100%">
			<s:navigationContent>
				<s:Button id="myProgressViewNavigatorButton1" click="sectionNavigator.selectedIndex = 0" />
			</s:navigationContent>
		</s:ViewNavigator>
		
		<s:ViewNavigator id="myProfileViewNavigator" firstView="com.clarityenglish.ielts.view.account.AccountView" title="Road to IELTS" left="0" right="0" height="100%">
			<s:navigationContent>
				<s:Button id="myProfileViewNavigatorButton1" click="sectionNavigator.selectedIndex = 0"  />
			</s:navigationContent>
		</s:ViewNavigator>
		
		<s:ViewNavigator id="helpViewNavigator" firstView="com.clarityenglish.ielts.view.support.SupportView" title="Road to IELTS" left="0" right="0" height="100%">
			<s:navigationContent>
				<s:Button id="helpViewNavigatorButton1" click="sectionNavigator.selectedIndex = 0" />
			</s:navigationContent>
		</s:ViewNavigator>
		
		<s:ViewNavigator id="creditsViewNavigator" firstView="com.clarityenglish.bento.view.credits.CreditsView" title="Road to IELTS" left="0" right="0" height="100%">
			<s:navigationContent>
				<s:Button id="creditsViewNavigatorButton1" click="sectionNavigator.selectedIndex = 0" />
			</s:navigationContent>
		</s:ViewNavigator>
		
		<s:ViewNavigator id="candidatesViewNavigator" firstView="com.clarityenglish.ielts.view.candidates.CandidatesView">
			<s:navigationContent>
				<s:Button id="candidatesViewNavigatorButton1" click="sectionNavigator.selectedIndex = 0" />
			</s:navigationContent>
		</s:ViewNavigator>
		
		<s:ViewNavigator id="moreViewNavigator" firstView="com.clarityenglish.ieltsair.view.more.MoreView" title="Road to IELTS" left="0" right="0" height="100%">
			<s:navigationContent>
				<s:Button id="moreViewNavigatorButton1" click="sectionNavigator.selectedIndex = 0" />
			</s:navigationContent>
		</s:ViewNavigator>

	</s:TabbedViewNavigator>
	
</s:Skin>