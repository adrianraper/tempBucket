<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark"
		xmlns:home="com.clarityenglish.ielts.view.home.*"
		xmlns:title="skins.ieltsair.assets.title.*"
		xmlns:assets="skins.ieltsair.assets.*"
		xmlns:zone="skins.ieltsair.assets.zone.*"
		xmlns:zone1="com.clarityenglish.ieltsair.zone.*"
		creationComplete="creationComplete(event)"
		stateChangeComplete="onStateChangeComplete(event)">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.clarityenglish.ielts.view.title.TitleView")]
	</fx:Metadata>
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			
			import org.davekeen.util.ClassUtil;
			
			import skins.ieltsair.assets.title.*;
			
			protected function creationComplete(event:FlexEvent):void {
				homeViewNavigator.icon = new HomeIcon();
				myProgressViewNavigator.icon = new MyProgressIcon();
				myProfileViewNavigator.icon = new MyProfileIcon();
				helpViewNavigator.icon = new HelpIcon();
				creditsViewNavigator.icon = new CreditsIcon();
			}
			
			protected function onStateChangeComplete(event:FlexEvent):void {
				/*switch (currentState) {
					case "exercise":
						//callLater(function():void { sectionNavigator.hideTabBar(false); } );
						homeViewBackButton.label = "Back to menu";
						previousExerciseButton.visible = nextExerciseButton.visible = markingButton.visible = true;
						
						break;
					default:
						//sectionNavigator.showTabBar(false);
						homeViewBackButton.label = "Back";
						previousExerciseButton.visible = nextExerciseButton.visible = markingButton.visible = false;
						break;
				}*/
			}
			
		]]>
	</fx:Script>
	
	<!-- states -->
	<s:states>
		<s:State name="disabled" />
		<s:State name="normal" />
		
		<s:State name="home" />
		<s:State name="zone" />
		<s:State name="progress" />
		<s:State name="account" />
		<s:State name="support" />
		<s:State name="exercise" />
	</s:states>
	
	<title:IELTSLogo x="39" y="74" excludeFrom="exercise" />
	<s:SWFLoader source="{hostComponent.productVersionLogo}" x="39" y="140" excludeFrom="exercise" />
	<s:Label text="{hostComponent.productVersionText}" x="51" y="150" color="#FFFFFF" excludeFrom="exercise" />
	
	<assets:BritishCouncilClarityLogo x="0" y="617" excludeFrom="exercise" />
	
	<zone1:PracticeZonePopoutView id="practiceZonePopoutView" x="50" y="104" />
	
	<s:TabbedViewNavigator id="sectionNavigator" left="0" right="0" top="0" bottom="0" creationPolicy="all">
		<s:ViewNavigator id="homeViewNavigator" label="Home" firstView="com.clarityenglish.ielts.view.home.HomeView" title="Road to IELTS" hide="practiceZonePopoutView.visible = false" width="100%" height="100%" >
			<s:navigationContent>
				<s:Button label="Back" click="homeViewNavigator.popView()" visible="{ClassUtil.getClass(homeViewNavigator.activeView) !== homeViewNavigator.firstView}" />
			</s:navigationContent>
			<s:actionContent>
				<s:Button label="Log out" />
			</s:actionContent>
		</s:ViewNavigator>
		
		<s:ViewNavigator id="myProgressViewNavigator" label="My Progress" firstView="com.clarityenglish.ielts.view.progress.ProgressView" title="Road to IELTS" width="100%" height="100%">
			<s:navigationContent>
				<s:Button label="Home" click="sectionNavigator.selectedIndex = 0" />
			</s:navigationContent>
			<s:actionContent>
				<s:Button label="Log out" />
			</s:actionContent>
		</s:ViewNavigator>
		
		<s:ViewNavigator id="myProfileViewNavigator" label="My Profile" firstView="com.clarityenglish.ielts.view.account.AccountView" title="Road to IELTS" width="100%" height="100%">
			<s:navigationContent>
				<s:Button label="Home" click="sectionNavigator.selectedIndex = 0"  />
			</s:navigationContent>
			<s:actionContent>
				<s:Button label="Log out" />
			</s:actionContent>
		</s:ViewNavigator>
		
		<s:ViewNavigator id="helpViewNavigator" label="Help" firstView="com.clarityenglish.ielts.view.support.SupportView" title="Road to IELTS" width="100%" height="100%">
			<s:navigationContent>
				<s:Button label="Home" click="sectionNavigator.selectedIndex = 0" />
			</s:navigationContent>
			<s:actionContent>
				<s:Button label="Log out" />
			</s:actionContent>
		</s:ViewNavigator>
		
		<s:ViewNavigator id="creditsViewNavigator" label="Credits" firstView="com.clarityenglish.ielts.view.credits.CreditsView" title="Road to IELTS" width="100%" height="100%">
			<s:navigationContent>
				<s:Button label="Home" click="sectionNavigator.selectedIndex = 0" />
			</s:navigationContent>
			<s:actionContent>
				<s:Button label="Log out" />
			</s:actionContent>
		</s:ViewNavigator>
		
	</s:TabbedViewNavigator>
	
</s:Skin>