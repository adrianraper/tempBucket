<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
                   xmlns:s="library://ns.adobe.com/flex/spark" 
                   xmlns:fb="http://ns.adobe.com/flashbuilder/2009"
                   minWidth="21" minHeight="21" 
                   alpha.disabledStates="0.5" xmlns:candidates="skins.ieltsair.assets.candidates.*" xmlns:candidates1="skins.ielts.assets.candidates.*">
	<fx:Metadata>
		[HostComponent("com.clarityenglish.ieltsair.view.candidates.IndexButtonBarButton")]
	</fx:Metadata>
    
    <!-- host component -->
    <!-- states -->
    <s:states>
        <s:State name="up" />
        <s:State name="over" stateGroups="overStates" />
        <s:State name="down" stateGroups="downStates" />
        <s:State name="disabled" stateGroups="disabledStates" />
        <s:State name="upAndSelected" stateGroups="selectedStates, selectedUpStates" />
        <s:State name="overAndSelected" stateGroups="overStates, selectedStates" />
        <s:State name="downAndSelected" stateGroups="downStates, selectedStates" />
        <s:State name="disabledAndSelected" stateGroups="selectedUpStates, disabledStates, selectedStates" />
    </s:states>
    
	<s:Group width="218" height="90">
		<s:Rect width="100%" height="100%" includeIn="over, down, selectedStates">
			<s:fill>
				<s:SolidColor color="#999999"/>
			</s:fill>
		</s:Rect>
		
		<s:Group height="83%" horizontalCenter="20" verticalCenter="0">
			<s:Rect id="imageBorder" width="102" height="58">
				<s:fill>
					<s:SolidColor color="#FFFFFF" />
				</s:fill>
			</s:Rect>							
			<s:SWFLoader left="1" top="1" source="@Embed(source='skins/ielts/assets/candidates/videoThumb1.jpg')" visible="{hostComponent.index == 0}" />
			<s:SWFLoader left="1" top="1" source="@Embed(source='skins/ielts/assets/candidates/videoThumb2.jpg')" visible="{hostComponent.index == 1}" />
			<s:SWFLoader left="1" top="1" source="@Embed(source='skins/ielts/assets/candidates/videoThumb3.jpg')" visible="{hostComponent.index == 2}" />
			<s:SWFLoader left="1" top="1" source="@Embed(source='skins/ielts/assets/candidates/videoThumb4.jpg')" visible="{hostComponent.index == 3}" />
			<s:SWFLoader left="1" top="1" source="@Embed(source='skins/ielts/assets/candidates/videoThumb5.jpg')" visible="{hostComponent.index == 4}" />
			<s:SWFLoader left="1" top="1" source="@Embed(source='skins/ielts/assets/candidates/videoThumb6.jpg')" visible="{hostComponent.index == 5}" />
			<s:SWFLoader left="1" top="1" source="@Embed(source='skins/ielts/assets/candidates/videoThumb7.jpg')" visible="{hostComponent.index == 6}" />
			<s:Label id="labelDisplay" left="-10" bottom="0" width="120" textAlign="center" fontSize="13" fontWeight="bold" color="#FFFFFF" />
		</s:Group>							
		
		<s:Group left="35" verticalCenter="-5">
			<candidates:number1 visible="{hostComponent.index == 0}" />
			<candidates:number2 visible="{hostComponent.index == 1}" />
			<candidates:number3 visible="{hostComponent.index == 2}" />
			<candidates:number4 visible="{hostComponent.index == 3}" />
			<candidates:number5 visible="{hostComponent.index == 4}" />
			<candidates:number6 visible="{hostComponent.index == 5}" />
			<candidates:number7 visible="{hostComponent.index == 6}" />
		</s:Group>
	</s:Group>
    
</s:Skin>
