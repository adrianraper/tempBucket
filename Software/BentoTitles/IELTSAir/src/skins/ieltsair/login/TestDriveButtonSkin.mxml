<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("spark.components.Button")]
	</fx:Metadata>
	
	<fx:Declarations>
		<s:DropShadowFilter id="dropShadowFilter" blurX="6" blurY="6" alpha="0.6" distance="0" angle="180" knockout="false"/>
	</fx:Declarations>
	
	<!-- states -->
	<s:states>
		<s:State name="disabled" />
		<s:State name="down" />
		<s:State name="over" />
		<s:State name="up" />
	</s:states>
	
	<s:Rect width="126" height="32" filters.down="{[dropShadowFilter]}" filters.over="{[dropShadowFilter]}" radiusX="7" radiusY="7">
		<s:fill>
			<s:LinearGradient rotation="90">
				<s:GradientEntry color="#5E5E5E" />
				<s:GradientEntry color="#363636" />
			</s:LinearGradient>
		</s:fill>
	</s:Rect>
	
	<s:Label id="labelDisplay"
			 textAlign="center"
			 maxDisplayedLines="1"
			 horizontalCenter="0" verticalCenter="1" verticalAlign="middle"
			 left="10" right="10" top="2" bottom="2" fontWeight="bold" fontSize="13"
			 color="0xFFFFFF">
	</s:Label>
</s:Skin>
