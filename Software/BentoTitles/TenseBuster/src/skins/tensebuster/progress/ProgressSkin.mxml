<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
    	xmlns:fb="http://ns.adobe.com/flashbuilder/2009" alpha.disabled="0.5" 
		xmlns:components="com.clarityenglish.bento.view.progress.components.*" 
		xmlns:exercise="skins.tensebuster.assets.exercise.*" 
		xmlns:progress="com.clarityenglish.tensebuster.view.progress.*" xmlns:home="skins.tensebuster.assets.home.*">
	
	<fx:Metadata>
		[HostComponent("com.clarityenglish.tensebuster.view.progress.ProgressView")]
	</fx:Metadata>
	
	<fx:Declarations>
		<s:DropShadowFilter id="dropShadowFilter" blurX="8" blurY="8" alpha="0.3" distance="1" angle="180" knockout="false" />
	</fx:Declarations>

    <s:states>
        <s:State name="normal" />
        <s:State name="disabled" />
		<s:State name="anonymous" />
		
		<s:State name="coverage" stateGroups="normalStates,coverageStates"/>
		<s:State name="compare" stateGroups="normalStates,compareStates"/>
		<s:State name="analysis" stateGroups="normalStates,analysisStates"/>
		<s:State name="score" stateGroups="normalStates,scoreStates"/>
		<s:State name="certificate" stateGroups="normalStates, certificateStates"/>
    </s:states>

	<s:SWFLoader source="@Embed(source='/skins/tensebuster/assets/hexagonBg.png')" left="0" bottom="0"/>
	
	<s:HGroup width="100%" paddingLeft="65" top="55">
		<s:ButtonBar id="progressNavBar" enabled.anonymous="false"/>
	</s:HGroup>
	
	<s:Group width="100%" height="100%" filters="{[dropShadowFilter]}">
		<!--rectangle panel-->
		<s:Rect left="29" right="29" bottom="0" top="120">
			<s:fill>
				<s:LinearGradient rotation="90">
					<s:GradientEntry color="0xFFFFFF" ratio="0"/>
					<s:GradientEntry color="0xFFFFFF" ratio="0.9"/>
					<s:GradientEntry color="0xB3B3B3" ratio="1"/>
				</s:LinearGradient>
			</s:fill>
		</s:Rect>
		<!--top panel-->	
		<exercise:topPanel top="90" right="28" left="28" />
	</s:Group>
	<s:SWFLoader source="@Embed(source='/skins/tensebuster/assets/progress/progressFooter.png')" bottom="0" left="28" excludeFrom="[compare, score, certificate]" />

	<s:HGroup width="100%" height="100%" top="110" left="15" bottom="0" right="15">
		<s:Group width="100%" height="100%">
			<s:Group width="100%" height="100%" includeIn="normalStates">
				<components:ProgressCoverageView id="progressCoverageView" width="100%" height="100%" includeIn="coverage" />
				<progress:ProgressAnalysisView id="progressAnalysisView" width="100%" height="100%" includeIn="analysis" />
				<components:ProgressScoreView id="progressScoreView"   width="100%" height="100%" includeIn="score" />
				<progress:ProgressCompareView id="progressCompareView" width="100%" height="100%" includeIn="compare" />
				<progress:ProgressCertificateView id="progressCertificateView" width="100%" height="100%" includeIn="certificate" />
			</s:Group>
		</s:Group>
	</s:HGroup>

	<!--Anonymouse login-->
	<s:Group horizontalCenter="0" verticalCenter="0" includeIn="anonymous">
		<s:Rect left="0" right="0" top="0" bottom="0" radiusX="7" radiusY="7">
			<s:fill>
				<s:SolidColor color="0x808080" />
			</s:fill>
		</s:Rect>
		<s:Label id="labelDisplay"
				 horizontalCenter="0" verticalCenter="1" verticalAlign="middle"
				 left="10" right="10" top="4" bottom="4"
				 color="0xFFFFFF" fontSize="14" text="You are anonymous. To keep track of your progress, sign in next time.">
		</s:Label>
	</s:Group>

	<!--Footer-->
	<s:Rect width="100%" height="10" bottom="0">
		<s:fill>
			<s:SolidColor color="0xEA2133" />
		</s:fill>
	</s:Rect>
</s:Skin>
