<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx"
		xmlns:view="com.clarityenglish.bento.view.*"
		xmlns:recorder="com.clarityenglish.bento.view.recorder.*" xmlns:exercise="skins.tensebuster.assets.exercise.*">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.clarityenglish.bento.view.exercise.ExerciseView")]
	</fx:Metadata>
	
	<fx:Declarations>
		<s:DropShadowFilter id="dropShadowFilter" angle="90" distance="1.5" alpha="0.2" blurX="7" blurY="7" />
	</fx:Declarations>
	
	<s:states>
		<s:State name="disabled" />
		<s:State name="normal" />
		
		<s:State name="exercise" />
		<s:State name="other" />
	</s:states>
	
	<s:layout>
		<s:BasicLayout />
	</s:layout>

	<s:SWFLoader source="@Embed(source='/skins/tensebuster/assets/hexagonBg.png')" left="0" right="0" bottom="0"/>
	<!--<s:Group width="100%" height="100%" filters="{[dropShadowFilter]}" includeIn="exercise">
		&lt;!&ndash;rectangle exercise panel&ndash;&gt;
		<s:Rect left="28" right="28" bottom="0" top="0">
			<s:fill>
				<s:LinearGradient rotation="90">
					<s:GradientEntry color="0xFFFFFF" ratio="0"/>
					<s:GradientEntry color="0xFFFFFF" ratio="0.05"/>
					<s:GradientEntry color="0xEA2133" ratio="1"/>
				</s:LinearGradient>
			</s:fill>
		</s:Rect>
		&lt;!&ndash;top exercise panel&ndash;&gt;
		&lt;!&ndash;exercise:topPanel top="-55" right="28" left="28" /&ndash;&gt;
	</s:Group>-->

	<!-- Exercise -->
	<view:DynamicView id="dynamicView" left="10" right="10" top="-20" bottom="0"/>
	
	<!--Backgroud left and right-->
	<s:Rect width="10" bottom="0" top="-80" left="0" includeIn="exercise">
		<s:fill>
			<s:LinearGradient rotation="90">
				<s:GradientEntry color="0xFFFFFF"/>
				<s:GradientEntry color="0xEA2133"/>
			</s:LinearGradient>
		</s:fill>
	</s:Rect>
	<s:Rect width="10" bottom="0" top="-80" right="0" includeIn="exercise">
		<s:fill>
			<s:LinearGradient rotation="90">
				<s:GradientEntry color="0xFFFFFF"/>
				<s:GradientEntry color="0xEA2133"/>
			</s:LinearGradient>
		</s:fill>
	</s:Rect>
	<!--s:SWFLoader source="@Embed(source='skins/tensebuster/assets/bgLeft.png')" left="15" top="206"/>
	<s:SWFLoader source="@Embed(source='skins/tensebuster/assets/bgRight.png')" left="950" top="206"/-->

	<!-- Control bar -->
	<s:Rect left="0" right="0" height="47" top="-70" filters="{[dropShadowFilter]}">
		<s:fill>
			<s:SolidColor color="#FFFFFF" />
		</s:fill>
	</s:Rect>
	
	<!-- Home buttons -->
	<s:Button id="backToMenuButton" color="0xFFFFFF" left="0" top="-70" fontSize="12" buttonMode="true" useHandCursor="true" />

	<!-- Top Right buttons -->
	<s:HGroup right="10" top="-80" includeIn="exercise" gap="10">
		<s:Button id="backButton" color="0xEA2133" fontSize="13" fontFamily="HelveticaMd" buttonMode="true" useHandCursor="true" enabled="{!hostComponent.isFirstExercise}" visible="{!hostComponent.isDirectStartEx}"/>
		<s:Button id="forwardButton" color="0xEA2133" fontSize="13" fontFamily="HelveticaMd" buttonMode="true" useHandCursor="true" visible="{!hostComponent.isDirectStartEx}"/>
		<s:HGroup paddingLeft="20" gap="5">
			<s:Button id="feedbackButton" visible="false" color="0xEA2133" fontSize="13" fontFamily="HelveticaMd" buttonMode="true" useHandCursor="true" />
			<s:Button id="markingButton"  color="0xEA2133" fontSize="13" fontFamily="HelveticaMd" buttonMode="true" useHandCursor="true" />
			<s:Button id="startAgainButton" color="0xEA2133" fontSize="13" fontFamily="HelveticaMd" buttonMode="true" useHandCursor="true"/>
			<s:Button id="recorderButton" color="0xEA2133" fontSize="13" fontFamily="HelveticaMd" buttonMode="true" useHandCursor="true"/>
			<s:Button id="ruleButton" color="0xEA2133" fontSize="13" fontFamily="HelveticaMd" buttonMode="true" useHandCursor="true" visible="{hostComponent.ruleLink != null}" includeInLayout="{hostComponent.ruleLink != null}" />
			<s:Button id="printButton" visible="{hostComponent.hasPrintStylesheet}" includeInLayout="{hostComponent.hasPrintStylesheet}" color="0xEA2133" buttonMode="true" fontSize="13" fontFamily="HelveticaMd" useHandCursor="true"/>
		</s:HGroup>
	</s:HGroup>

	<!-- Header -->
	<s:Rect left="0" right="0" height="10" top="-80">
		<s:fill>
			<s:SolidColor color="0xEA2133" />
		</s:fill>
	</s:Rect>


	<!--Footer-->
	<s:Rect left="10" right="10" height="10" bottom="0">
		<s:fill>
			<s:SolidColor color="0xEA2133" />
		</s:fill>
	</s:Rect>
</s:Skin>