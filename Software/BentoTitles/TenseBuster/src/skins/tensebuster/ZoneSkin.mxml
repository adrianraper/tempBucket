<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.clarityenglish.tensebuster.view.zone.ZoneView")]
	</fx:Metadata>
	
	<!-- states -->
	<s:states>
		<s:State name="disabled" />
		<s:State name="normal" />
	</s:states>
	
	<s:layout>
		<s:VerticalLayout gap="3" paddingLeft="10" paddingRight="10" paddingTop="10" paddingBottom="45" />
	</s:layout>
	
	<s:Label text="Tense Buster v10: select a unit and exercise" fontSize="30" fontWeight="bold" />
	
	<s:HGroup width="100%" height="100%">
		<s:List id="unitList" width="50%" height="100%" labelField="@caption" />
		<s:List id="exerciseList" width="50%" height="100%" labelField="@caption" />
	</s:HGroup>
	
</s:Skin>
