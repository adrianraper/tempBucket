<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
    	xmlns:fb="http://ns.adobe.com/flashbuilder/2009" alpha.disabled="0.5" height="100%">
	
	<fx:Metadata>
		[HostComponent("com.clarityenglish.bento.view.credits.CreditsView")]
	</fx:Metadata>
	
	<fx:Declarations>
		<s:DropShadowFilter id="dropShadowFilter" blurX="8" blurY="8" alpha="0.3" distance="1" angle="180" knockout="false" />
	</fx:Declarations>

    <s:states>
        <s:State name="normal" />
        <s:State name="disabled" />
    </s:states>
    
	<s:SWFLoader source="@Embed(source='skins/tensebuster/assets/title/header.png')" top="20" horizontalCenter="0" />
	<!--s:SWFLoader source="@Embed(source='skins/tensebuster/assets/credits/creditsBg.png')" top="360" horizontalCenter="0"/-->
	<s:Group width="100%" height="100%" filters="{[dropShadowFilter]}">
		<!--rectangle panel-->
		<s:Rect width="727" left="132" bottom="15" top="518">
			<s:fill>
				<s:LinearGradient rotation="90">
					<s:GradientEntry color="0xFFFFFF" ratio="0"/>
					<s:GradientEntry color="0xFFFFFF" ratio="0.9"/>
					<s:GradientEntry color="0xB3B3B3" ratio="1"/>
				</s:LinearGradient>
			</s:fill>
		</s:Rect>
		<!--top panel-->	
		<s:SWFLoader source="@Embed(source='skins/tensebuster/assets/credits/creditsPannelTop.png')" horizontalCenter="0" top="488"/>
	</s:Group>
	
	<s:HGroup top="535"  horizontalCenter="0">
		<s:SWFLoader source="@Embed(source='skins/tensebuster/assets/credits/creditsLine.png')" />
		<s:VGroup paddingTop="-5">
			<s:RichText id="creditCaptionLabel" fontSize="17" fontWeight="bold" color="0xd01c32" />
		</s:VGroup>		
		<s:SWFLoader source="@Embed(source='skins/tensebuster/assets/credits/creditsLine.png')" />
	</s:HGroup>
	<s:Scroller top="560" bottom="50" horizontalCenter="0" width="720" >
		<s:Group>
			<s:RichText id="creditsRichText" horizontalCenter="0" textAlign="center" fontSize="12" color="0x333333" />
		</s:Group>
	</s:Scroller>
	
	<s:SWFLoader source="@Embed(source='skins/tensebuster/assets/credits/creditsPeople.png')" top="90" horizontalCenter="0" />
	<s:Label id="thankYouLabel" top="450" horizontalCenter="0" fontSize="24" color="0xFFFFFF" />
</s:Skin>
