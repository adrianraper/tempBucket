<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:icon="skins.tensebuster.assets.icon.*">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.clarityenglish.tensebuster.view.home.HomeView")]
	</fx:Metadata>
	
	<!-- states -->
	<s:states>
		<s:State name="disabled" />
		<s:State name="normal" />
	</s:states>	
	
	<s:SWFLoader source="@Embed(source='skins/tensebuster/assets/tbBg.png')" horizontalAlign="center" bottom="5"/>
	<s:Label id="homeInstructionLabel" top="60" left="60" />
	<s:List id="coursesList" labelField="@caption" borderVisible="false" top="80" left="50" contentBackgroundAlpha="0">
		<s:itemRenderer>
			<fx:Component>
				<s:ItemRenderer autoDrawBackground="false" buttonMode="true" useHandCursor="true">
					<fx:Script>
						<![CDATA[
								import spark.components.List;
								
								public function getIndex(data:Object):Number {
									return (owner as List).dataProvider.getItemIndex(data);
								}
								// calculate the left position for each item
								protected function getPaddingLeft(index:Number):Number {
									var value:Number = 50*(2-Math.abs(index-2));
									return value;
								}
							
								public function getTopGradientColor(index:Number):Number {
									var topGradientColors:Array = getStyle("topGradientColors");
									return topGradientColors[index % topGradientColors.length];
								}
							
								public function getMidGradientColor(index:Number):Number {
									var midGradientColors:Array = getStyle("midGradientColors");
									return midGradientColors[index % midGradientColors.length];
								}
							
								public function getBottomGradientColor(index:Number):Number {
									var bottomGradientColors:Array = getStyle("bottomGradientColors");
									return bottomGradientColors[index % bottomGradientColors.length];
								}
							
								public function getOverTopGradientColor(index:Number):Number {
									var topOverGradientColors:Array = getStyle("topOverGradientColors");
									return topOverGradientColors[index % topOverGradientColors.length];
								}
							
								public function getMidOverGradientColors(index:Number):Number {
									var midOverGradientColors:Array = getStyle("midOverGradientColors");
									return midOverGradientColors[index % midOverGradientColors.length];
								}
							
								public function getBottomOverGradientColors(index:Number):Number {
									var bottomOverGradientColors:Array = getStyle("bottomOverGradientColors");
									return bottomOverGradientColors[index % bottomOverGradientColors.length];
								}
						]]>
					</fx:Script>
					
					<s:states>
						<s:State name="normal" />
						<s:State name="hovered" />
						<s:State name="selected" />
					</s:states>
					
					<s:layout>
						<s:VerticalLayout paddingTop="15" paddingBottom="15" />
					</s:layout>
					
					<s:HGroup paddingLeft="{getPaddingLeft(getIndex(data))}" gap="-10">
						<s:Group>
							<s:Group left="35" top="10">
								<s:Path data="M12.4829 44.2217C10.9238 44.2217 8.6748 43.3975 7.48486 42.3906L2.16357 37.8877C0.973633 36.8809 0 34.7813 0 33.2222L0 10.9995C0 9.44043 0.973633 7.34082 2.16357 6.33398L7.48486 1.83105C8.6748 0.824219 10.9238 0 12.4829 0L221.689 0C223.248 0 225.497
										0.82373 226.688 1.83105L232.009 6.33398C233.199 7.34131 234.173 9.44043 234.173 10.9995L234.173 33.2222C234.173 34.7813 233.199 36.8804 232.009 37.8877L226.688 42.3906C225.497 43.3979 223.248 44.2217 221.689 44.2217L12.4829 44.2217Z">
									<s:fill>
										<s:LinearGradient rotation="90">
											<s:GradientEntry color="{getTopGradientColor(getIndex(data))}" color.hovered="{getOverTopGradientColor(getIndex(data))}" ratio="0" />
											<s:GradientEntry color="{getMidGradientColor(getIndex(data))}" color.hovered="{getMidOverGradientColors(getIndex(data))}" ratio="0.4" />
											<s:GradientEntry color="{getMidGradientColor(getIndex(data))}" color.hovered="{getMidOverGradientColors(getIndex(data))}" ratio="0.6" />
											<s:GradientEntry color="{getBottomGradientColor(getIndex(data))}" color.hovered="{getBottomOverGradientColors(getIndex(data))}" ratio="1" />
										</s:LinearGradient>
									</s:fill>
								</s:Path>
								<s:Label text="{data.@caption}" color="0xFFFFFF" top="15" left="45" fontSize="19" />
							</s:Group>
							<s:SWFLoader source="skins/tensebuster/assets/courseIcon/{data.@caption}.png" />
						</s:Group>																		
					</s:HGroup>				
				</s:ItemRenderer>
			</fx:Component>
		</s:itemRenderer>
	</s:List>
</s:Skin>
