<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
    	xmlns:fb="http://ns.adobe.com/flashbuilder/2009" alpha.disabled="0.5" xmlns:exercise="skins.tensebuster.assets.exercise.*" xmlns:ui="com.clarityenglish.tensebuster.view.unit.ui.*">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.clarityenglish.tensebuster.view.unit.UnitView")]
	</fx:Metadata>
	
	<fx:Declarations>
		<s:DropShadowFilter id="dropShadowFilter" angle="90" distance="1.5" alpha="0.6" blurX="7" blurY="7" />
	</fx:Declarations>

    <s:states>
        <s:State name="normal" />
        <s:State name="disabled" />
    </s:states>  
	
	<s:SWFLoader source="@Embed(source='skins/tensebuster/assets/hexagonBg.png')" left="0" bottom="0"/>
	<s:Group width="100%" height="100%" filters="{[dropShadowFilter]}">
		<!--rectangle panel-->
		<s:Rect left="29" right="29" bottom="15" top="70">
			<s:fill>
				<s:SolidColor color="0xFFFFFF"/>
			</s:fill>
		</s:Rect>
		<!--top panel-->	
		<exercise:topPanel top="40" right="28" left="28" />
		<s:SWFLoader source="@Embed(source='skins/tensebuster/assets/unit/unitBg.png')" bottom="25" left="28" />
	</s:Group>
	
	<s:HGroup verticalAlign="middle" id="coursePath" top="60" left="50">
		<s:SWFLoader id="courseThumbnail" source="{hostComponent.courseIcon}" />
		<s:Label text="{hostComponent.courseCaption}" color="0x333333" fontSize="19" paddingTop="2" />
	</s:HGroup>

	<s:Label id="unitInstructionLabel" top="120" left="90" />
	<s:List id="unitList" top="200" bottom="20" horizontalCenter="0" contentBackgroundAlpha="0" borderVisible="false">
		<s:layout>
			<s:TileLayout horizontalGap="50" verticalGap="50" requestedColumnCount="3" />
		</s:layout>
		<s:itemRenderer>
			<fx:Component>				
				<s:ItemRenderer autoDrawBackground="false" buttonMode="true" useHandCursor="true" dataChange="{fadeEffect.play()}">
					<s:transitions>
						<s:Transition>
							<s:Fade id="fadeEffect" target="{unitButtonGroup}" duration="2000" alphaFrom="0" alphaTo="1"/>
						</s:Transition>
					</s:transitions>
					
					<s:Group alpha="0" id="unitButtonGroup">
						<ui:ProgressUnitButton id="progressUnitButton" coverage="{data.@coverage}" caption="{data.@caption}" courseIndex="{outerDocument.hostComponent.courseIndex}"/>
					</s:Group>
					
				</s:ItemRenderer>
			</fx:Component>
		</s:itemRenderer>
	</s:List>
</s:Skin>
