<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
    	xmlns:fb="http://ns.adobe.com/flashbuilder/2009" alpha.disabled="0.5" xmlns:exercise="skins.tensebuster.assets.exercise.*">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.clarityenglish.tensebuster.view.unit.UnitView")]
	</fx:Metadata>
	
	<fx:Declarations>
		<s:DropShadowFilter id="dropShadowFilter" angle="90" distance="1.5" alpha="0.6" blurX="7" blurY="7" />
	</fx:Declarations>

    <s:states>
        <s:State name="normal" />
        <s:State name="disabled" />
    </s:states>  
	
	<!--s:SWFLoader source="@Embed(source='skins/tensebuster/assets/hexagonBg.png')" left="0" top="0"/-->
	<s:Group width="100%" height="100%" filters="{[dropShadowFilter]}">
		<!--rectangle panel-->
		<s:Rect left="28" right="28" bottom="15" top="70">
			<s:fill>
				<s:SolidColor color="0xFFFFFF"/>
			</s:fill>
		</s:Rect>
		<!--top panel-->	
		<exercise:topPanel top="40" right="28" left="28" />
		<s:SWFLoader source="@Embed(source='skins/tensebuster/assets/unit/unitBg.png')" bottom="25" left="28" />
	</s:Group>
	
	<s:List id="unitList" labelField="@caption" top="50"/>
</s:Skin>
