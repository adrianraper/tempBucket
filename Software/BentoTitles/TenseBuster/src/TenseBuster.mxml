<?xml version="1.0" encoding="utf-8"?>
<tensebuster:TenseBusterApplication xmlns:fx="http://ns.adobe.com/mxml/2009"
									xmlns:s="library://ns.adobe.com/flex/spark"
									xmlns:tensebuster="com.clarityenglish.tensebuster.*"
									minWidth="990" minHeight="760"
									initialize="onInitialize(event)">
	<fx:Metadata>
		[SWF(width="990", height="768")]
	</fx:Metadata>
	
	<fx:Style source="tensebuster.css" />
	
	<fx:Style>
		@font-face {
			src: url("skins/tensebuster/assets/progress/certificate/HANDSEAN.TTF");
			fontFamily: Sean;
			advancedAntiAliasing: true;
		}
		
		global {
			fontFamily: Helvetica;
			fontLookup: embeddedCFF;
			fontAntiAliasType: advanced;
			fontSharpness: 400;
			fontThickness: -200;
			color: #333333;
		}
	</fx:Style>
	
	<fx:Script>
		<![CDATA[
			import com.clarityenglish.tensebuster.TenseBusterApplicationFacade;
			
			import mx.events.FlexEvent;
			
			protected function onInitialize(event:FlexEvent):void {
				versionNumber = "0.11.10";
				
				facade = TenseBusterApplicationFacade.getInstance();
			}
			
		]]>
	</fx:Script>
</tensebuster:TenseBusterApplication>