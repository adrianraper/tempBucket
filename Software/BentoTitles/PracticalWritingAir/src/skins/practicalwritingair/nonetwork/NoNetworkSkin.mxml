<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009"
        xmlns:s="library://ns.adobe.com/flex/spark"
        xmlns:assets="skins.practicalwriting.assets.*"
        xmlns:nonetwork="skins.practicalwritingair.assets.*">

    <!-- host component -->
    <fx:Metadata>
        [HostComponent("com.clarityenglish.bento.view.nonetwork.NoNetworkView")]
    </fx:Metadata>

    <!-- states -->
    <s:states>
        <s:State name="disabled" />
        <s:State name="normal" />
    </s:states>

    <!--Header-->
    <s:Rect left="0" right="0" top="0" height="8">
        <s:fill>
            <s:SolidColor color="#FFD988" />
        </s:fill>
    </s:Rect>

    <!--logo-->
    <assets:mediumlogo left="52" top="47"/>

    <!--Background-->
    <s:BitmapImage left="0" bottom="0" width="100%" source="@Embed(source='skins/practicalwriting/assets/login/backgroundLargeBall.png')" scaleMode="zoom" />

    <s:VGroup top="204" left="100" height="500" width="500" horizontalAlign="center" gap="41">
        <s:Label id="nonetworkContentLabel" paddingLeft="40" width="100%" fontSize="78" color="#09789C" fontFamily="Helvetica" textAlign="center" lineHeight="60" trackingRight="5"/>
        <s:SWFLoader source="@Embed('/skins/practicalwritingair/assets/wifi.png')" />
    </s:VGroup>

    <!--Man-->
    <s:SWFLoader right="0" bottom="30" source="@Embed(source='skins/practicalwriting/assets/login/loginMan.png')" />

    <!--Footer-->
    <s:Group height="28" bottom="8" left="0" right="0">
        <s:Rect width="100%" height="100%">
            <s:fill>
                <s:LinearGradient>
                    <s:GradientEntry color="#D4D4D4" alpha="1"/>
                    <s:GradientEntry color="#D4D4D4" alpha="0"/>
                </s:LinearGradient>
            </s:fill>
        </s:Rect>
        <s:HGroup height="100%" left="40" verticalAlign="middle" gap="5">
            <s:Label id="versionLabel" color="#333333" fontSize="11"/>
            <s:Label id="copyrightLabel" color="#333333" fontSize="11"/>
        </s:HGroup>
    </s:Group>
    <s:Rect left="0" right="0" bottom="0" height="8">
        <s:fill>
            <s:SolidColor color="#09789C"/>
        </s:fill>
    </s:Rect>

</s:Skin>
