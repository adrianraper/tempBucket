<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.clarityenglish.rotterdam.view.unit.UnitHeaderView")]
	</fx:Metadata>
	
	<!-- states -->
	<s:states>
		<s:State name="disabled" />
		<s:State name="normal" />
		<s:State name="editing" />
	</s:states>
	
	<s:Rect width="100%" height="37" radiusX="5" radiusY="5">
		<s:fill>
			<s:SolidColor color="#000000" />
		</s:fill>
	</s:Rect>
	
	<s:Label id="unitCaptionLabel" color="#FFFFFF" fontWeight="bold" left="12" top="14" includeIn="normal" />
	<s:Button id="editButton" label="Edit" right="10" top="8" includeIn="normal" />
	
	<s:TextInput id="unitCaptionTextInput" width="70%" color="#FFFFFF" contentBackgroundColor="#000000" fontWeight="bold" left="8" top="8" includeIn="editing" />
	<s:Button id="doneButton" label="Done" right="10" top="8" includeIn="editing" />
</s:Skin>
