<?xml version="1.0" encoding="utf-8"?>
<s:SparkButtonSkin xmlns:fx="http://ns.adobe.com/mxml/2009" 
				   xmlns:s="library://ns.adobe.com/flex/spark" 
				   xmlns:fb="http://ns.adobe.com/flashbuilder/2009"
				   minWidth="30" minHeight="30"
				   alpha.disabledStates="0.5">
	
	<!-- host component -->
	<fx:Metadata>
		<![CDATA[ 
		/** 
		* @copy spark.skins.spark.ApplicationSkin#hostComponent
		*/
		[HostComponent("spark.components.ToggleButton")]
		]]>
	</fx:Metadata>
	
	<fx:Declarations>
		<s:DropShadowFilter id="dropShadowFilter" angle="0" distance="0.4" alpha="0.8" />
	</fx:Declarations>
	
	<fx:Script>
		<![CDATA[
			import mx.utils.ColorUtil;
		]]>
	</fx:Script>
	
	<!-- states -->
	<s:states>
		<s:State name="up" />
		<s:State name="over" stateGroups="overStates" />
		<s:State name="down" stateGroups="downStates" />
		<s:State name="disabled" stateGroups="disabledStates" />
		<s:State name="upAndSelected" stateGroups="selectedStates, selectedUpStates" />
		<s:State name="overAndSelected" stateGroups="overStates, selectedStates" />
		<s:State name="downAndSelected" stateGroups="downStates, selectedStates" />
		<s:State name="disabledAndSelected" stateGroups="selectedUpStates, disabledStates, selectedStates" />
	</s:states>
	
	<s:filters>
		<s:GlowFilter blurX="2" blurY="2" quality="3" strength="2" color="0x473809" inner="true" />
	</s:filters>
	
	<!-- layer 2: fill -->
	<!--- @private -->
	<s:Rect id="fill" left="0" right="0" top="0" bottom="0" radiusX="4" radiusY="4" filters="{dropShadowFilter}">
		<s:fill>
			<s:LinearGradient x="32" y="0.5" scaleX="25" rotation="90">
				<s:GradientEntry color="0xFFFFFF" 
								 color.selectedUpStates="0xFFC701"
								 color.overStates="0xFFDD69" 
								 color.downStates="0xEBB701" 
								 />
				<s:GradientEntry color="0xFFFFFF" 
								 color.selectedUpStates="0xFFC701"
								 color.over="0xFFC701" 
								 color.overAndSelected="0xFFC701"
								 color.downStates="0xEBB701"  
								 />
			</s:LinearGradient>
		</s:fill>
	</s:Rect>
	
	<!-- layer 8: text -->
	<!--- @copy spark.components.supportClasses.ButtonBase#labelDisplay -->
	<s:Label id="labelDisplay"
			 textAlign="center"
			 verticalAlign="middle"
			 maxDisplayedLines="1"
			 horizontalCenter="0" verticalCenter="1"
			 left="10" right="10" top="2" bottom="2">
	</s:Label>
	
</s:SparkButtonSkin>
