	<!--- @copy spark.components.supportClasses.ButtonBase#labelDisplay  -->
	<s:Label id="labelDisplay"
			 color="0x000000"
			 fontSize="13" fontWeight="bold"
			 maxDisplayedLines="2"
			 left="40" right="10" top="17" bottom="2">
	</s:Label>
	
	<s:Label id="publishSettingsLabel" text="{hostComponent.text}" width="110" top="33" left="40" color="0x000000" fontSize="13"/>
</s:Skin>
