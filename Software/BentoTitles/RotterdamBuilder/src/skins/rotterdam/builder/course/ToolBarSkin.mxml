	<s:Button includeIn="normal" id="normalAddExerciseButton" label="Add Exercise" useHandCursor="true" buttonMode="true" />
		<s:Button includeIn="normal" id="normalAddLinkButton" label="Add Link" useHandCursor="true" buttonMode="true" />
	</s:HGroup>
	
	<s:HGroup bottom="0" gap="10" height="48" right="140" verticalAlign="middle">
		<s:Button includeIn="normal" id="normalSaveButton" label="Save changes" useHandCursor="true" buttonMode="true" />
	</s:HGroup>
	
	<s:HGroup bottom="0" right="2" gap="10" height="48" verticalAlign="middle">
		<s:Button includeIn="normal" id="normalPreviewButton" label="Preview" useHandCursor="true" buttonMode="true" width="133"/>
	</s:HGroup>
	
	<s:HGroup bottom="0" right="2" gap="3" height="48" verticalAlign="middle">
		<s:Button includeIn="video" id="videoSelectButton" label="Select" useHandCursor="true" buttonMode="true" />
		<s:Button includeIn="link" id="linkSelectButton" label="Select" useHandCursor="true" buttonMode="true" />
		<s:Button includeIn="pdf,video,image,audio,link" id="normalCancelButton" label="Cancel" useHandCursor="true" buttonMode="true" />
		<s:Button includeIn="preview" id="previewBackToEditorButton" label="Back to editor" useHandCursor="true" buttonMode="true" />
	</s:HGroup>
	
