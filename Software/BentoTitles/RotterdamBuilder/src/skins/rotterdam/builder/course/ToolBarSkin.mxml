					<s:fill>
						<s:LinearGradient rotation="90">
							<s:GradientEntry color="0x3C5C11" ratio="0.5" />
							<s:GradientEntry color="0x283D0C" />
						</s:LinearGradient>
					</s:fill>			
				</s:Rect>
				<s:Label id="itemListLabel" color="0x8CC63F" fontSize="14" top="15" left="20" />
				<s:Button id="downButton" left="345" top="10" click="upAnim.play(null, true);" useHandCursor="true" buttonMode="true"/>
			</s:Group>
			
