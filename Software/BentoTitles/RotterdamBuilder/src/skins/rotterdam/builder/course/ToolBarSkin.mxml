		<s:Button includeIn="link" id="linkSelectButton" useHandCursor="true" buttonMode="true" fontWeight="bold"/>
		<s:Button includeIn="pdf,video,image,audio,authoring,link" id="normalCancelButton" useHandCursor="true" buttonMode="true" fontWeight="bold"/>
