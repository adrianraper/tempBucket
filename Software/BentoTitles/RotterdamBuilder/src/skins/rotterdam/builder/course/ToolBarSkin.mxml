						<s:GradientEntry color="0x8CC63F" ratio="0.5" />
						<s:GradientEntry color="0x72A133" />
						</s:LinearGradient>
					</s:fill>
				</s:Rect>
				<s:Rect width="385" height="40" topLeftRadiusX="8" topLeftRadiusY="8" topRightRadiusX="8" topRightRadiusY="8">
					<s:fill>
						<s:LinearGradient rotation="90">
							<s:GradientEntry color="0x3C5C11" ratio="0.5" />
							<s:GradientEntry color="0x283D0C" />
						</s:LinearGradient>
					</s:fill>			
				</s:Rect>
				<s:Label id="itemListLabel2" color="0x8CC63F" fontSize="14" top="15" left="30" />
