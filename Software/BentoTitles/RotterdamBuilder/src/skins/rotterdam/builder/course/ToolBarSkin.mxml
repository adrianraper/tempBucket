		<s:Button includeIn="audio" id="audioUploadButton" useHandCursor="true" buttonMode="true" />
		<s:Label includeIn="audio" id="audioOrLabel2" color="#FFFFFF" paddingLeft="5" paddingRight="5" />
		<s:TextInput includeIn="audio" id="audioUrlTextInput" borderVisible="false" width="360" height="25" paddingLeft="5" />
		
		<s:Label includeIn="video" id="uploadVideoLabel" color="#FFFFFF" paddingLeft="10" paddingRight="10" paddingTop="4" />
		<s:TextInput includeIn="video" id="videoUrlTextInput" borderVisible="false" width="360" height="25" paddingLeft="5"  />
		
		<s:Label includeIn="link" id="webLinkURLLabel" color="#FFFFFF" paddingLeft="10" paddingRight="10" paddingTop="4" />
		<s:TextInput includeIn="link" id="webUrlTextInput" borderVisible="false" width="360" height="25" paddingLeft="5" />
		<s:Label includeIn="link" id="webLinkTextLabel" color="#FFFFFF" paddingLeft="10" paddingRight="10" paddingTop="4" />
		<s:TextInput includeIn="link" id="captionTextInput" borderVisible="false" width="360" height="25" paddingLeft="5" />	
		
		<s:Button includeIn="authoring" id="authoringMultipleChoiceButton" label="Multiple Choice" />
		<s:Button includeIn="authoring" id="authoringGapFillButton" label="Gapfill" />
		<s:Button includeIn="authoring" id="authoringDrapAndDropButton" label="Drag and Drop" />
