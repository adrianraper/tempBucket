			<!--s:Label includeIn="normal" paddingTop="5" text="Font weight" fontWeight="bold" color="#FFFFFF" /-->
			<s:ToggleButton id="boldButton" label="B" fontSize="17" fontWeight="bold" color="0x333333" useHandCursor="true" buttonMode="true" />
			<s:ToggleButton id="underlineButton" label="U" fontSize="17" fontWeight="bold" color="0x333333" useHandCursor="true" buttonMode="true" textDecoration="underline"/>
			<s:ToggleButton id="italicButton" label="I" fontSize="17" fontWeight="bold" color="0x333333" useHandCursor="true" buttonMode="true" fontStyle="italic"/>
			<s:Spacer width="8" />
			<!--s:Label includeIn="normal" paddingTop="5" text="Font size" fontWeight="bold" color="#FFFFFF" paddingLeft="15" /-->
			<s:ToggleButton id="fontSize1Button" label="a" fontSize="13" fontWeight="bold" color="0x333333" useHandCursor="true" buttonMode="true" />
			<s:ToggleButton id="fontSize2Button" label="a" fontSize="15" fontWeight="bold" color="0x333333" useHandCursor="true" buttonMode="true" />
			<s:ToggleButton id="fontSize3Button" label="a" fontSize="17" fontWeight="bold" color="0x333333" useHandCursor="true" buttonMode="true" />
			<s:Spacer width="8" />
			<s:Label text="URL" fontWeight="bold" color="0xFFFFFF" paddingTop="3" />
			<s:Button id="urlButton" useHandCursor="true" buttonMode="true"/>
		</s:HGroup>
	</s:HGroup>
	
