				<s:Rect width="385" height="140" topLeftRadiusX="8" topLeftRadiusY="8" topRightRadiusX="8" topRightRadiusY="8">
					<s:fill>
						<!--s:LinearGradient rotation="90">
						<s:GradientEntry color="0x8CC63F" ratio="0.5" />
						<s:GradientEntry color="0x72A133" />
						</s:LinearGradient-->
