			<s:Label id="addAuthoringLabel" top="180" left="230" color="0x283D0C" fontSize="13" useHandCursor="true" buttonMode="true"/>
		</s:Group>
	</s:Group>	

	<s:HGroup id="iconGroup" bottom="0" right="310" gap="8" height="48" verticalAlign="middle" alpha="1">
		<s:Button includeIn="normal" id="normalAddTextButton" useHandCursor="true" buttonMode="true" />
		<s:Button includeIn="normal" id="normalAddPDFButton" useHandCursor="true" buttonMode="true" />
		<s:Button includeIn="normal" id="normalAddVideoButton" useHandCursor="true" buttonMode="true" />
