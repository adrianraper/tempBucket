<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx"
		xmlns:sparkTree="com.sparkTree.*">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.clarityenglish.rotterdam.builder.view.uniteditor.ContentSelectorView")]
	</fx:Metadata>
	
	<fx:Script>
		<![CDATA[
			private var titles:Array = [9, 52, 50, 39, 33, 53, 49, 10, 38, 40, 44, 45, 48, 46];
			
			private function getIconForContent(item:Object, isOpen:* = null, isBranch:* = null):Object {
				var uidString:String = item.uid;
				var uidArray:Array = uidString.split(".");
				var uid:String = item.uid;
				
				if (searchTitle(uidArray[0]) || uidArray.length == 1) {
					// The following code is so that a title like BW or SSS which only has one course
					// will not show the title and course level in the content selector window
					//alice: single folder structure's maximum uid change to 3
					if ((uidArray.length == 2 && getQualifiedClassName(item).indexOf("Unit") != -1)) {
						var title:Object = item.parent;
						if (title.courseID) {
							uid = title.id + "." + title.courseID + "." + item.id;
						}
					} else if(uidArray.length == 3 && getQualifiedClassName(item).indexOf("Exercise") != -1) {
						title = item.parent.parent;
						if (title.courseID) {
							uid = title.id + "." + title.courseID + "." + item.parent.id + "." + item.id;
						}
					}
					//original code
					return hostComponent.getThumbnailForUid(uid);
				} else {
					return null;
				}								
			}
			
			private function tree_labelFunc(item:Object):String {
				var uidString:String = item.uid;
				var uidArray:Array = uidString.split(".");
				if (searchTitle(uidArray[0])) {
					if (getQualifiedClassName(item).indexOf("Exercise") != -1) {
						return item.name;
					} else {
						return null;
					}
				} else {
					if (uidArray.length > 1) {
						return item.name;
					} else {
						return null;
					}
				}												
			}
			
			//temp function for those titles that don't have thumbnails yet
			private function searchTitle(title:Number):Boolean {
				for (var i:Number = 0; i <titles.length; i++) {
					if (title == titles[i]) {
						return true;
					} 
				}
				
				return false;
			}
			
		]]>
	</fx:Script>
	
	<!-- states -->
	<s:states>
		<s:State name="disabled" />
		<s:State name="normal" />
	</s:states>
	
	<sparkTree:Tree id="tree" dataProvider="{hostComponent.titleCollection}" labelFunction="tree_labelFunc" iconFunction="getIconForContent" labelField="name" width="380" height="500" bottom="50" borderVisible="false" rollOverColor="#FFF6CC" selectionColor="#FFF6CC"/>
	
	<s:Group left="10"  bottom="10" right="10">
		<s:Button id="selectButton" enabled="{tree.selectedItem != null}" />
		<s:Button id="cancelButton" right="0"/>
	</s:Group>
	
</s:Skin>
