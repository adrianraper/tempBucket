<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx"
		xmlns:sparkTree="com.sparkTree.*">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.clarityenglish.rotterdam.builder.view.uniteditor.ContentSelectorView")]
	</fx:Metadata>
	
	<fx:Script>
		<![CDATA[			
			private function getIconForContent(item:Object, isOpen:* = null, isBranch:* = null):Object {
				return hostComponent.getThumbnailForUid(item.uid);
			}
			
			private function tree_labelFunc(item:Object):String {
				if (getQualifiedClassName(item).indexOf("Exercise") != -1) {
					return item.name;
				} else {
					return null;
				}
				
			}
			
		]]>
	</fx:Script>
	
	<!-- states -->
	<s:states>
		<s:State name="disabled" />
		<s:State name="normal" />
	</s:states>
	
	<sparkTree:Tree id="tree" dataProvider="{hostComponent.titleCollection}" labelFunction="tree_labelFunc" iconFunction="getIconForContent" labelField="name" width="380" height="500" bottom="50" borderVisible="false" rollOverColor="#FFF6CC" selectionColor="#FFF6CC"/>
	
	<s:Group left="10"  bottom="10" right="10">
		<s:Button id="selectButton" label="Select content" enabled="{tree.selectedItem != null}" />
		<s:Button id="cancelButton" label="Cancel" right="0"/>
	</s:Group>
	
</s:Skin>
