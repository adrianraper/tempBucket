<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx"
		minWidth="800">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.clarityenglish.rotterdam.builder.view.uniteditor.AuthoringView")]
	</fx:Metadata>
	
	<fx:Script>
		<![CDATA[
			import mx.collections.ArrayCollection;
		]]>
	</fx:Script>
	
	<!-- states -->
	<s:states>
		<s:State name="disabled" />
		<s:State name="normal" />
		
		<s:State name="MultipleChoiceQuestion_questions" stateGroups="MultipleChoiceQuestion,questions" />
	</s:states>
	
	<s:VGroup width="100%">
		<s:HGroup width="100%">
			<s:List id="questionList" dataProvider="{hostComponent.questions}" height="100%" includeIn="questions">
				<s:layout>
					<s:VerticalLayout requestedMinRowCount="1" horizontalAlign="justify" gap="0"/>
				</s:layout>
				<s:itemRenderer>
					<fx:Component>
						<!--gh#872 remove mouseOver effect in preview mode-->
						<s:ItemRenderer width="100%" mouseOver="deleteQuestionButton.visible = true" mouseOut="deleteQuestionButton.visible = false">
							<fx:Script>
								<![CDATA[
									import com.clarityenglish.rotterdam.view.course.events.UnitDeleteEvent;
								]]>
							</fx:Script>
							
							<s:Label text="{data.@caption}" fontSize="14" color="0x000000" width="100%" maxDisplayedLines="3" paddingLeft="8" paddingRight="8" paddingTop="6"  paddingBottom="4" />
							<s:Group right="2" verticalCenter="0">
								<s:Button id="deleteQuestionButton"
										  skinClass="skins.rotterdam.ui.DeleteButtonSkin"
										  visible="false"
										  useHandCursor="true" buttonMode="true" scaleX="0.8" scaleY="0.8"/> <!-- click="dispatchEvent(new UnitDeleteEvent(UnitDeleteEvent.UNIT_DELETE, data as XML, true))" -->
							</s:Group>
							
							<s:SWFLoader source="@Embed(source='skins/rotterdam/builder/assets/unit/dotted-line.png')" bottom="0" left="8" />
						</s:ItemRenderer>
					</fx:Component>
				</s:itemRenderer>
			</s:List>
			
			<s:VGroup width="100%">
				<s:Label text="Question" />
				<s:TextArea id="questionTextArea" width="100%" />
				
				<!-- TODO: Checkbox with editable area.  List and item renderers? -->
				<s:Label text="Answers" />
				<s:DataGroup id="answersDataGroup" width="100%" dataProvider="{new ArrayCollection([1])}">
					<s:itemRenderer>
						<fx:Component>
							<s:HGroup width="100%">
								<s:CheckBox />
								<s:TextInput width="100%" />
								<s:Button skinClass="skins.rotterdam.ui.DeleteButtonSkin" />
							</s:HGroup>
						</fx:Component>
					</s:itemRenderer>
				</s:DataGroup>
				<s:Button label="Add answer" />
				
				<s:Label text="Feedback" />
				<s:TextArea id="feedbackTextArea" width="100%" />
			</s:VGroup>
		</s:HGroup>
		
		<s:HGroup>
			<s:Button id="okButton" />
			<s:Button id="cancelButton" />
		</s:HGroup>
	</s:VGroup>
	
</s:Skin>
