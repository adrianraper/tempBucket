<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx"
		xmlns:layouts="com.clarityenglish.rotterdam.view.unit.layouts.*"
		xmlns:ui="com.clarityenglish.rotterdam.view.unit.ui.*"
		xmlns:widgets="skins.rotterdam.unit.widgets.*">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.clarityenglish.rotterdam.builder.view.uniteditor.UnitEditorView")]
	</fx:Metadata>
	
	<!-- states -->
	<s:states>
		<s:State name="disabled" />
		<s:State name="normal" />
	</s:states>
		
	<ui:WidgetList id="widgetList" dataProvider="{hostComponent.widgetCollection}" left="0" right="0" top="0" bottom="0" borderColor="0xf2f2f2">
		<ui:layout>
			<layouts:FreeUnitLayout columns="3" horizontalGap="18" useVirtualLayout="false" />
		</ui:layout>
	</ui:WidgetList>
	<s:SWFLoader source="@Embed(source='/skins/rotterdam/builder/assets/unit/instruction.png')" top="0" left="0" bottom="0" visible="{widgetList.dataProvider.length == 0}"/>
	
	<widgets:WidgetMenu id="widgetMenu" />
	
</s:Skin>
