<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx">
	
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.clarityenglish.rotterdam.view.courseselector.CourseSelectorView")]
	</fx:Metadata>
	<fx:Declarations>
		<s:RadioButtonGroup id="sortRadioButtonGroup" />
		<s:Animate id="showFiltersAnimation" targets="{[filtersPanel]}" duration="200">
			<s:SimpleMotionPath property="width" valueFrom="0" valueTo="180" />
		</s:Animate>
		<s:Animate id="hideFiltersAnimation" targets="{[filtersPanel]}" duration="200">
			<s:SimpleMotionPath property="width" valueFrom="180" valueTo="0" />
		</s:Animate>
		<!-- 
		<s:Animate id="cloakFiltersAnimation" targets="{[filtering, sorting, sortDescendingToggleButton]}" duration="200">
			<s:SimpleMotionPath property="alpha" valueFrom="1" valueTo="0" />
		</s:Animate>
		<s:Animate id="uncloakFiltersAnimation" targets="{[filtering, sorting, sortDescendingToggleButton]}" duration="0">
			<s:SimpleMotionPath property="alpha" valueFrom="0" valueTo="1" />
		</s:Animate>
		-->
	</fx:Declarations>
	
	<!-- states -->
	<s:states>
		<s:State name="disabled" />
		<s:State name="normal" />
	</s:states>
	
	<s:BusyIndicator id="busyIndicator" visible="true" verticalCenter="0" horizontalCenter="0" />
	
	<s:HGroup width="100%" left="50" right="50" top="30" bottom="50" gap="50">
		<s:VGroup width="100%" gap="10">
			<s:Group width="100%">
				<s:Label id="courseListTitleLabel" fontSize="16" fontWeight="bold" top="14" left="4"/>
				<s:Button id="createCourseButton" right="0" width="150" fontWeight="bold" useHandCursor="true" buttonMode="true"/>
			</s:Group>			
			<s:List width="100%" id="courseList" borderVisible="false" labelField="@caption" itemRenderer="skins.rotterdam.builder.courseselector.CourseListItemRenderer" >
				<s:layout>
					<s:VerticalLayout gap="4" horizontalAlign="justify"/>
				</s:layout>
			</s:List>
		</s:VGroup>
		
		<s:Group id="filtersPanel" width="180">
			<s:Group>
				<s:VGroup paddingTop="0" visible="true" gap="0" width="180" >
					<s:Form id="filtering" width="180">
						<s:FormHeading id="filterHeadingFormHeading" width="180" />
						<s:FormItem>
							<s:TextInput id="filterTextInput" height="25" width="164"/>
						</s:FormItem>
						<s:FormItem>
							<s:CheckBox id="filterOwner" />
							<s:CheckBox id="filterCollaborator" />
							<s:CheckBox id="filterPublisher" />
						</s:FormItem>
					</s:Form>
					<s:Form id="sorting" width="180" >
						<s:FormHeading id="sortHeadingFormHeading" width="180" />
						<s:FormItem>
							<s:RadioButton group="{sortRadioButtonGroup}" id="sortCreateDate" />
							<s:RadioButton group="{sortRadioButtonGroup}" id="sortChangeDate" />
							<s:RadioButton group="{sortRadioButtonGroup}" id="sortSize" />
							<s:RadioButton group="{sortRadioButtonGroup}" id="sortPopularity" />
							<s:RadioButton group="{sortRadioButtonGroup}" id="sortName" />
						</s:FormItem>
					</s:Form>
				</s:VGroup>
				<s:ToggleButton id="sortDescendingToggleButton" top="194" right="5" useHandCursor="true" buttonMode="true" />
			</s:Group>
			<s:ToggleButton id="showFiltersToggleButton" top="-5" left="-13" height="40" useHandCursor="true" buttonMode="true"/>
		</s:Group>
	</s:HGroup>
</s:Skin>
