<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx">
	
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.clarityenglish.rotterdam.view.courseselector.CourseSelectorView")]
	</fx:Metadata>
	<fx:Declarations>
		<s:RadioButtonGroup id="sortRadioButtonGroup" />
		<s:Animate id="showFiltersAnimation" targets="{[filtersPanel]}" duration="200">
			<s:SimpleMotionPath property="width" valueFrom="0" valueTo="180" />
		</s:Animate>
		<s:Animate id="hideFiltersAnimation" targets="{[filtersPanel]}" duration="200">
			<s:SimpleMotionPath property="width" valueFrom="180" valueTo="0" />
		</s:Animate>
	</fx:Declarations>
	
	<!-- states -->
	<s:states>
		<s:State name="disabled" />
		<s:State name="normal" />
	</s:states>
	
	<s:BusyIndicator id="busyIndicator" visible="true" verticalCenter="0" horizontalCenter="0" />
	
	<s:HGroup width="100%" left="50" right="50" top="30" bottom="50" gap="70">
		<s:VGroup width="85%" gap="10">
			<s:Group width="100%">
				<s:Label id="courseListTitleLabel" top="0" fontSize="16" fontWeight="bold" left="26"/>
				<s:Button id="createCourseButton" right="0" width="150" fontWeight="bold" useHandCursor="true" buttonMode="true"/>
			</s:Group>			
			<s:List width="100%" id="courseList" borderVisible="false" labelField="@caption" itemRenderer="skins.rotterdam.builder.courseselector.CourseListItemRenderer" >
				<s:layout>
					<s:VerticalLayout gap="5" horizontalAlign="justify"/>
				</s:layout>
			</s:List>
		</s:VGroup>
		
		<s:Group id="filtersPanel" width="0">
			<s:VGroup id="filtersFromPanel" paddingTop="0" visible="false" gap="0">
				<s:Form id="filtering" width="240">
					<s:FormHeading label="Filter courses by:" width="240" />
					<s:FormItem>
						<s:TextInput id="filterTextInput" prompt="Name or tags" height="25" width="170"/>
					</s:FormItem>
					<s:FormItem>
						<s:CheckBox id="filterOwner" label="Your courses"/>
						<s:CheckBox id="filterCollaborator" label="Collaborating"/>
						<s:CheckBox id="filterPublisher" label="Publisher"/>
					</s:FormItem>
				</s:Form>
				<s:Form id="sorting" width="240" height="215">
					<s:FormHeading label="Sort courses by:" width="240" />
					<s:FormItem>
						<s:RadioButton group="{sortRadioButtonGroup}" id="sortCreateDate" label="create date"/>
						<s:RadioButton group="{sortRadioButtonGroup}" id="sortChangeDate" label="last changed date"/>
						<s:RadioButton group="{sortRadioButtonGroup}" id="sortSize" label="size"/>
						<s:RadioButton group="{sortRadioButtonGroup}" id="sortPopularity" label="popularity"/>
						<s:RadioButton group="{sortRadioButtonGroup}" id="sortName" label="name"/>
					</s:FormItem>
					<s:FormItem>
						<s:CheckBox id="sortDescendingCheckBox" label="Descending" useHandCursor="true" buttonMode="true" />
					</s:FormItem>
				</s:Form>
			</s:VGroup>
			<s:ToggleButton id="showFiltersToggleButton" top="-5" left="-13" width="140" height="40" useHandCursor="true" buttonMode="true"/>
		</s:Group>
	</s:HGroup>
</s:Skin>
