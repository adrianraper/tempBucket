<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009"
		xmlns:s="library://ns.adobe.com/flex/spark"
		xmlns:mx="library://ns.adobe.com/flex/mx"
		creationComplete="onCreationComplete(event)">
	
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.clarityenglish.rotterdam.builder.view.courseselector.CourseCreateView")]
	</fx:Metadata>
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			
			import org.davekeen.util.StringUtils;
			
			protected function onCreationComplete(event:FlexEvent):void {
				focusManager.setFocus(captionTextInput);
			}
			
		]]>
	</fx:Script>
	
	<!-- states -->
	<s:states>
		<s:State name="disabled" />
		<s:State name="normal" />
	</s:states>
	
	<s:layout>
		<s:VerticalLayout/>
	</s:layout>
	
	<s:Form width="100%" height="100%" defaultButton="{createButton}">
		<s:FormHeading left="16" label="Create a new course" />
		<s:FormItem label="Course name:" fontSize="13" required="true">
			<s:TextInput id="captionTextInput" widthInChars="15" />
		</s:FormItem>
		
		<s:HGroup paddingTop="15" paddingBottom="5" paddingLeft="5" paddingRight="5" gap="150">
			<s:Button id="createButton" label="Create" width="80" fontSize="12" enabled="{StringUtils.trim(captionTextInput.text).length > 0}" />
			<s:Button id="cancelButton" label="Cancel" width="80" fontSize="12" />
		</s:HGroup>
	</s:Form>
	
</s:Skin>
