<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx"
		xmlns:calendar="com.clarityenglish.controls.calendar.*"
		xmlns:sparkTree="com.sparkTree.*"
		xmlns:widgets="skins.assets.widgets.*"
		xmlns:publishSettings="com.clarityenglish.rotterdam.view.publishSettings.*">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.clarityenglish.rotterdam.view.publishSettings.PublishSettingsView")]
	</fx:Metadata>
	
	<fx:Declarations>
		<s:RadioButtonGroup id="pastUnitsRadioButtonGroup" />
		<s:RadioButtonGroup id="unitIntervalRadioButtonGroup" />
		<s:DropShadowFilter id="dropShadowFilter" angle="-90" distance="1" color="0x4D4D4D" />
		<s:DropShadowFilter id="dropShadowFilter2" blurX="6" blurY="6" alpha="0.5" distance="0" angle="180" knockout="false" />
		<s:GlowFilter id="glowFilter" alpha="0.60" blurX="8" blurY="8" color="#000000" knockout="true" quality="3" />
	</fx:Declarations>
	
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			[Embed(source="skins/rotterdam/builder/assets/settings/group_icon.swf", symbol="GroupIcon")]
			private var groupIcon:Class;
			
			private function getTreeIcon(item:Object, isOpen:Boolean, isBranch:Boolean):Class {
				return groupIcon;
			}
		]]>
	</fx:Script>
	
	<!-- states -->
	<s:states>
		<s:State name="disabled" />
		<s:State name="normal" />
		
		<s:State name="calendar" />
		<s:State name="email" />
		<s:State name="about" />
	</s:states>
	
	<widgets:CogIcon2 top="25" left="20" />
	<s:Label id="courseSettingsLabel" top="25" left="45" fontSize="16" fontWeight="bold" />

	<!-- The tab bar -->
	<s:TabBar id="tabBar" top="70" left="30"/>
	<s:Group id="settingBackground" width="100%" height="83%" top="110" left="10" right="10">
		<s:Rect filters="{dropShadowFilter2}" width="100%" height="100%" >
			<s:fill>
				<s:SolidColor color="0xFFFFFF"/>
			</s:fill>
		</s:Rect>
	</s:Group>	
	<!--s:SWFLoader source="@Embed(source='/skins/rotterdam/builder/assets/settings/course-setting-bg.png')" top="105" left="10" includeIn="calendar,email, about" height="768"/-->
	<!--s:SWFLoader source="@Embed(source='/skins/rotterdam/builder/assets/settings/about-bg.png')" top="105" left="10" includeIn="about"/-->
	
	<!-- Left hand side -->
	<s:Group left="40" height="82%" top="115">
		<s:Scroller id="publishSettingScroller"  height="100%">
			<s:VGroup id="leftHandSide" paddingRight="5">	
				<s:Spacer height="{settingBackground.height * 0.05}" />
				<!-- Group selector -->
				<s:VGroup includeIn="calendar,email">
					<s:Label id="selectGroupLabel"  fontWeight="bold" />
					<sparkTree:Tree id="groupTree"
									dataProvider="{hostComponent.groupTreesCollection}"
									width="300"
									labelField="name"
									iconFunction="getTreeIcon" height="200" />
					
					<s:Spacer height="{settingBackground.height * 0.03}" />
				</s:VGroup>
				
				<!-- Publication dates settings -->
				<s:VGroup includeIn="calendar">
					
					<s:Label id="startDateLabel" fontWeight="bold" />
					<mx:DateField id="startDateField" enabled="{groupTree.selectedItem != null}" formatString="DD/MM/YYYY" />
					
					<s:Spacer height="{settingBackground.height * 0.03}" />
					
					<s:Label id="endDateLabel" fontWeight="bold" />
					<s:Label id="endDateInstruLabel" />
					<s:HGroup>
						<mx:DateField id="endDateField" enabled="{groupTree.selectedItem != null}" editable="true" formatString="DD/MM/YYYY"/>
						<!--s:Button id="clearEndDateButton" /-->
					</s:HGroup>		
					
					<s:Spacer height="{settingBackground.height * 0.03}" />
					
					<s:Label id="unitIntervalLabel" fontWeight="bold" />
					<s:VGroup id="unitIntervalGroup" showErrorSkin="true" showErrorTip="true" errorColor="red">
						<s:RadioButton id="allUnitAvaRadioButton" value="true" group="{unitIntervalRadioButtonGroup}" enabled="{groupTree.selectedItem != null}" />
						<s:HGroup>
							<s:RadioButton id="unitSuccessiveRadioButton" value="false" group="{unitIntervalRadioButtonGroup}" enabled="{groupTree.selectedItem != null}" />
							<s:TextInput id="unitIntervalTextInput" width="40" enabled="{groupTree.selectedItem != null}"/>
						</s:HGroup>				
					</s:VGroup>			
					
					<s:Spacer height="{settingBackground.height * 0.03}" />
					
					<s:Label id="seePastUnitLabel" fontWeight="bold" />
					<s:HGroup id="seePastUnitsGroup" showErrorSkin="true" showErrorTip="true" errorColor="red">
						<s:RadioButton id="yesRadioButton" value="true" group="{pastUnitsRadioButtonGroup}" enabled="{groupTree.selectedItem != null}" />
						<s:RadioButton id="noRadioButton" value="false" group="{pastUnitsRadioButtonGroup}" enabled="{groupTree.selectedItem != null}" />
					</s:HGroup>
					
					<!--s:Label text="2. How many days between units?" fontWeight="bold" />
					<s:TextInput id="unitIntervalTextInput" width="40" enabled="{groupTree.selectedItem != null}" />
					
					<s:Spacer height="12" />
					
					<s:Label text="3. See past units?" fontWeight="bold" />
					<s:HGroup id="seePastUnitsGroup" showErrorSkin="true" showErrorTip="true" errorColor="red">
					<s:RadioButton label="Yes" value="true" group="{pastUnitsRadioButtonGroup}" enabled="{groupTree.selectedItem != null}" />
					<s:RadioButton label="No" value="false" group="{pastUnitsRadioButtonGroup}" enabled="{groupTree.selectedItem != null}" />
					</s:HGroup>
					
					<s:Spacer height="12" />
					
					<s:Label text="4. Start date for this course" fontWeight="bold" />
					<mx:DateField id="startDateField" enabled="{groupTree.selectedItem != null}" />
					
					<s:Spacer height="12" />
					
					<s:Label text="5. End date for this course" fontWeight="bold" />
					<mx:DateField id="endDateField" enabled="{groupTree.selectedItem != null}" /-->
				</s:VGroup>
				
				
				
				<!-- Notification settings -->
				<s:VGroup includeIn="email">
					<s:Label id="welcomeEmailLabel" fontWeight="bold" />
					<s:Button id="welcomeEmailButton" enabled="{groupTree.selectedItem != null}"/>
					<s:Spacer height="{settingBackground.height * 0.03}" />
					<s:Label id="forStudentLabel" />
					<s:CheckBox id="sendAlertEmailCheckbox" />
				</s:VGroup>
				
				<!-- About this course -->
				<s:VGroup includeIn="about" paddingTop="22" left="0" right="0">
					<s:Label id="courseNameLabel" fontWeight="bold" />
					<s:TextInput id="aboutCourseNameTextInput" width="300" />
					
					<s:Spacer height="{settingBackground.height * 0.025}" />
					
					<s:Label id="courseDescriptionLabel" fontWeight="bold" />
					<s:TextArea id="aboutCourseDescriptionTextArea" width="300" heightInLines="4" />
					
					<s:Spacer height="{settingBackground.height * 0.025}" />
					
					<s:Label id="authorLabel" fontWeight="bold" />
					<s:TextInput id="aboutAuthorTextInput" width="300" />
					
					<s:Spacer height="{settingBackground.height * 0.025}" />
					
					<s:Label id="contactEmailLabel" fontWeight="bold" />
					<s:TextInput id="aboutEmailTextInput" width="300" />
					
					<s:Spacer height="{settingBackground.height * 0.025}" />
					
					<!--s:Label text="Contact number" fontWeight="bold" />
					<s:TextInput id="aboutContactNumberTextInput" width="300" /-->
					
					<s:Spacer height="{settingBackground.height * 0.025}" />
					
					<s:Label id="directURLLabel" fontWeight="bold" />
					<s:TextInput id="directStartURLLabel" editable="false" width="700" borderVisible="false"/>
					
				</s:VGroup>
			</s:VGroup>
		</s:Scroller>		
	</s:Group>
		
	
	
	<!-- Right hand side -->
	<s:VGroup verticalCenter="0" horizontalCenter="180">
		<!-- Calendar -->
		<s:VGroup includeIn="calendar">
			<calendar:Calendar id="calendar" enabled="{groupTree.selectedItem != null}" />
		</s:VGroup>
		
		<!-- Email -->
		<s:VGroup includeIn="email">
			<!-- could be a place to type in free form email addresses -->
		</s:VGroup>
		
		<!-- About -->
		<s:VGroup includeIn="about">
			<!-- Disabled for the moment -->
			<!--<s:Label text="Course logo" fontWeight="bold" />
			<s:HGroup>
			<s:TextInput />
			<s:Button label="Browse" />
			</s:HGroup>
			<s:Button label="Upload" />-->
		</s:VGroup>
	</s:VGroup>
	
	<!--s:HGroup bottom="18" left="30" verticalCenter="210" gap="20">
	<s:Button id="backButton" label="Back" />
	<s:Button id="saveButton" label="Save changes" />
	</s:HGroup-->
	
	<s:Group bottom="38" left="0" right="0">
		<s:Rect left="3" right="3" height="48" topLeftRadiusX="8" topLeftRadiusY="8" topRightRadiusX="8" topRightRadiusY="8" filters="{dropShadowFilter}" bottom="0">
			<s:fill>
				<s:SolidColor color="#363636" />
			</s:fill>
		</s:Rect>
		<s:Rect includeIn="normal" left="260" right="295" height="48" bottom="0">
			<s:fill>
				<s:LinearGradient rotation="90">
					<s:GradientEntry color="0x8CC63F" ratio="0.5" />
					<s:GradientEntry color="0x72A133" />
				</s:LinearGradient>
			</s:fill>
		</s:Rect>
		
		<s:HGroup bottom="0" right="2" gap="10" height="48" verticalAlign="middle">
			<s:Button id="saveButton" useHandCursor="true" buttonMode="true" width="160" fontWeight="bold"/>
			<s:Button id="backButton" useHandCursor="true" buttonMode="true" fontWeight="bold"/>
		</s:HGroup>
	</s:Group>

</s:Skin>
