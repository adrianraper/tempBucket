<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" xmlns:mx="library://ns.adobe.com/flex/mx">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.clarityenglish.rotterdam.builder.view.error.SavingErrorView")]
	</fx:Metadata>
	
	<s:states>
		<s:State name="disabled" />
		<s:State name="normal" />
	</s:states>
	
	<s:layout>
		<s:VerticalLayout />
	</s:layout>
	
	<s:Spacer height="0" />
	<s:HGroup width="100%" paddingLeft="20" paddingBottom="30" paddingRight="20">
		<s:SWFLoader source="@Embed(source='/skins/rotterdam/builder/assets/errormessage.swf')" />
		<s:Spacer width="10" />
		<s:VGroup>
			<s:Label id="problemLabel" width="310" fontSize="16" fontWeight="bold" paddingTop="10" />
			<s:Spacer height="1" />
			<s:Label id="message" width="310" lineHeight="20" />
			<s:Spacer height="1" />
			<s:HGroup>
				<s:Button id="closeButton" />
				<s:Spacer width="10" />
				<s:Button id="saveButton" />
			</s:HGroup>
		</s:VGroup>
	</s:HGroup>
	
</s:Skin>
