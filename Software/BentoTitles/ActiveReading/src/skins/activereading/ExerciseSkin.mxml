<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx"
		xmlns:view="com.clarityenglish.bento.view.*"
		xmlns:recorder="com.clarityenglish.bento.view.recorder.*"
		xmlns:ui="com.clarityenglish.activereading.view.exercise.ui.*"
		xmlns:exercise="skins.activereading.assets.exercise.*"
		xmlns:home="skins.activereading.assets.home.*"
		creationComplete="onCreationComplete(event)">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.clarityenglish.activereading.view.exercise.ExerciseView")]
	</fx:Metadata>
	<fx:Script>
		<![CDATA[
			import mx.collections.XMLListCollection;
			import mx.events.FlexEvent;
			
			protected function onCreationComplete(event:FlexEvent):void
			{
				// TODO Auto-generated method stub
				if (hostComponent.isPlatformiPad) {
					rollOutHGroup.right = 265;
				} else {
					rollOutHGroup.right = 294;
				}
			}
			
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<s:DropShadowFilter id="dropShadowFilter" angle="90" distance="1.5" alpha="0.6" blurX="10" blurY="10" />
	</fx:Declarations>
	
	<s:states>
		<s:State name="disabled" />
		<s:State name="normal" />
		
		<s:State name="exercise" />
		<s:State name="other" />
	</s:states>
	
	<s:layout>
		<s:BasicLayout />
	</s:layout>
	
	<!--Exercise Background-->
	<s:Group width="100%" height="100%">
		<s:Rect left="0" right="0" height="100%">
			<s:fill>
				<s:SolidColor color="#FFFFFF" />
			</s:fill>
		</s:Rect>
	</s:Group>
	
	<!-- Exercise -->
	<view:DynamicView id="dynamicView" left="0" right="0" top="100" bottom="20"/>
	
	<!--Left patch-->
	<!--s:Rect left="0" width="15" top="0" bottom="0" filters="{[dropShadowFilter]}">
		<s:fill>
			<s:SolidColor color="#FFFFFF" />
		</s:fill>
	</s:Rect-->
	
	<!--Right patch-->
	<!--s:Rect right="0" width="15" top="0" bottom="0" filters="{[dropShadowFilter]}">
		<s:fill>
			<s:SolidColor color="#FFFFFF" />
		</s:fill>
	</s:Rect-->
	
	<!--Header lines-->
	<s:HGroup width="100%" top="10" gap="0">
		<exercise:exTopBarLTLines />
		<exercise:exTopBarMLines width="81%" />
		<exercise:exTopBarRTLines />
	</s:HGroup>
	
	<!-- Top Left buttons -->
	<s:HGroup top="45" left="230" gap="3">
		<s:Button id="backButton" color="0x333333" fontSize="15" fontFamily="HelveticaMd" buttonMode="true" useHandCursor="true" enabled="{!hostComponent.isFirstExercise}" visible="{!hostComponent.isDirectStartEx}"/>
		<s:Button id="forwardButton" color="0x333333" fontSize="15" fontFamily="HelveticaMd" buttonMode="true" useHandCursor="true" visible="{!hostComponent.isDirectStartEx}"/>
	</s:HGroup>	
	
	<!-- Top Right buttons -->
	<s:HGroup right="75" top="45" gap="3"> 
		<s:Button id="markingButton" visible="{hostComponent.hasQuestions &amp;&amp; !hostComponent.isMarked}" color="0x333333" fontSize="15" fontFamily="HelveticaMd" buttonMode="true" useHandCursor="true" />
		<s:Button id="feedbackButton" visible="false" includeInLayout="false" color="0x333333" fontSize="15" fontFamily="HelveticaMd" buttonMode="true" useHandCursor="true" />
		<s:Button id="startAgainButton" visible="{hostComponent.hasQuestions &amp;&amp; !hostComponent.isMarked}" color="0x333333" fontSize="15" fontFamily="HelveticaMd" buttonMode="true" useHandCursor="true"/>
		<s:Button id="recorderButton" color="0x333333" fontSize="15" fontFamily="HelveticaMd" buttonMode="true" useHandCursor="true"/>
	</s:HGroup>
	
	<!--Roll out text-->
	<s:HGroup id="rollOutHGroup" top="190" gap="-6" visible="{hostComponent.hasVideoScript}">
		<s:VGroup paddingTop="10" width="50">
			<s:Button id="readButton" buttonMode="true" useHandCursor="true" />
		</s:VGroup>
		<s:Group id="rollOutTextGroup" width="0" height="450">
			<s:Rect width="100%" height="100%" filters="{[dropShadowFilter]}" bottomLeftRadiusX="8" bottomLeftRadiusY="8" bottomRightRadiusX="8" bottomRightRadiusY="8" topLeftRadiusX="8" topLeftRadiusY="8">
				<s:fill>
					<s:SolidColor color="#FFFFFF" />
				</s:fill>
			</s:Rect>
			<s:Rect width="100%" height="28" top="10">
				<s:fill>
					<s:SolidColor color="#025555" />
				</s:fill>
			</s:Rect>
			<s:Scroller width="85%" height="85%" verticalCenter="20" horizontalCenter="0">
				<s:RichEditableText id="rollOutRichEditableText" editable="false" selectable="false" verticalAlign="middle"/>
			</s:Scroller>
		</s:Group>
	</s:HGroup>
	
	<!--Header-->
	<s:HGroup width="100%" gap="0">
		<exercise:exTopBarLT />
		<exercise:exTopBarM width="80%" />
		<exercise:exTopBarRT />
	</s:HGroup>
	
	<!--Top raw-->
	<s:Group top="0" horizontalCenter="0" width="370" height="40">
		<ui:WindowShade id="windowShade" x="34" y="40" width="296" height="304">
			<s:Rect width="296" height="543" top="0" bottom="0" bottomLeftRadiusX="8" bottomLeftRadiusY="8" bottomRightRadiusX="8" bottomRightRadiusY="8" horizontalCenter="0">
				<s:stroke>
					<s:SolidColorStroke color="#497A7A" weight="6" />
				</s:stroke>
				<s:fill>
					<s:SolidColor color="#062E2E" />
				</s:fill>
			</s:Rect>
			<s:List id="unitList" dataProvider="{new XMLListCollection(hostComponent.selectedExerciseNode.parent().parent().unit)}" width="318" bottom="10" top="18" left="20" verticalScrollPolicy="on" scaleX="0.9" scaleY="0.9" borderVisible="false" contentBackgroundAlpha="0">
				<s:layout>
					<s:VerticalLayout gap="10" />
				</s:layout>
			</s:List>
		</ui:WindowShade>
		<s:Group width="100%" height="100%">
			<exercise:dropDownMenu />
			<s:Label text="{hostComponent.selectedExerciseNode.@caption}" horizontalCenter="0" verticalCenter="0" color="#FFFFFF" fontSize="16" fontFamily="HelveticaMd" fontWeight="bold" />
		</s:Group>
	</s:Group>
	
	<!--Top control bar button-->
	<s:Button id="backToMenuButton" top="0" right="100" fontSize="15" fontFamily="HelveticaMd" buttonMode="true" useHandCursor="true" includeIn="exercise" />

	<!--Header course title-->
	<s:HGroup left="15" top="15" gap="8" verticalAlign="middle">
		<s:Group>
			<home:menuicon1 visible="{hostComponent.selectedExerciseNode.parent().parent().childIndex() == 0}" scaleX="0.7" scaleY="0.7" />
			<home:menuicon2 visible="{hostComponent.selectedExerciseNode.parent().parent().childIndex() == 1}" scaleX="0.7" scaleY="0.7" />
			<home:menuicon3 visible="{hostComponent.selectedExerciseNode.parent().parent().childIndex() == 2}" scaleX="0.7" scaleY="0.7" />
			<home:menuicon4 visible="{hostComponent.selectedExerciseNode.parent().parent().childIndex() == 3}" scaleX="0.7" scaleY="0.7" />
			<home:menuicon5 visible="{hostComponent.selectedExerciseNode.parent().parent().childIndex() == 4}" scaleX="0.7" scaleY="0.7" />
			<home:menuicon6 visible="{hostComponent.selectedExerciseNode.parent().parent().childIndex() == 5}" scaleX="0.7" scaleY="0.7" />
		</s:Group>
		<s:Label text="{hostComponent.selectedExerciseNode.parent().parent().@caption}" paddingTop="3" color="#FFFFFF" fontSize="17" fontFamily="HelveticaMd" fontWeight="bold" />
	</s:HGroup>
	
	<!--Footer-->
	<s:Rect width="100%" height="10" bottom="0">
		<s:fill>
			<s:SolidColor color="#003B3B" />
		</s:fill>
	</s:Rect>
</s:Skin>