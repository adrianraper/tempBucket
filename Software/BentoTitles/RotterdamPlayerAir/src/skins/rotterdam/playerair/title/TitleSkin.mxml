<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009"
		xmlns:s="library://ns.adobe.com/flex/spark"
		xmlns:mx="library://ns.adobe.com/flex/mx"
		xmlns:components="com.clarityenglish.components.*">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.clarityenglish.rotterdam.view.title.TitleView")]
	</fx:Metadata>
	
	<!-- states -->
	<s:states>
		<s:State name="disabled" />
		<s:State name="normal" />
		
		<s:State name="course_selector" />
		<s:State name="course" />
		<s:State name="progress" />
	</s:states>
	
	<components:CancelableTabbedViewNavigator id="sectionNavigator" left="0" right="0" top="0" bottom="0">
		<s:ViewNavigator id="myCoursesViewNavigator" title="Clarity Course Player" firstView="com.clarityenglish.rotterdam.view.courseselector.CourseSelectorView" left="0" right="0" height="100%">
			<s:actionContent>
				<s:Button id="logoutButton" />
			</s:actionContent>
		</s:ViewNavigator>
		<s:ViewNavigator id="progressViewNavigator" title="Clarity Course Player" firstView="com.clarityenglish.bento.view.progress.ProgressView" left="0" right="0" height="100%" excludeFrom="course_selector" />
	</components:CancelableTabbedViewNavigator>
	
</s:Skin>
