	</s:Rect-->
	<s:Rect width="20" bottom="0" top="155" right="40" includeIn="exercise">
		<s:fill>
			<s:LinearGradient rotation="90">
				<s:GradientEntry color="0xFFFFFF"/>
				<s:GradientEntry color="0xEA2133"/>
			</s:LinearGradient>
		</s:fill>
	</s:Rect>
