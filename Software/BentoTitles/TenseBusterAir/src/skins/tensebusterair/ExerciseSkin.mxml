<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx"
		xmlns:view="com.clarityenglish.bento.view.*"
		xmlns:recorder="com.clarityenglish.bento.view.recorder.*" xmlns:exercise="skins.tensebuster.assets.exercise.*">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.clarityenglish.bento.view.exercise.ExerciseView")]
	</fx:Metadata>
	
	<fx:Declarations>
		<s:DropShadowFilter id="dropShadowFilter" angle="90" distance="1.5" alpha="0.6" blurX="7" blurY="7" />
		<s:DropShadowFilter id="lineShadowFilter" angle="70" distance="1.5" alpha="0.8"/>
	</fx:Declarations>
	
	<s:states>
		<s:State name="disabled" />
		<s:State name="normal" />
		
		<s:State name="exercise" />
		<s:State name="other" />
	</s:states>
	
	<s:layout>
		<s:BasicLayout />
	</s:layout>
	
	<s:SWFLoader source="@Embed(source='skins/tensebusterair/assets/exercise/exerciseBg.png')" horizontalCenter="0" top="10" filters="{[dropShadowFilter]}" />
	
	<!-- Exercise -->
	<view:DynamicView id="dynamicView" left="60" right="60" top="98" bottom="24"/>

	<!--Backgroud left and right-->
	<s:SWFLoader source="@Embed(source='skins/tensebusterair/assets/exercise/leftSideBar.png')" top="99" right="35" />
	
	<!-- Top Left buttons -->
	<s:HGroup left="60" top="59" includeIn="exercise" gap="0">
		<s:Button id="backToMenuButton" color="0xFFFFFF" fontWeight="bold" fontSize="12" buttonMode="true" useHandCursor="true" />
		<s:Spacer width="1" />
		<s:Button id="backButton" color="0xFFFFFF" fontWeight="bold" fontSize="12" buttonMode="true" useHandCursor="true" enabled="{!hostComponent.isFirstExercise}"/>
		<s:Button id="forwardButton" color="0xFFFFFF" fontWeight="bold" fontSize="12" buttonMode="true" useHandCursor="true"/>
		<s:Button id="feedbackButton" visible="false" color="0xFFFFFF" fontWeight="bold" fontSize="12" buttonMode="true" useHandCursor="true" />
	</s:HGroup>	
	
	<!-- Top Right buttons -->
	<s:HGroup right="60" top="59" includeIn="exercise" gap="0">
		<s:Button id="markingButton" visible="{hostComponent.hasQuestions &amp;&amp; !hostComponent.isMarked}" color="0xFFFFFF" fontWeight="bold" fontSize="12" buttonMode="true" useHandCursor="true" />
		<s:Button id="startAgainButton" visible="{hostComponent.hasQuestions &amp;&amp; !hostComponent.isMarked}" color="0xFFFFFF" fontWeight="bold" fontSize="12" buttonMode="true" useHandCursor="true"/>
		<s:Button id="recorderButton" color="0xFFFFFF" fontWeight="bold" fontSize="12" buttonMode="true" useHandCursor="true"/>
		<s:Button id="ruleButton" color="0xFFFFFF" fontWeight="bold" fontSize="12" buttonMode="true" useHandCursor="true" visible="{hostComponent.ruleLink != null}" />
		<s:Button id="printButton" visible="{hostComponent.hasPrintStylesheet}" color="0xFFFFFF" fontWeight="bold" buttonMode="true" fontSize="12" useHandCursor="true"/>
	</s:HGroup>	
	
	<!--Red line-->
	<s:Rect width="954" height="2" top="59" horizontalCenter="1" filters="{[lineShadowFilter]}">
		<s:fill>
			<s:SolidColor color="0xEC1C32"/>
		</s:fill>
	</s:Rect>
	
	<!-- Footer -->
	<s:Group horizontalCenter="0" height="37" bottom="0">
		<!--s:Rect left="0" right="0" top="0" bottom="0">
		<s:fill>
		<s:SolidColor color="#333333" />
		</s:fill>
		</s:Rect-->
		<s:SWFLoader source="@Embed(source='skins/tensebusterair/assets/exercise/TB-footer.png')" bottom="0" />
	</s:Group>
	
</s:Skin>