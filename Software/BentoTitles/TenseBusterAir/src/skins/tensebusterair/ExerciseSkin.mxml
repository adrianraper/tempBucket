<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx"
		xmlns:view="com.clarityenglish.bento.view.*"
		xmlns:recorder="com.clarityenglish.bento.view.recorder.*" xmlns:exercise="skins.tensebuster.assets.exercise.*">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.clarityenglish.bento.view.exercise.ExerciseView")]
	</fx:Metadata>
	
	<fx:Declarations>
		<s:DropShadowFilter id="dropShadowFilter" angle="90" distance="1.5" alpha="0.6" blurX="7" blurY="7" />
		<s:DropShadowFilter id="lineShadowFilter" angle="70" distance="1.5" alpha="0.8"/>
	</fx:Declarations>
	
	<s:states>
		<s:State name="disabled" />
		<s:State name="normal" />
		
		<s:State name="exercise" />
		<s:State name="other" />
	</s:states>
	
	<s:layout>
		<s:BasicLayout />
	</s:layout>
	
	<s:SWFLoader source="@Embed(source='skins/tensebusterair/assets/exercise/exerciseBg.png')" horizontalCenter="0" bottom="20" filters="{[dropShadowFilter]}" />
	
	<!-- Exercise -->
	<view:DynamicView id="dynamicView" left="60" right="60" top="145" bottom="24"/>
	
	<!--Backgroud left and right-->
