	<!-- Top Left buttons -->
	<s:HGroup left="60" top="89" includeIn="exercise" gap="0">
		<s:Button id="backButton" color="0xFFFFFF" fontWeight="bold" fontSize="12" buttonMode="true" useHandCursor="true"/>
		<s:Button id="forwardButton" color="0xFFFFFF" fontWeight="bold" fontSize="12" buttonMode="true" useHandCursor="true"/>
		<s:Button id="feedbackButton" visible="false" color="0xFFFFFF" fontWeight="bold" fontSize="12" buttonMode="true" useHandCursor="true" />
	</s:HGroup>	
	
	<!-- Top Right buttons -->
	<s:HGroup right="60" top="89" includeIn="exercise" gap="0">
		<s:Button id="markingButton" visible="{hostComponent.hasQuestions &amp;&amp; !hostComponent.isMarked}" color="0xFFFFFF" fontWeight="bold" fontSize="12" buttonMode="true" useHandCursor="true" />
		<s:Button id="startAgainButton" visible="{hostComponent.hasQuestions &amp;&amp; !hostComponent.isMarked}" color="0xFFFFFF" fontWeight="bold" fontSize="12" buttonMode="true" useHandCursor="true"/>
		<s:Button id="recorderButton" color="0xFFFFFF" fontWeight="bold" fontSize="12" buttonMode="true" useHandCursor="true"/>
		<s:Button id="ruleButton" color="0xFFFFFF" fontWeight="bold" fontSize="12" buttonMode="true" useHandCursor="true" visible="{hostComponent.ruleLink != null}" />
		<s:Button id="printButton" visible="{hostComponent.hasPrintStylesheet}" color="0xFFFFFF" fontWeight="bold" buttonMode="true" fontSize="12" useHandCursor="true"/>
	</s:HGroup>	
	
	<!--Red line-->
	<s:Rect width="954" height="2" top="89" horizontalCenter="1" filters="{[lineShadowFilter]}">
		<s:fill>
			<s:SolidColor color="0xEC1C32"/>
		</s:fill>
	</s:Rect>
	
	<!-- Footer -->
	<s:Group horizontalCenter="0" height="37" bottom="0">
