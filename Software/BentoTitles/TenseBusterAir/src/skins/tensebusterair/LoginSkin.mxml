<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" xmlns:login="skins.tensebuster.assets.login.*" xmlns:assets="skins.tensebusterair.assets.*">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.clarityenglish.tensebuster.view.login.LoginView")]
	</fx:Metadata>
	
	<!-- states -->
	<s:states>
		<s:State name="disabled" />
		<s:State name="normal" />
	</s:states>
	
	<fx:Declarations>
		<s:GlowFilter id="glowFilter" alpha="0.60" blurX="8" blurY="8" color="#000000" knockout="true" quality="3" />
		<s:DropShadowFilter id="dropShadowFilter" blurX="6" blurY="6" alpha="0.5" distance="0" angle="180" knockout="false"/>
		<s:DropShadowFilter id="dropShadowFilter2" blurX="6" blurY="6" alpha="0.5" distance="0" angle="180" knockout="false" inner="true"/>
	</fx:Declarations>
	
	<s:SWFLoader source="@Embed(source='skins/tensebusterair/assets/login/hexagonBg.png')" horizontalCenter="0" bottom="0"/>
	<assets:logo top="20" right="20" />
	<s:SWFLoader source="@Embed(source='skins/tensebuster/assets/login/loginBrokenPaper.png')" horizontalCenter="0" top="110" />
	<login:loginText left="30" top="130" />
	<s:SWFLoader source="@Embed(source='skins/tensebusterair/assets/login/loginBG.png')" bottom="0" horizontalCenter="0" />
	<s:SWFLoader source="@Embed(source='skins/tensebuster/assets/title/header.png')" top="2" horizontalCenter="0" />
	<s:Label id="versionLabel" text="v {hostComponent.parentApplication.versionNumber}" color="#000000" fontSize="12" right="22" top="60" />
	<!--s:SWFLoader source="@Embed(source='skins/tensebusterair/assets/stampHCT.png')" right="65" top="100" /-->
	
	<s:Group horizontalCenter="0" verticalCenter="-40">
		<s:VGroup horizontalAlign="center" gap="30">
			<s:VGroup gap="5">
				<s:Label id="loginInputTitle" color="0xFFFFFF" fontSize="21" fontWeight="bold"/>
				<s:Rect width="245" height="1">
					<s:fill>
						<s:SolidColor color="0xEC1C32" />
					</s:fill>
				</s:Rect>
				<s:Spacer height="15"/>
				<s:Label id="loginInstruction" fontSize="12" color="0xFFFFFF"/>
				<s:Spacer height="10" />
				<s:VGroup gap="15">
					<s:HGroup gap="8">
						<s:Label id="loginKey_lbl" fontSize="12" fontWeight="bold" color="0xFFFFFF" text="{hostComponent.loginKey_lbl}" paddingTop="14" />
						<s:TextInput id="loginKeyInput" width="169" height="32" filters="{dropShadowFilter2}" borderVisible="false" fontSize="12"  />
					</s:HGroup>					
					<s:HGroup gap="10">
						<s:Label id="loginPassword_lbl" fontSize="12" fontWeight="bold" color="0xFFFFFF" text="{hostComponent.loginPassword_lbl}" paddingTop="14"/>
						<s:TextInput id="passwordInput" displayAsPassword="true" width="169" height="32" fontSize="14" fontWeight="bold" filters="{dropShadowFilter2}" borderVisible="false"/>
					</s:HGroup>
				</s:VGroup>				
			</s:VGroup>
			<s:Button id="loginButton" fontSize="14" fontWeight="bold" color="0xFFFFFF" buttonMode="true" useHandCursor="true"/>	
		</s:VGroup>
	</s:Group>

	<!--s:Label text="v{hostComponent.parentApplication.versionNumber}" color="#000000" right="3" bottom="0"/-->
	<!-- Footer -->
	<s:Group  left="30" height="37" bottom="16">
		<s:HGroup top="12">
			<s:Label id="copyrightLabel" text="Â© Clarity Language Consultants Ltd, 1993-2013. All rights reserved." color="#000000" fontSize="12" paddingTop="6" />
		</s:HGroup>
	</s:Group>
</s:Skin>
