<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009"
		xmlns:s="library://ns.adobe.com/flex/spark"
        xmlns:fb="http://ns.adobe.com/flashbuilder/2009"
		xmlns:login="com.clarityenglish.tensebuster.view.login.*"
		xmlns:application="skins.air.assets.application.*"
		xmlns:title="com.clarityenglish.tensebuster.view.title.*"
		xmlns:nonetwork="com.clarityenglish.bento.view.nonetwork.*">
	
	<fx:Metadata>
		[HostComponent("com.clarityenglish.tensebuster.TenseBusterApplication")]
	</fx:Metadata>
	
    <s:states>
		<s:State name="disabled" />
		<s:State name="normal" />
		
		<s:State name="loading" />
		<s:State name="login" />
		<s:State name="title" />
		<s:State name="credits" />
		<s:State name="nonetwork" />
    </s:states>
	
	<!-- Gradient -->
	<!--application:BackgroundGradient left="0" right="0" top="0" bottom="0" cacheAsBitmap="true" /-->
	
	<!-- Body -->
	<s:Group id="bodyGroup" left="0" right="0" top="0" bottom="0">
		<!--s:BusyIndicator includeIn="loading" verticalCenter="0" horizontalCenter="0" /-->
		<s:Group verticalCenter="0" horizontalCenter="0">
			<s:SWFLoader source="@Embed(source='skins/tensebuster/assets/loading.swf')" includeIn="loading" horizontalAlign="center" />
		</s:Group>
		<login:LoginView id="loginView" width="100%" height="100%" includeIn="login" />
		<title:TitleView id="titleView" width="100%" height="100%" includeIn="title" />
		<!-- <credits:CreditsView id="creditsView" width="100%" height="100%" includeIn="credits" /> -->
		<nonetwork:NoNetworkView id="noNetworkView" verticalCenter="0" horizontalCenter="0" includeIn="nonetwork" />
	</s:Group>
	
	
</s:Skin>
