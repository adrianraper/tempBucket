<!--- The default skin class for the Spark Button component.

 @see spark.components.Button

 @langversion 3.0
 @playerversion Flash 10
 @playerversion AIR 1.5
 @productversion Flex 4
-->
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009"
        xmlns:s="library://ns.adobe.com/flex/spark"
        minWidth="21" minHeight="21"
        alpha.disabled="0.5">

    <fx:Metadata>
        <![CDATA[
        /**
         * @copy spark.skins.spark.ApplicationSkin#hostComponent
         */
        [HostComponent("com.clarityenglish.ielts.view.account.ui.StudyGuideButton")]
        ]]>
    </fx:Metadata>

    <fx:Declarations>
        <s:DropShadowFilter id="dropShadowFilter" color="#B2B2B2" blurX="3" blurY="3" alpha="0.4" distance="0" angle="90" knockout="false"/>
    </fx:Declarations>

    <fx:Script>
        <![CDATA[
            [Embed(source='/skins/ielts/assets/account/studyGuide1.png')]
            [Bindable]
            public var studyGuide1:Class;

            [Embed(source='/skins/ielts/assets/account/studyGuide2.png')]
            [Bindable]
            public var studyGuide2:Class;

            [Embed(source='/skins/ielts/assets/account/studyGuide3.png')]
            [Bindable]
            public var studyGuide3:Class;

            [Embed(source='/skins/ielts/assets/account/studyGuide4.png')]
            [Bindable]
            public var studyGuide4:Class;

            [Embed(source='/skins/ielts/assets/account/studyGuide5.png')]
            [Bindable]
            public var studyGuide5:Class;

            [Embed(source='/skins/ielts/assets/account/studyGuide6.png')]
            [Bindable]
            public var studyGuide6:Class;

            [Embed(source='/skins/ielts/assets/account/studyGuideMouseover1.png')]
            [Bindable]
            public var studyGuideMouseover1:Class;

            [Embed(source='/skins/ielts/assets/account/studyGuideMouseover2.png')]
            [Bindable]
            public var studyGuideMouseover2:Class;

            [Embed(source='/skins/ielts/assets/account/studyGuideMouseover3.png')]
            [Bindable]
            public var studyGuideMouseover3:Class;

            [Embed(source='/skins/ielts/assets/account/studyGuideMouseover4.png')]
            [Bindable]
            public var studyGuideMouseover4:Class;

            [Embed(source='/skins/ielts/assets/account/studyGuideMouseover5.png')]
            [Bindable]
            public var studyGuideMouseover5:Class;

            [Embed(source='/skins/ielts/assets/account/studyGuideMouseover6.png')]
            [Bindable]
            public var studyGuideMouseover6:Class;

            public var imageSouces:Array = [studyGuide1, studyGuide2, studyGuide3, studyGuide4, studyGuide5, studyGuide6];
            public var mouseOverDownImageSources:Array = [studyGuideMouseover1, studyGuideMouseover2, studyGuideMouseover3, studyGuideMouseover4, studyGuideMouseover5, studyGuideMouseover6];
        ]]>
    </fx:Script>

    <!-- states -->
    <s:states>
        <s:State name="up" />
        <s:State name="over" />
        <s:State name="down" />
        <s:State name="disabled" />
    </s:states>

   <s:SWFLoader scaleY="0.5" scaleX="0.5" source="{imageSouces[hostComponent.itemIndex]}" source.down="{mouseOverDownImageSources[hostComponent.itemIndex]}" source.over="{mouseOverDownImageSources[hostComponent.itemIndex]}" useHandCursor="true" mouseEnabled="true"/>

    <!-- layer 8: text -->
    <!--- @copy spark.components.supportClasses.ButtonBase#labelDisplay  -->
    <s:Label id="labelDisplay"
             textAlign="center"
             verticalAlign="middle"
             maxDisplayedLines="1"
             verticalCenter="0" horizontalCenter="0" fontWeight="normal"
             color="#4774748">
    </s:Label>

</s:Skin>
