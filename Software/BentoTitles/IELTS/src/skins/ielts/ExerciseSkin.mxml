<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx"
		xmlns:view="com.clarityenglish.bento.view.*">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.clarityenglish.ielts.view.exercise.ExerciseView")]
	</fx:Metadata>
	
	<fx:Declarations>
		
	</fx:Declarations>
	
	<s:layout>
		<s:BasicLayout />
	</s:layout>
	
	<!-- Background rectangle -->
	<s:Rect left="0" right="0" top="0" bottom="0" topRightRadiusX="10" topRightRadiusY="10" bottomRightRadiusX="10" bottomRightRadiusY="10">
		<s:fill>
			<s:SolidColor color="#FC6500" />
		</s:fill>
	</s:Rect>
	
	<!-- Background black rectangle -->
	<s:Rect left="30" right="0" top="34" bottom="20">
		<s:fill>
			<s:SolidColor color="#363636" />
		</s:fill>
	</s:Rect>
	
	<!-- Top buttons -->
	<s:VGroup right="-15" top="40">
		<s:Button id="notepadButton" skinClass="skins.ielts.title.NotepadButtonSkin" label="Notepad" />
		<s:Button id="printButton" skinClass="skins.ielts.title.PrintButtonSkin" label="Print" />
		<s:Button id="recorderButton" skinClass="skins.ielts.title.RecorderButtonSkin" label="Recorder" />
	</s:VGroup>
	
	<!-- Ring binder shadow -->
	<s:Group left="0" top="34" bottom="20" clipAndEnableScrolling="true">
		<s:Rect width="50" height="100%">
			<s:fill>
				<s:SolidColor color="#000000" alpha="0.4" />
			</s:fill>
		</s:Rect>
	</s:Group>
	
	<!-- Exercise -->
	<view:DynamicView id="dynamicView" left="25" right="25" top="34" bottom="20" />
	
	<!-- Right buttons -->
	<s:HGroup right="32" top="4">
		<s:Button id="markingButton" skinClass="skins.ielts.title.MarkingButtonSkin" label="Marking" />
		<s:Button id="startAgainButton" skinClass="skins.ielts.title.StartAgainButtonSkin" label="Start again" />
		<s:Button id="backButton" skinClass="skins.ielts.title.BackButtonSkin" label="Back" />
		<s:Button id="forwardButton" skinClass="skins.ielts.title.ForwardButtonSkin" label="Forward" />
	</s:HGroup>
	
	<!-- Ring binder -->
	<s:Group left="-7" top="34" bottom="20" clipAndEnableScrolling="true">
		<s:SWFLoader source="@Embed(source='skins/ielts/assets/assets.swf', symbol='RingBinder')" />
	</s:Group>
	
	<!-- Footer text -->
	<s:HGroup left="25" right="25" bottom="2">
		<s:Label text="Copyright Â© 1993-2011.  All Rights Reserved." color="#FFFFFF" fontSize="11" />
		<s:Spacer width="100%" />
		<s:Label text="Site map" color="#FFFFFF" fontSize="11" />
		<s:Label text="|" color="#FFFFFF" fontSize="11" />
		<s:Label text="Terms and conditions" color="#FFFFFF" fontSize="11" />
	</s:HGroup>
	
</s:Skin>