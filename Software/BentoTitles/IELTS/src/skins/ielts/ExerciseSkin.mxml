<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx"
		xmlns:view="com.clarityenglish.bento.view.*">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.clarityenglish.bento.view.exercise.ExerciseView")]
	</fx:Metadata>
	
	<fx:Declarations>
		
	</fx:Declarations>
	
	<s:states>
		<s:State name="disabled" />
		<s:State name="normal" />

		<s:State name="exercise" />
		<s:State name="other" />
	</s:states>
	
	<s:layout>
		<s:BasicLayout />
	</s:layout>

	<!-- Background coloured rectangle -->
	<s:Rect left="-10" right="-10" top="0" bottom="0" topRightRadiusX="10" topRightRadiusY="10" bottomRightRadiusX="10" bottomRightRadiusY="10" includeIn="exercise">
		<s:fill>
			<s:SolidColor color="{hostComponent.backgroundColorTop}" />
		</s:fill>
	</s:Rect>
	
	<!-- Top gradient -->
	<s:Rect left="-10" right="-10" top="0" height="34" topRightRadiusX="10" topRightRadiusY="10" includeIn="exercise">
		<s:fill>
			<s:LinearGradient rotation="90">
				<s:GradientEntry color="{hostComponent.backgroundColorTop}" />
				<s:GradientEntry color="{hostComponent.backgroundColorBottom}" />
			</s:LinearGradient>
		</s:fill>
	</s:Rect>
	
	<!-- Top buttons -->
	<s:VGroup right="-15" top="40" includeIn="exercise">
		<s:Button id="printButton" skinClass="skins.ielts.title.PrintButtonSkin" visible="{hostComponent.hasPrintStylesheet}" includeInLayout="{hostComponent.hasPrintStylesheet}" />
	</s:VGroup>
	
	<!-- Ring binder shadow -->
	<s:Group left="-10" top="34" bottom="0" clipAndEnableScrolling="true" includeIn="exercise">
		<s:Rect width="50" height="100%">
			<s:fill>
				<s:SolidColor color="#000000" alpha="0.4" />
			</s:fill>
		</s:Rect>
	</s:Group>
	
	<!-- Exercise -->
	<view:DynamicView id="dynamicView" left="15" right="15" top="34" bottom="20" />
	
	<!-- Title -->
	<s:Label text="{hostComponent.exerciseTitle}" left="15" top="14" fontSize="13" fontWeight="bold" color="#FFFFFF" includeIn="exercise" />
	
	<!-- Right buttons -->
	<s:HGroup right="22" top="0" includeIn="exercise">
		<s:Group>
			<s:Button id="feedbackButton" skinClass="skins.ielts.title.FeedbackButtonSkin" visible="false" />
			<s:Button id="markingButton" skinClass="skins.ielts.title.MarkingButtonSkin" visible="{hostComponent.hasQuestions &amp;&amp; !hostComponent.isMarked}" />
		</s:Group>
		
		<s:Button id="startAgainButton" skinClass="skins.ielts.title.StartAgainButtonSkin" visible="{hostComponent.hasQuestions &amp;&amp; !hostComponent.isMarked}" />
		<s:Button id="backButton" skinClass="skins.ielts.title.BackButtonSkin" />
		<s:Button id="forwardButton" skinClass="skins.ielts.title.ForwardButtonSkin" visible="{!hostComponent.isDirectStartEx}" />
	</s:HGroup>
	
	<!-- Ring binder -->
	<s:Group left="-17" top="34" bottom="0" clipAndEnableScrolling="true" includeIn="exercise">
		<s:SWFLoader source="@Embed(source='/skins/ielts/assets/assets.swf', symbol='RingBinder')" />
	</s:Group>

	<!-- Right black column -->
	<s:Rect right="-10" width="25" top="34" bottom="0" bottomRightRadiusX="10" bottomRightRadiusY="10">
		<s:fill>
			<s:SolidColor color="#333333" />
		</s:fill>
	</s:Rect>

	<!-- Bottom gradient -->
	<s:Rect left="-10" right="-10" bottom="0" height="20" bottomRightRadiusX="10" bottomRightRadiusY="10" includeIn="exercise">
		<s:fill>
			<s:LinearGradient rotation="90">
				<s:GradientEntry color="{hostComponent.backgroundColorTop}" />
				<s:GradientEntry color="{hostComponent.backgroundColorBottom}" />
			</s:LinearGradient>
		</s:fill>
	</s:Rect>
	
</s:Skin>