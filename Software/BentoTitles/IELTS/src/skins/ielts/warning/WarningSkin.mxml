<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx"
		minWidth="400" minHeight="280" width="50%" height="45%">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.clarityenglish.bento.view.warning.WarningView")]
	</fx:Metadata>

	<s:layout>
		<s:VerticalLayout horizontalAlign="center" />
	</s:layout>
	
	<s:Group id="container" width="430" height="210">
		
		<s:Rect width="100%" height="100%"  >
			<s:fill>
				<s:SolidColor color="#FFFFFF" />
			</s:fill>
		</s:Rect>
		
		<s:VGroup paddingTop="20" width="97%">
			<s:Label id="warningMessage" fontSize="12" paddingLeft="14" paddingBottom="10" />
		</s:VGroup>
	
	</s:Group>
		
	<s:HGroup width="90%">
		<s:Spacer width="50%" />
		<s:Spacer height="10" />
		<s:Button id="yesButton" label="Yes" fontSize="14" width="137" height="45" />
		<s:Spacer width="50%" />
		<s:Button id="noButton" label="No" fontSize="14" width="137" height="45" />
		<s:Spacer width="50%" />
	</s:HGroup>
	
</s:Skin>
