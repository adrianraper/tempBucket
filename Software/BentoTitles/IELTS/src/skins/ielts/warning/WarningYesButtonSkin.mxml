<!--- The default skin class for the first button in a Spark ButtonBar component.  

@see spark.components.ButtonBar
@see spark.components.ButtonBarButton

@langversion 3.0
@playerversion Flash 10
@playerversion AIR 1.5
@productversion Flex 4
-->
<s:SparkButtonSkin xmlns:fx="http://ns.adobe.com/mxml/2009" 
				   xmlns:s="library://ns.adobe.com/flex/spark" 
				   xmlns:fb="http://ns.adobe.com/flashbuilder/2009"
				   minWidth="111" minHeight="40" 
				   alpha.disabled="0.5">
	
	<!-- host component -->
	<fx:Metadata>
		<![CDATA[ 
		/** 
		* @copy spark.skins.spark.ApplicationSkin#hostComponent
		*/
		[HostComponent("spark.components.Button")]
		]]>
	</fx:Metadata>
	
	<fx:Script fb:purpose="styling">
        
		/* Define the skin elements that should not be colorized. 
		For toggle button, the graphics are colorized but the label is not. */
		static private const exclusions:Array = ["labelDisplay"];
		
		/** 
		 * @private
		 */     
		override public function get colorizeExclusions():Array {return exclusions;}
		
		/**
		 * @private
		 */
		override protected function initializationComplete():void
		{
			useChromeColor = true;
			super.initializationComplete();
		}
		import com.clarityenglish.ielts.view.zone.ZoneView;

	</fx:Script>
	
	<!-- states -->
	<s:states>
		<s:State name="up" />
		<s:State name="over" stateGroups="overStates" />
		<s:State name="down" stateGroups="downStates" />
		<s:State name="disabled" stateGroups="disabledStates" />
		<s:State name="upAndSelected" stateGroups="selectedStates, selectedUpStates" />
		<s:State name="overAndSelected" stateGroups="overStates, selectedStates" />
		<s:State name="downAndSelected" stateGroups="downStates, selectedStates" />
		<s:State name="disabledAndSelected" stateGroups="selectedUpStates, disabledStates, selectedStates" />
	</s:states>
	
	<s:Group left="0" right="0" top="0" bottom="0">
		<!-- layer 2: fill -->
		<!--- @private -->
		<s:Rect id="fill" left="0" right="0" top="0" bottom="0" radiusX="4" radiusY="4" width="69" height="40">
			<s:fill>
				<s:LinearGradient rotation="90">		
						<s:GradientEntry color="0x8CCC29" ratio="0.33" />
						<s:GradientEntry color="0x6EB800" ratio="0.66"/>
					    <s:GradientEntry color="0x8CCC29" ratio="0.99"/>
						<s:GradientEntry color.over="0x8CCC29" ratio="0.33"/>
						<s:GradientEntry color.over="0x76C400" ratio="0.66"/>
						<s:GradientEntry color.over="0x76C400" ratio="0.99"/>
				</s:LinearGradient>
			</s:fill>
		</s:Rect>
	</s:Group>
	
	<!-- layer 4: fill highlight -->
	<!--- @private -->
	<s:Rect id="highlight" left="0" right="0" top="0"  bottom="0" radiusX="4">
		<s:fill>
			<s:LinearGradient rotation="90">
				<s:GradientEntry color="0xA1EB2F"
								 ratio="0"
								 alpha="0" 
								 alpha.over="0.66" 
								 alpha.down="0.99"/>
			</s:LinearGradient>
		</s:fill>
	</s:Rect>
	
	<!-- layer 7: border - put on top of the fill so it doesn't disappear when scale is less than 1 -->
	<!--- @private -->
	<s:Rect id="border" left="0" right="0" top="0" bottom="0" width="69" height="40" radiusX="4">
		<s:stroke>
			<s:LinearGradientStroke rotation="90" weight="1">
				<s:GradientEntry color="0x31B044"
								 color.over="0xA1EB2F"
								 alpha="0.5625"
								 alpha.down="0.6375" />
			</s:LinearGradientStroke>
		</s:stroke>
	</s:Rect>
	
	<!-- layer 8: text -->
	<!---  @copy spark.components.supportClasses.ButtonBase#labelDisplay -->
	<s:Label id="labelDisplay"
 			 left="120"
			 maxDisplayedLines="1"
			 horizontalCenter="8" verticalCenter="1"
			 color="0x1F3300"
			 color.selectedUpStates="0x1F3300"
			 color.over="0x1F3300"
			 color.up="0x1F3300"
			 fontSize="14"
			 >
	</s:Label>
	<s:Group>
	<s:SWFLoader source="@Embed(source='/skins/ielts/assets/assets.swf', symbol='WarningTick')" top="10" left="26" alpha.over="0.8" />
		</s:Group>
</s:SparkButtonSkin>