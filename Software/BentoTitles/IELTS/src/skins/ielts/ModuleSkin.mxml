<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:ui="com.clarityenglish.ielts.view.module.ui.*">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.clarityenglish.ielts.view.module.ModuleView")]
	</fx:Metadata>
	
	<s:layout>
		<s:HorizontalLayout />
	</s:layout>
	
	<s:TabBar id="courseTabBar" skinClass="skins.ielts.module.CourseTabBarSkin" />
	
	<s:VGroup width="100%">
		<s:HGroup width="100%">
			<s:Label id="courseTitleLabel" fontSize="14" fontWeight="bold" />
			<s:Label id="xx" fontSize="14" fontWeight="bold" text="Welcome " />
			<s:Label id="userNameLabel" fontSize="14" fontWeight="bold" text="{hostComponent._user.fullName}" />
		</s:HGroup>
		<s:Label id="courseDescriptionLabel" width="70%" />
		
		<s:Line width="100%">
			<s:stroke>
				<s:SolidColorStroke color="0x000000" />
			</s:stroke>
		</s:Line>
		
		<s:HGroup width="100%">
			<s:VGroup width="40%">
				<s:Label text="Question zone" fontWeight="bold" />
				<s:Label width="100%" text="Read about the possible questions that will arise in the IELTS exam." />
				<s:Button id="questionZoneButton" label="Click to read" />
			</s:VGroup>
			
			<s:Line height="100%">
				<s:stroke>
					<s:SolidColorStroke color="0x000000" />
				</s:stroke>
			</s:Line>
			
			<s:VGroup width="60%">
				<s:Label text="Practice zone" fontWeight="bold" />
				<s:DataGroup id="practiceZoneDataGroup" width="100%" height="100%">
					<s:layout>
						<s:HorizontalLayout />
					</s:layout>
				</s:DataGroup>
			</s:VGroup>
		</s:HGroup>
		
		<s:Line width="100%">
			<s:stroke>
				<s:SolidColorStroke color="0x000000" />
			</s:stroke>
		</s:Line>
		
		<s:HGroup width="100%">
			<s:VGroup width="60%">
				<s:Label text="Exam practice" fontWeight="bold" />
				<s:Label width="100%" text="Practice paper to get you geared up for the real exam." />
				<s:Button id="examPractice1Button" />
				<ui:DifficultyRenderer id="examPractice1Difficulty" />
				<s:Button id="examPractice2Button" />
				<ui:DifficultyRenderer id="examPractice2Difficulty" />
			</s:VGroup>
			
			<s:Line height="100%">
				<s:stroke>
					<s:SolidColorStroke color="0x000000" />
				</s:stroke>
			</s:Line>
			
			<s:VGroup width="40%">
				<s:Label text="Advice zone" fontWeight="bold" />
				<s:VideoPlayer id="adviceZoneVideoPlayer" autoPlay="false" width="300" height="200" />
				<s:Label text="Watch the teacher giving advice..." />
			</s:VGroup>
		</s:HGroup>
	</s:VGroup>
	
</s:Skin>