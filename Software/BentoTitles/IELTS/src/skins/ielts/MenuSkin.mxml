<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx"
		xmlns:controls="com.clarityenglish.bento.view.*"
		xmlns:module="com.clarityenglish.ielts.view.module.*"
		xmlns:progress="com.clarityenglish.ielts.view.progress.*" xmlns:account="com.clarityenglish.ielts.view.account.*">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.clarityenglish.ielts.view.menu.MenuView")]
	</fx:Metadata>
	
	<s:states>
		<s:State name="module" />
		<s:State name="progress" />
		<s:State name="account" />
	</s:states>
	
	<s:layout>
		<s:VerticalLayout />
	</s:layout>
	
	<s:HGroup width="100%" paddingBottom="20">
		<s:Label text="Road to IELTS" fontSize="20" fontWeight="bold" />
		<s:Spacer width="100%" />
		<s:Button label="Logout" />
		<s:Button label="Contact us" />
	</s:HGroup>
	
	<s:TabBar id="mainTabBar" />
	
	<s:HGroup width="100%">
		<s:TabBar id="courseTabBar" skinClass="skins.ielts.module.CourseTabBarSkin" />
		
		<module:ModuleView id="moduleView" width="100%" height="100%" includeIn="module" />
		<progress:ProgressView id="progressView" width="100%" height="100%" includeIn="progress" />
		<account:AccountView id="accountView" width="100%" height="100%" includeIn="account" />
		
	</s:HGroup>
</s:Skin>