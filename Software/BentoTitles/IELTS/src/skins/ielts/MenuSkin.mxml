<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx"
		xmlns:controls="com.clarityenglish.bento.view.*"
		xmlns:module="com.clarityenglish.ielts.view.module.*"
		xmlns:progress="com.clarityenglish.ielts.view.progress.*"
		xmlns:account="com.clarityenglish.ielts.view.account.*" xmlns:exercise="com.clarityenglish.ielts.view.exercise.*">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.clarityenglish.ielts.view.menu.MenuView")]
	</fx:Metadata>
	
	<s:states>
		<s:State name="module" />
		<s:State name="progress" />
		<s:State name="account" />
		<s:State name="exercise" />
	</s:states>
	
	<s:layout>
		<s:VerticalLayout />
	</s:layout>
	
	<!-- This is just a (rubbish) example of using transitions for visual effect -->
	<s:transitions>
		<s:Transition fromState="*" toState="*" autoReverse="true">
			<s:Rotate3D targets="{[moduleView, progressView, accountView]}" angleYFrom="0" angleYTo="360"  autoCenterTransform="true" />
		</s:Transition>
	</s:transitions>
	
	<s:HGroup width="100%" paddingBottom="20">
		<s:Label text="Road to IELTS" fontSize="20" fontWeight="bold" />
		<s:Spacer width="100%" />
		<s:Button label="Logout" />
		<s:Button label="Contact us" />
	</s:HGroup>
	
	<s:TabBar id="mainTabBar" />
	
	<s:HGroup width="100%">
		<s:Group width="100%" height="100%">
			<module:ModuleView id="moduleView" width="100%" height="100%" includeIn="module" />
			<progress:ProgressView id="progressView" width="100%" height="100%" includeIn="progress" />
			<account:AccountView id="accountView" width="100%" height="100%" includeIn="account" />
			<exercise:ExerciseView id="exerciseView" width="100%" height="100%" includeIn="exercise" />
		</s:Group>
		
		<s:VGroup>
			<s:Button label="Pad" />
		</s:VGroup>
	</s:HGroup>
</s:Skin>