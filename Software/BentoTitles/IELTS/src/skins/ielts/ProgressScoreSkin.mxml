<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx"
		xmlns:ns1="com.anychart.*">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.clarityenglish.ielts.view.progress.components.ProgressScoreView")]
	</fx:Metadata>
	
	<s:layout>
		<s:VerticalLayout />
	</s:layout>

	<s:HGroup width="100%" height="100" >
		<s:Button id="writingCourse" label="writing" width="75" />
		<s:Button id="speakingCourse" label="speaking" width="75" />
		<s:Button id="readingCourse" label="reading" width="75" />
		<s:Button id="listeningCourse" label="listening" width="75" />
		<s:Button id="examTipsCourse" label="exam tips" width="75" />
	</s:HGroup>	
	
	<s:HGroup width="100%" height="100%">
		<!-- Directly link the datagrid to part of the returned XML -->
		<s:DataGrid id="scoreDetails" width="70%" height="100%" dataProvider="{hostComponent.tableDataProvider}" >
			<s:columns>
				<s:ArrayList>
					<s:GridColumn headerText="Exercise" dataField="@caption" />
					<s:GridColumn headerText="Score" dataField="@score" />					
					<s:GridColumn headerText="Time spent" dataField="@duration" />					
				</s:ArrayList>
			</s:columns>
		</s:DataGrid>
		<s:VGroup width="30%" height="100%">
			<s:Label text="Practice Zone" />
			<s:Label text="Advice Zone" />
			<s:Label text="Question Zone" />
			<s:Label text="Exam Practice" />
		</s:VGroup>
	</s:HGroup>

</s:Skin>