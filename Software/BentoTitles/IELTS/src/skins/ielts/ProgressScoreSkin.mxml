<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx"
		xmlns:ui="com.clarityenglish.ielts.view.progress.ui.*"
		xmlns:ns1="com.anychart.*" >
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.clarityenglish.ielts.view.progress.components.ProgressScoreView")]
	</fx:Metadata>
	
	<s:layout>
		<s:VerticalLayout />
	</s:layout>

	<s:HGroup id="progressCourseBar" width="100%" height="100">
		<s:Button label="Writing" id="writingCourseButton" width="75" height="25" />
		<s:Button label="Speaking" id="speakingCourseButton" width="75" height="25" />
		<s:Button label="Reading" id="readingCourseButton" width="75" height="25" />
		<s:Button label="Listening" id="listeningCourseButton" width="75" height="25" />
	</s:HGroup>
	
	<ui:ProgressBarRenderer id="progressBar" width="100%" height="100" />
	
	<s:HGroup width="100%" height="100%">
		<s:DataGrid id="scoreDetailsDataGrid" width="70%" height="100%" dataProvider="{hostComponent.tableDataProvider}" >
			<s:columns>
				<s:ArrayList>
					<s:GridColumn headerText="Unit" dataField="@unitCaption" />
					<s:GridColumn headerText="Exercise" dataField="@caption" />
					<s:GridColumn headerText="Score" dataField="@score" />
					<s:GridColumn headerText="Time spent" dataField="@duration" />
				</s:ArrayList>
			</s:columns>
		</s:DataGrid>
	</s:HGroup>

</s:Skin>