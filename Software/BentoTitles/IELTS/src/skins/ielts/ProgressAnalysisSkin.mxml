<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx"
		xmlns:ns1="com.anychart.*">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.clarityenglish.ielts.view.progress.components.ProgressAnalysisView")]
	</fx:Metadata>
	
	<s:layout>
		<s:VerticalLayout />
	</s:layout>

	<s:SkinnableComponent id="courseKeyComponent" skinClass="skins.ielts.progress.CourseKeyGroupSkin" width="100%" height="100" />
	<s:HGroup width="100%" height="100%" >
		<s:VGroup width="50%" height="100%" >
			<s:Label text="What is your average score in each unit?" />
			<ns1:AnyChartFlex id="analysisScoreChart" width="100%" />		
		</s:VGroup>
		<s:VGroup width="50%" height="100%" >
			<s:Label text="How long have you spent working on each unit?" />
			<ns1:AnyChartFlex id="analysisTimeChart" width="100%" />		
		</s:VGroup>		
	</s:HGroup>
	
</s:Skin>