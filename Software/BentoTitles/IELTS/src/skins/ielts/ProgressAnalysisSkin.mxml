<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:ns1="com.anychart.*">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.clarityenglish.ielts.view.progress.components.ProgressAnalysisView")]
	</fx:Metadata>

	<s:layout>
		<s:VerticalLayout />
	</s:layout>

	<s:SkinnableComponent id="courseKeyPieComponent" skinClass="skins.ielts.progress.CourseKeyPieSkin" width="100%" height="30" />

	<s:Group top="0">
		<s:Line width="100%">
			<s:stroke>
				<s:SolidColorStroke color="0x878787" weight="1" />
			</s:stroke>
		</s:Line>
	</s:Group>

	<s:HGroup width="100%" height="100%" visible="{hostComponent.numberSectionsDone &gt; 0}" includeInLayout="{hostComponent.numberSectionsDone &gt; 0} ">
		<s:VGroup width="400" height="100%" horizontalAlign="center">
			<s:Label text="Which skill area are you better at?" fontSize="12.6" fontWeight="bold" paddingTop="60" />
			<s:Label text="Score (%)" fontSize="12.6" />
			<ns1:AnyChartFlex id="analysisScoreChart" width="100%" />
		</s:VGroup>
		<s:VGroup width="544" height="100%" horizontalAlign="center">
			<s:Label text="Time spent on each skill" fontSize="12.6" fontWeight="bold" paddingTop="60" />
			<s:Label text="Time in minutes" fontSize="12.6" />
			<ns1:AnyChartFlex id="analysisTimeChart" width="100%" />
		</s:VGroup>
	</s:HGroup>
	<s:VGroup width="100%" height="100%" paddingTop="22" paddingLeft="10" visible="{hostComponent.numberSectionsDone &lt;= 1}" includeInLayout="{hostComponent.numberSectionsDone &lt;= 1}">
		<s:Spacer height="10" />
		<s:SWFLoader source="@Embed(source='skins/ielts/assets/progressAnalyse_disable.png')" />
	</s:VGroup>

</s:Skin>
