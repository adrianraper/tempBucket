<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009"
		xmlns:s="library://ns.adobe.com/flex/spark"
		xmlns:mx="library://ns.adobe.com/flex/mx"
		xmlns:ui="com.clarityenglish.ielts.view.progress.ui.*">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.clarityenglish.ielts.view.progress.components.ProgressAnalysisView")]
	</fx:Metadata>
	
	<fx:Script>
		<![CDATA[
			import mx.collections.XMLListCollection;
		]]>
	</fx:Script>

	<s:states>
		<s:State name="disabled" />
		
		<s:State name="normal" />
		<s:State name="blocked" />
		<s:State name="blockedScore" />
		<s:State name="blockedDuration" />
		<s:State name="demo"  />
	</s:states>
	
	<s:Label text="This shows how you have spent your time" left="20" top="60" />
	<s:Label text="Time spent on each skill" left="20" top="90" />
	<s:Label text="You have spent {Math.floor(hostComponent.totalDuration / 60)} minute(s) in total" fontSize="16" left="20" top="120" />
	
	<ui:StackedBarChart id="stackedBarChart" dataProvider="{hostComponent.progressXml}" top="150" height="35" left="20" width="{durationDataGroup.width}" />
	
	<s:DataGroup id="durationDataGroup" dataProvider="{new XMLListCollection(hostComponent.progressXml.course)}" left="20" top="220" itemRenderer="com.clarityenglish.ielts.view.progress.ui.CourseDurationRenderer">
		<s:layout>
			<s:HorizontalLayout gap="15" />
		</s:layout>
	</s:DataGroup>
	
</s:Skin>
