<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009"
		xmlns:s="library://ns.adobe.com/flex/spark"
		xmlns:mx="library://ns.adobe.com/flex/mx"
		xmlns:ui="com.clarityenglish.ielts.view.progress.ui.*" creationComplete="creationComplete(event)">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.clarityenglish.ielts.view.progress.components.ProgressAnalysisView")]
	</fx:Metadata>
	
	<fx:Script>
		<![CDATA[
			import com.clarityenglish.ielts.view.progress.ui.CourseDurationRenderer;
			
			import mx.collections.XMLListCollection;
			import mx.events.FlexEvent;
			
			protected function creationComplete(event:FlexEvent):void
			{
				// TODO Auto-generated method stub
				//issue:#11 Languge Code, Due to totalDuration was evaluated after partAdded, so we put analysisTime text here
				var replaceObj:Array = []
				trace("hostComponent.totalDuration = "+ Math.floor(hostComponent.totalDuration / 60));
				replaceObj.x = Math.floor(hostComponent.totalDuration / 60);
				analysisTime.text = hostComponent.viewCopyProvider.getCopyForId("analysisTime", replaceObj);
				
			}
			
			/*//issue:#11 Language Code, here we assigned hostComponent.copyProvider to CourseDurationRenderer class
			private function itemRendererDataSet(item:Object):IFactory {
				var classFactory:ClassFactory = new ClassFactory (com.clarityenglish.ielts.view.progress.ui.CourseDurationRenderer);
				classFactory.properties = {copyProvider : hostComponent.copyProvider};
				return classFactory;
			}*/
			
		]]>
	</fx:Script>

	<s:states>
		<s:State name="disabled" />
		
		<s:State name="normal" />
		<s:State name="blocked" />
		<s:State name="blockedScore" />
		<s:State name="blockedDuration" />
		<s:State name="demo"  />
	</s:states>
	
	<s:Label id="analysisInstructionLabel1" left="20" top="60" />
	<s:Label id="analysisInstructionLabel2" left="20" top="90" />
	<s:Label id="analysisTime" fontSize="16" left="20" top="120" />
	
	<ui:StackedBarChart id="stackedBarChart" dataProvider="{hostComponent.progressXml}" top="150" height="35" left="20" width="{durationDataGroup.width}" />
	
	<s:DataGroup id="durationDataGroup" dataProvider="{new XMLListCollection(hostComponent.progressXml.course)}" left="20" top="220" itemRenderer="com.clarityenglish.ielts.view.progress.ui.CourseDurationRenderer">
		<s:layout>
			<s:HorizontalLayout gap="15" />
		</s:layout>
	</s:DataGroup>
	
</s:Skin>
