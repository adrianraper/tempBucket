<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				autoDrawBackground="true">

	<fx:Script>
		<![CDATA[
			[Bindable]
			public var courseColor:Number;
			
			[Bindable]
			public var courseColorDark:Number;
			
			public override function set data(value:Object):void {			
					
				super.data = value;
				//captionLabel.text = value.@caption;
				fillColor.color = (Number(data.@done.toString())>0) ? courseColor : 0xFFFFFF;
			}
			
		]]>
	</fx:Script>
	
	<s:Group left="10">
		<s:Rect top="2" width="8" height="8" radiusX="2" radiusY="2">
			<s:stroke>
				<s:SolidColorStroke color="0x000000" weight="1"/>
			</s:stroke>
			<s:fill>
				<s:SolidColor id="fillColor" />
			</s:fill>
		</s:Rect>
		<s:Label id="captionLabel" text="{data.@caption}" left="20" />
	</s:Group>
</s:ItemRenderer>
