<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx"
		minWidth="215" minHeight="24"
		creationComplete="creationComplete(event)"
		>
		

	<fx:Metadata>
		[HostComponent("com.clarityenglish.ielts.view.progress.ui.CoverageExerciseComponent")]
	</fx:Metadata>

	<fx:Script> 
		<![CDATA[ 
			import com.clarityenglish.ielts.view.zone.DisabledPopupWatcher;
			
			// #302 - ensure the popupwatchers isn't garbage collected
			private var popupWatcher:DisabledPopupWatcher;
			
			protected function creationComplete(event:Event):void {
				// #234
				popupWatcher = new DisabledPopupWatcher(itemList, hostComponent.productVersion); 
			}
			
		]]> 
	</fx:Script> 

	<s:layout>
		<s:VerticalLayout horizontalAlign="left" />
	</s:layout>
	<s:Label id="coverageHeadingLabel" text="{hostComponent.caption}" paddingLeft="2" fontWeight="bold" width="100%" />
	<s:Rect left="100" right="0" top="200" bottom="0" width="100%" height="2" >
		<s:fill>
			<s:SolidColor color="0x999999" />
		</s:fill>
	</s:Rect>

	<s:DataGroup id="itemList" alternatingItemColors="[#FFFFFF, #DDDDDD]" width="100%" contentBackgroundAlpha="0"
			dataProvider="{hostComponent.dataProvider}" fontWeight="normal"
			itemRenderer="skins.ielts.progress.CoverageExerciseRenderer">
		<s:layout>
			<s:VerticalLayout gap="0" />
		</s:layout>
	</s:DataGroup>
	
</s:Skin>
