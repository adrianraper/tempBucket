<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx"
		xmlns:anychart="com.anychart.*" 
		xmlns:ui="com.clarityenglish.ielts.view.home.ui.*">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.clarityenglish.ielts.view.home.HomeView")]
	</fx:Metadata>
	
	<s:layout>
		<s:HorizontalLayout paddingTop="5"  />
	</s:layout>
	
	<s:VGroup paddingTop="20" width="100%">
		<s:Label text="Your progress so far: an overview" fontSize="20" width="100%" />
		<s:Spacer height="3" />
		<s:Label text="The chart below shows how much you have completed in each skill section of Road to IELTS. Go to My Progress to see detailed reports." fontSize="12" width="84%"/>	
		
		<s:VGroup width="100%" paddingTop="15">
			<ui:CourseBarRenderer dataProvider="{hostComponent.dataProvider}" courseClass="reading" id="readingCoverageBar" width="85%" />
			<s:Spacer height="6"/>
			<ui:CourseBarRenderer dataProvider="{hostComponent.dataProvider}" courseClass="listening" id="listeningCoverageBar" width="85%" />
			<s:Spacer height="6"/>
			<ui:CourseBarRenderer dataProvider="{hostComponent.dataProvider}" courseClass="speaking" id="speakingCoverageBar" width="85%" />
			<s:Spacer height="6"/>

			<ui:CourseBarRenderer dataProvider="{hostComponent.dataProvider}" courseClass="writing" id="writingCoverageBar" width="85%" />
		</s:VGroup>
		
	</s:VGroup>
	
	<s:VGroup width="100%">
		<s:Button id="readingCourseButton" width="100%" />
		<s:Button id="listeningCourseButton" width="100%" />
		<s:Button id="speakingCourseButton" width="100%" />
		<s:Button id="writingCourseButton" width="100%" />
	</s:VGroup>		
	
</s:Skin>