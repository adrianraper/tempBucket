<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx"
		xmlns:ns1="com.anychart.*">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.clarityenglish.ielts.view.home.HomeView")]
	</fx:Metadata>
	
	<s:layout>
		<s:HorizontalLayout />
	</s:layout>
	
	<ns1:AnyChartFlex id="coveragePieChart" width="300" height="300" />
	<s:VGroup width="100%">
		<s:HGroup width="100%">
			<s:Label fontSize="14" fontWeight="bold" text="Welcome " />
			<s:Label id="userNameLabel" fontSize="14" fontWeight="bold" text="{hostComponent._user.fullName}" />
		</s:HGroup>
		
		<s:Line width="100%">
			<s:stroke>
				<s:SolidColorStroke color="0x000000" />
			</s:stroke>
		</s:Line>
		<s:Button id="writingCourse" label="Writing" />
		<s:Button id="readingCourse" label="Reading" />
		<s:Button id="listeningCourse" label="Listening" />
		<s:Button id="speakingCourse" label="Speaking" />
		<s:Button id="examTipsCourse" label="Exam tips" />

	</s:VGroup>		
	
</s:Skin>