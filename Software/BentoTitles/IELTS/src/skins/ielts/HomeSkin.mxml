<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx"
		xmlns:anychart="com.anychart.*">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.clarityenglish.ielts.view.home.HomeView")]
	</fx:Metadata>
	
	<s:layout>
		<s:HorizontalLayout />
	</s:layout>
	
	<s:VGroup>
		<s:Label text="Your progress so far: an overview" fontSize="20" />
		<s:Spacer height="5" />
		<s:Label text="The chart below shows how much you have completed in each skill section of Road to IELTS. Go to My Progress to see detailed reports." fontSize="12" width="400"/>	
		
		<s:VGroup>
			<anychart:AnyChartFlex id="coveragePieChart" width="600" height="50%" />
		</s:VGroup>
		
	</s:VGroup>
	
	<s:VGroup width="50%">
		<s:Button id="writingCourse" width="100%" />
		<s:Button id="speakingCourse" width="100%" />
		<s:Button id="readingCourse" width="100%" />
		<s:Button id="listeningCourse" width="100%" />
	</s:VGroup>		
	
</s:Skin>