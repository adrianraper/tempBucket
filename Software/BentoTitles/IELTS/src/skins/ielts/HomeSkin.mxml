<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark"
		xmlns:ui="com.clarityenglish.ielts.view.home.ui.*">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.clarityenglish.ielts.view.home.HomeView")]
	</fx:Metadata>
	
	<s:states>
		<s:State name="disabled" />
		<s:State name="normal" />

		<s:State name="demo" />
		<s:State name="fullVersion" />
		<s:State name="lastMinute" stateGroups="bcStates" />
		<s:State name="homeUser" />
		<s:State name="testDrive" stateGroups="bcStates" />
	</s:states>

	<fx:Declarations>
		<s:DropShadowFilter id="dropShadowFilter" color="#CCCCCC" blurX="5" blurY="5" alpha="0.75" distance="1" angle="180" knockout="false"/>
	</fx:Declarations>
	
	<s:layout>
		<s:HorizontalLayout paddingTop="0" />
	</s:layout>	

	<s:VGroup paddingTop="75" width="100%">
		<s:HGroup>
			<s:SWFLoader source="@Embed(source='/skins/ielts/assets/assets.swf', symbol='ProfileIcon')"/>
			<s:VGroup alignmentBaseline="ideographicBottom">
				<s:Label id="welcomeLabel" top="0" right="0" />
				<s:Label id="noticeLabel" top="0" right="0" />
			</s:VGroup>
		</s:HGroup>
			
		<s:VGroup id="completionGroup" width="100%" paddingTop="5" visible="{!hostComponent.noProgressData}" includeInLayout="{!hostComponent.noProgressData}" >
			<ui:CourseBarRenderer data="{hostComponent.dataProvider}" courseCaption="Reading" courseClass="reading" id="readingCoverageBar" width="100%" />
			<s:Spacer height="1"/>
			<ui:CourseBarRenderer data="{hostComponent.dataProvider}" courseCaption="Listening" courseClass="listening" id="listeningCoverageBar" width="100%" />
			<s:Spacer height="1"/>
			<ui:CourseBarRenderer data="{hostComponent.dataProvider}" courseCaption="Speaking" courseClass="speaking" id="speakingCoverageBar" width="100%" />
			<s:Spacer height="1"/>
			<ui:CourseBarRenderer data="{hostComponent.dataProvider}" courseCaption="Writing" courseClass="writing" id="writingCoverageBar" width="100%" />
			<s:Spacer height="5"/>
			<s:Label id="colorBarIntroLabel" width="80%" lineHeight="18" />	
		</s:VGroup>
		<s:VGroup id="welcomeGroup" width="100%" paddingTop="5" visible="{hostComponent.noProgressData}" includeInLayout="{hostComponent.noProgressData}" >
			<s:SWFLoader source="@Embed(source='/skins/ielts/assets/home_coursebar_demo.png')" 
						 visible="{(hostComponent.isDemo())}"
						 includeInLayout="{(hostComponent.isDemo())}"/>			
			<s:SWFLoader source="@Embed(source='/skins/ielts/assets/home_coursebar.png')" 
						 visible="{(!hostComponent.isDemo())}"
						 includeInLayout="{(!hostComponent.isDemo())}"/>			
			
			<s:Spacer height="10"/>
			<s:Label id="noProgressText" 
					 width="80%" lineHeight="18" 
					 visible="{(!hostComponent.isDemo())}"
					 includeInLayout="{(!hostComponent.isDemo())}"/>				
		</s:VGroup>
	</s:VGroup>
	<s:VGroup width="100%">
		<s:VGroup width="100%" paddingTop="{(hostComponent.isFullVersion()) ? 20 : 70}">
			<s:Button id="readingCourseButton" width="100%" buttonMode="true" useHandCursor="true" />
			<s:Spacer height="1" />
			<s:Button id="listeningCourseButton" width="100%" buttonMode="true" useHandCursor="true" />
			<s:Spacer height="1" />
			<s:Button id="speakingCourseButton" width="100%" buttonMode="true" useHandCursor="true" />
			<s:Spacer height="1" />
			<s:Button id="writingCourseButton" width="100%" buttonMode="true" useHandCursor="true" />
		</s:VGroup>
		<s:VGroup width="100%" includeIn="testDrive" paddingTop="6">
			<s:Button id="registerInfoButton" width="100%" useHandCursor="true" buttonMode="true" />
		</s:VGroup>
		<!--gh#383-->
		<s:HGroup paddingTop="10" includeIn="lastMinute">
			<s:Group>
				<s:SWFLoader source="@Embed(source='/skins/ielts/assets/title/LMPromoteLeft.png')" width="100%" left="-8"/>
				<s:VGroup width="125" left="187" top="20" gap="0">
					<s:Label id="promoteWording1" fontSize="12.5" color="0x0A446B" />
					<s:Label id="promoteWording2" paddingLeft="5" fontSize="12.5" color="0x0A446B" />
					<s:Label id="promoteWording3" paddingLeft="5" fontSize="12.5" color="0x0A446B" />
				</s:VGroup>				
				<s:Label id="promoteWording4" width="120" left="192" top="70" fontSize="11" color="0x0A446B"/>
			</s:Group>
			<s:VGroup paddingTop="7" paddingLeft="5">
				<s:SWFLoader source="@Embed(source='/skins/ielts/assets/title/LMPromoteRight.png')" />
				<s:Spacer height="8" />
				<s:Group right="0">
					<s:Button id="findMoreButton" fontSize="18" color="0xFFFFFF" useHandCursor="true" buttonMode="true"/>
					<s:SWFLoader source="@Embed(source='/skins/ielts/assets/title/findMoreIcon.png')" right="-80" top="15"/>
				</s:Group>
				
			</s:VGroup>			
		</s:HGroup>

		<s:HGroup width="100%" paddingTop="7" horizontalAlign="right" includeIn="fullVersion">
			<s:Group width="100%" height="166" filters="{dropShadowFilter}">
				<s:Rect left="0" right="0" top="0" bottom="0" radiusX="6" radiusY="6">
					<s:fill>
						<s:SolidColor color="#F1F1F3"/>
					</s:fill>
					<s:stroke>
						<s:LinearGradientStroke rotation="90" weight="3">
							<s:GradientEntry color="#FFFFFF" ratio="0.3" />
							<s:GradientEntry color="#E0E0E0" ratio="1" />
						</s:LinearGradientStroke>
					</s:stroke>
				</s:Rect>
				<s:Image source="@Embed(source='/skins/ielts/assets/studyplannerBackground.png')" left="3" right="3" top="3" fillMode="clip" />
				<s:HGroup width="100%" height="100%" verticalAlign="middle">
					<s:VGroup paddingLeft="30" width="60%" gap="15">
						<s:VGroup gap="2">
							<s:Label id="studyPlannerCaptionLabel" fontSize="19" fontWeight="bold" color="#08446B" />
							<s:Label id="studyPalnnerDescriptionLabel" fontSize="12" color="#08446B" />
						</s:VGroup>
						<s:Rect height="1" width="250">
							<s:fill>
								<s:SolidColor color="#A3A3A2" />
							</s:fill>
						</s:Rect>
						<s:Button id="studyPlannerDownloadButton" width="250" height="40" fontSize="12.6" useHandCursor="true" buttonMode="true"/>
					</s:VGroup>
					<s:SWFLoader width="40%" source="@Embed(source='/skins/ielts/assets/studyPlanner.png')" scaleX="0.5" scaleY="0.5" verticalCenter="0"/>
				</s:HGroup>
			</s:Group>
		</s:HGroup>
	</s:VGroup>	

</s:Skin>