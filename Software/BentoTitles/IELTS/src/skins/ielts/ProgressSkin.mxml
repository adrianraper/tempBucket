<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009"
		xmlns:s="library://ns.adobe.com/flex/spark"
		xmlns:mx="library://ns.adobe.com/flex/mx"
		xmlns:controls="com.clarityenglish.bento.view.*"
		xmlns:progress="com.clarityenglish.ielts.view.progress.*"
		xmlns:components="com.clarityenglish.ielts.view.progress.components.*">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.clarityenglish.ielts.view.progress.ProgressView")]
	</fx:Metadata>
	<fx:Script>
		<![CDATA[
			import com.clarityenglish.common.vo.content.Title;
		]]>
	</fx:Script>
	
	<s:states>
		<s:State name="coverage" stateGroups="normalStates,coverageStates"/>
		<s:State name="compare" stateGroups="normalStates,compareStates"/>
		<s:State name="analysis" stateGroups="normalStates,analysisStates"/>
		<s:State name="score" stateGroups="normalStates,scoreStates"/>
		
		<s:State name="coverage_demo" stateGroups="demoStates,coverageStates"/>
		<s:State name="compare_demo" stateGroups="normalStates,compareStates"/>
		<s:State name="analysis_demo" stateGroups="demoStates,analysisStates"/>
		<s:State name="score_demo" stateGroups="normalStates,scoreStates"/>
	</s:states>
	
	<s:layout>
		<s:VerticalLayout />
	</s:layout>
	
	<s:transitions>
		<s:Transition fromState="*" toState="*" autoReverse="true">
			<s:Wipe direction="left" duration="300" targets="{[progressCoverageView, progressCompareView, progressAnalysisView, progressScoreView ]}" />
		</s:Transition>
	</s:transitions>

	<s:Group width="100%" visible="{hostComponent.licenceType==Title.LICENCE_TYPE_AA}">
		<s:Label left="0" height="25" top="40" text="You have logged in anonymously, so your progress will not be saved after you close the program." />
	</s:Group>
	
	<s:Group width="100%">
		<s:ButtonBar id="progressNavBar" left="0" height="25" top="25" />
	</s:Group>

	<s:Group top="10" width="100%">
		<s:Line width="100%">
			<s:stroke>
				<s:SolidColorStroke color="0x878787" weight="1"/>
			</s:stroke>
		</s:Line> 
	</s:Group>

	<s:HGroup width="100%" height="100%">
		<s:Group width="100%" height="100%">
			<s:Group width="100%" height="100%" includeIn="normalStates">
				<components:ProgressCoverageView id="progressCoverageView" width="100%" height="100%" includeIn="coverage" />
				<components:ProgressCompareView id="progressCompareView" width="100%" height="100%" includeIn="compareStates" />
				<components:ProgressAnalysisView id="progressAnalysisView" width="100%" height="100%" includeIn="analysis" />
				<components:ProgressScoreView id="progressScoreView" width="100%" height="100%" includeIn="scoreStates" />
			</s:Group>
			
			<!-- #301 -->
			<s:SWFLoader id="demoImage" width="953%" height="427" 
						 source.coverageStates="@Embed(source='skins/ielts/assets/coverage_demo.png')" 
						 source.compareStates="@Embed(source='skins/ielts/assets/assets.swf', symbol='ListeningIcon')" 
						 source.analysisStates="@Embed(source='skins/ielts/assets/assets.swf', symbol='SpeakingIcon')"
						 source.scoreStates="@Embed(source='skins/ielts/assets/assets.swf', symbol='ReadingIcon')"
						 includeIn="demoStates" />
		</s:Group>
	</s:HGroup>
	
</s:Skin>