<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx"
		minWidth="400" minHeight="300" width="50%" height="50%">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.clarityenglish.bento.view.marking.MarkingView")]
	</fx:Metadata>

	<fx:Script>
		<![CDATA[
			//import com.clarityenglish.bento.vo.ExerciseMark;
			//private function getCorrectPercent(exerciseMark:ExerciseMark):uint {
			//	return Math.round(exerciseMark.correctCount * 100 / exerciseMark.totalQuestions);
			//}
		]]>
	</fx:Script>


	<s:layout>
		<s:VerticalLayout paddingTop="15" />
	</s:layout>
	<s:Label id="overallScore" text="You scored {hostComponent.exerciseMark.correctPercent}% in this exercise." fontSize="12" paddingLeft="20" />
	
	<s:Group id="correctGroup" left="10%" width="90%" height="30" >		

		<s:Rect percentWidth="{hostComponent.exerciseMark.correctPercent}" height="100%" left="28" >
			<s:fill>
				<s:SolidColor color="#CCED9A" />
			</s:fill>
		</s:Rect>
		<s:Group>
			<s:Rect height="31" width="8" left="20" >
				<s:fill>
					<s:SolidColor color="#7F7F7F" />
				</s:fill>
			</s:Rect>
		</s:Group>		
		<s:Label left="35" top="10" text="{hostComponent.exerciseMark.correctCount} Correct" color="#213606" fontSize="16" />
	</s:Group>
	<s:Spacer height="10" />
	
	<s:Group id="incorrectGroup" left="10%" width="90%" height="30" >			
		<s:Rect percentWidth="{hostComponent.exerciseMark.incorrectPercent}" height="100%" left="28" >
			<s:fill>
				<s:SolidColor color="#ED8287" />
			</s:fill>
		</s:Rect>
		<s:Group>
			<s:Rect height="31" width="8" left="20" >
				<s:fill>
					<s:SolidColor color="#7F7F7F" />
				</s:fill>
			</s:Rect>
		</s:Group>
			<s:Label left="35" top="10" text="{hostComponent.exerciseMark.incorrectCount} Wrong" color="#330C23" fontSize="16" />
	</s:Group>
	<s:Spacer height="10" />
	
	<s:Group id="missedCount" left="10%" width="90%" height="30" >
			
			<s:Rect percentWidth="{hostComponent.exerciseMark.missedPercent}" height="100%" left="28" >
				<s:fill>
					<s:SolidColor color="#94D5F0" />
				</s:fill>
			</s:Rect>
			
			<s:Rect height="31" width="8" left="20" >
				<s:fill>
					<s:SolidColor color="#7F7F7F" />
				</s:fill>
			</s:Rect>
		<s:Group>
			<s:Label left="35" top="10" text="{hostComponent.exerciseMark.missedCount} Missed" color="#0C3040" fontSize="16"/>
			
		</s:Group>
		</s:Group>
	
	<s:Spacer height="10" />
	
	<s:HGroup width="90%">
		<s:Spacer width="50%" />
		<s:Button id="tryAgainButton" label="Start again" fontSize="14" width="140" height="38" />
		<s:Spacer width="50%" />
		<s:Button id="seeAnswersButton" label="See answers" fontSize="14" width="140" height="38" />
		<s:Spacer width="50%" />
		<s:Button id="moveForwardButton" label="Forward" fontSize="14" width="140" height="38" />		
		<s:Spacer width="50%" />
	</s:HGroup>
	
</s:Skin>
