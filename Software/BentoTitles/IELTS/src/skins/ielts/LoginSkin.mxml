<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009"
		xmlns:s="library://ns.adobe.com/flex/spark"
		xmlns:mx="library://ns.adobe.com/flex/mx">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.clarityenglish.ielts.view.login.LoginView")]
	</fx:Metadata>
	<fx:Script>
		<![CDATA[ 
			import flash.net.navigateToURL; 
			import com.clarityenglish.ielts.IELTSApplication;
			protected function clickHandler(event:MouseEvent):void {
				// TODO: Use CopyOps
				var urlReq:URLRequest = new URLRequest("http://www.ieltspractice.com"); 
				navigateToURL(urlReq, "_blank"); 
			} 
		]]> 
	</fx:Script>
	<s:Group width="100%" top="3">

		<s:Image source="@Embed(source='skins/ielts/assets/assets.swf', symbol='RoadToIELTSBigIcon')" width="100%" top="12" />
		<s:SWFLoader source="@Embed(source='skins/ielts/assets/assets.swf', symbol='RoadToIELTSSubIcon')" top="52" />
		<s:SWFLoader id="upgradeButton" source="@Embed(source='skins/ielts/assets/upgrade.jpg')" right="0" top="44" 
					 visible="{hostComponent.getProductVersion() == IELTSApplication.LAST_MINUTE}"
					 includeInLayout="{hostComponent.getProductVersion() == IELTSApplication.LAST_MINUTE}"
					 click="clickHandler(event)" buttonMode="true" useHandCursor="true" />
	</s:Group>
	<s:BorderContainer left="0" width="40%" height="96%" backgroundColor="#F9F9F9" cornerRadius="12" borderColor="#CCCCCC" top="100">
		<s:layout>
			<s:VerticalLayout paddingTop="25" horizontalAlign="center" />
		</s:layout>
		
	<s:VGroup width="100%" height="100%" top="120" left="120" paddingLeft="25" >
		<s:HGroup id="lastMinute" visible="{hostComponent.getProductVersion() == IELTSApplication.LAST_MINUTE}"
				  includeInLayout="{hostComponent.getProductVersion() == IELTSApplication.LAST_MINUTE}">
			<s:SWFLoader source="@Embed(source='skins/ielts/assets/assets.swf', symbol='IELTSLogoLastMinute_Icon')" left="0" top="0" width="40" height="40" />
			<s:VGroup>
				<s:Label text = "Road to IELTS - Last Minute" top="0" left="30" color="#174A7D" fontSize="16" fontWeight="bold" paddingTop="0" paddingLeft="7"/>	
				<s:Label text="Special last minute practice only for British Council IELTS candidates!" fontFamily="HelveticaNeueLtStd" fontSize="12.6" width="92%" paddingLeft="7" lineHeight="18" />
			</s:VGroup>
		</s:HGroup>
		
		<s:HGroup id="fullVersion" visible="{hostComponent.getProductVersion() == IELTSApplication.FULL_VERSION}"
									includeInLayout="{hostComponent.getProductVersion() == IELTSApplication.FULL_VERSION}">
			<s:VGroup>
				<s:Label text = "Road to IELTS" top="0" left="30" color="#174A7D" fontSize="16" fontWeight="bold" paddingTop="0" paddingLeft="0"/>	
				<s:Label text="IELTS preparation and practice" fontFamily="HelveticaNeueLtStd" fontSize="12.6" width="100%" paddingLeft="0" lineHeight="18" />
			</s:VGroup>
		</s:HGroup>
		
		<s:Spacer height="3" />
		<s:Rect verticalCenter="0" width="88%" height="1"  >
			<s:fill>
				<s:SolidColor color="0x999999"  />
			</s:fill>
		</s:Rect>
		<s:Spacer height="3" />
		<s:Label text="Please enter your login details to continue." fontFamily="HelveticaNeueLtStd" fontSize="12.6" width="100%" lineHeight="18" />
		<s:Spacer height="3" />
		<s:Label id="loginID_lbl" text="{hostComponent.loginID_lbl}" fontWeight="bold" />
		<s:TextInput id="nameInput" width="180" />
		<s:Spacer height="5" />
		<s:Label text="Password:" fontWeight="bold" />
		<s:TextInput id="passwordInput" displayAsPassword="true" width="180" />
		<s:Spacer height="3" />
		<s:HGroup>
		<!--
		<s:Button id="quickStartButton" label="Quick start" />
			-->
		<s:Button id="loginButton" label="Log in" />
			
		</s:HGroup>
		<s:Spacer height="3" />
		<s:Rect verticalCenter="0" width="88%" height="1"  >
			<s:fill>
				<s:SolidColor color="0x999999"  />
			</s:fill>
		</s:Rect>
	</s:VGroup>
	</s:BorderContainer>
	<s:BorderContainer right="0" width="60%" height="9%" cornerRadius="12" backgroundAlpha="0" borderAlpha="0" top="100">

	<s:VGroup paddingLeft="55" paddingTop="20" width="100%">
		<s:Label text="Why Road to IELTS is your best possible online preparation and practice resource for IELTS?" color="#174A7D" fontSize="16" fontWeight="bold" width="90%" lineHeight="22" />
		<s:Spacer height="1" />
		<s:Label text="Road to IELTS is your best possible online preparation and practice resource for IELTS. With hours of interactive activities, advice videos from British Council experts, hints and tips on question types as well as downloadable practice tests, it is comprehensive, up-to-date and aimed precisely at the challenges candidates face." width="90%" lineHeight="18" fontSize="12.6" />
		<s:Spacer height="10" />
		<s:SWFLoader source="@Embed(source='skins/ielts/assets/assets.swf', symbol='LoginGraphic')" top="90" right="30" />
	</s:VGroup>
	</s:BorderContainer>
</s:Skin>