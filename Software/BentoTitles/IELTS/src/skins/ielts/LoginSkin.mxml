	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.clarityenglish.ielts.view.login.LoginView")]
	</fx:Metadata>
	<fx:Script>
		<![CDATA[ 
			import flash.net.navigateToURL; 
			import com.clarityenglish.ielts.IELTSApplication;
			protected function clickHandler(event:MouseEvent):void {
				// TODO: Use CopyOps
				var urlReq:URLRequest = new URLRequest("http://www.ieltspractice.com"); 
				navigateToURL(urlReq, "_blank"); 
			} 
		]]> 
	</fx:Script>
	<s:states>
		<s:State name="disabled" />
		<s:State name="normal" />
		
		<s:State name="login" stateGroups="loginStates" />
		<s:State name="loginNetwork" stateGroups="loginStates" />
		<s:State name="loginConcurrentTracking" />
		<s:State name="register" stateGroups="registerStates" />
		<s:State name="registerNetwork" stateGroups="registerStates" />
		<s:State name="registerError" stateGroups="registerStates" />
	</s:states>

	<s:Group width="100%" top="3">
		<s:SWFLoader source="{hostComponent.productVersionLogo}" left="0" top="74" />
		<s:Label text="{hostComponent.productVersionText}" top="84" left="12" color="#FFFFFF" />
		<s:Image source="@Embed(source='/skins/ielts/assets/assets.swf', symbol='RoadToIELTSBigIcon')" width="100%" top="12" />
		<s:SWFLoader source="@Embed(source='/skins/ielts/assets/assets.swf', symbol='RoadToIELTSSubIcon')" top="52" />
		<s:SWFLoader id="upgradeButton" source="{hostComponent.assetFolder}upgrade.jpg" right="0" top="44" 
					 visible="{hostComponent.getProductVersion() == IELTSApplication.LAST_MINUTE}"
					 includeInLayout="{hostComponent.getProductVersion() == IELTSApplication.LAST_MINUTE}"
					 click="clickHandler(event)" buttonMode="true" useHandCursor="true" />
	</s:Group>
	
	<!--alice: CT login page-->
	<s:Label id="CTLoginTitleLabel" top="123" includeIn="loginConcurrentTracking" fontSize="21" fontWeight="bold"/>
	<s:BorderContainer left="0" width="85%" cornerRadius="12" borderColor="0xCCCCCC" top="150" includeIn="loginConcurrentTracking">
		<s:HGroup>
			<s:VGroup paddingLeft="20" paddingBottom="50">
				<s:HGroup paddingTop="15">
					<s:Label id="CTOptionLabel" fontSize="16" color="0x0C436B" paddingTop="5"/>
					<s:SWFLoader source="@Embed(source='/skins/ielts/assets/option1.jpg')" />
					<s:Label id="CTOption1Label" fontSize="16" color="0x0C436B" paddingTop="5"/>
				</s:HGroup>
				<s:Label id="CTillustration1Label" fontSize="13" color="0x000000" paddingTop="10" width="75%"/>
				<s:HGroup paddingTop="10">
					<s:Label id="emailLabel" fontSize="14" fontWeight="bold" paddingTop="5"/>
					<s:TextInput id="emailInput" width="180" />
				</s:HGroup>
				<s:HGroup paddingTop="5">
					<s:Label id="psdlLabel" fontSize="14" fontWeight="bold" paddingTop="5" paddingRight="5"/>
					<s:TextInput id="psdInput" width="180" displayAsPassword="true" />
				</s:HGroup>
				<s:Spacer height="10"/>
				<s:Button id="CTLoginButton" width="120"/>
			</s:VGroup>
			<s:VGroup paddingTop="10" width="100%" height="100%" paddingBottom="10">
				<s:Rect width="1" height="100%">
					<s:fill>
						<s:SolidColor color="0xCCCCCC"  />
					</s:fill>
				</s:Rect>
			</s:VGroup>
			<s:VGroup paddingLeft="20" paddingBottom="50">
				<s:HGroup  paddingTop="15">
					<s:Label id="CTOptionLabel2" fontSize="16" color="0x0C436B" paddingTop="5" />
					<s:SWFLoader source="@Embed(source='/skins/ielts/assets/option2.jpg')" />
					<s:Label id="CTOption2Label" fontSize="16" color="0x0C436B" paddingTop="5"/>
				</s:HGroup>
				<s:Label id="CTillustration2Label" fontSize="13" color="0x000000" paddingTop="10" width="75%"/>
				<s:Spacer height="10"/>
				<s:Button id="CTStartButton" width="120"/>
			</s:VGroup>
		</s:HGroup>
	</s:BorderContainer>
	<s:Group top="250" right="0" includeIn="loginConcurrentTracking">
		<s:SWFLoader source="@Embed(source='/skins/ielts/assets/login/login_graphic.png')" top="35" right="80" width="80%" height="80%"/>
	</s:Group>
	
	<s:BorderContainer left="0" width="40%" height="96%" backgroundColor="#F9F9F9" cornerRadius="12" borderColor="#CCCCCC" top="123" excludeFrom="loginConcurrentTracking">		
		<s:layout>
			<s:VerticalLayout paddingTop="25" horizontalAlign="center" />
		</s:layout>
			
	<s:VGroup width="100%" height="100%" top="120" left="120" paddingLeft="25" >
		<s:HGroup id="lastMinute" visible="{hostComponent.getProductVersion() == IELTSApplication.LAST_MINUTE}"
				  includeInLayout="{hostComponent.getProductVersion() == IELTSApplication.LAST_MINUTE}">
			<s:SWFLoader source="@Embed(source='/skins/ielts/assets/assets.swf', symbol='IELTSLogoLastMinute_Icon')" left="0" top="0" width="40" height="40" />
			<s:VGroup>
				<s:Label id="LMLabel" top="0" left="30" color="#174A7D" fontSize="16" fontWeight="bold" paddingTop="0" paddingLeft="7"/>	
				<s:Label id="LMTextLabel" width="92%" paddingLeft="7" lineHeight="18" />
			</s:VGroup>
		</s:HGroup>
		
		<s:HGroup id="fullVersion" visible="{hostComponent.getProductVersion() == IELTSApplication.FULL_VERSION}"
									includeInLayout="{hostComponent.getProductVersion() == IELTSApplication.FULL_VERSION}">
			<s:VGroup>
				<s:Label id="FVLabel" top="0" left="30" color="#174A7D" fontSize="16" fontWeight="bold" paddingTop="0" paddingLeft="0"/>	
				<s:Label id="FVTextLabel" width="100%" paddingLeft="0" lineHeight="18" />
			</s:VGroup>
		</s:HGroup>
		
		<s:Spacer height="3" />
		<s:Rect verticalCenter="0" width="88%" height="1"  >
			<s:fill>
				<s:SolidColor color="0x999999"  />
			</s:fill>
		</s:Rect>
		<s:Spacer height="3" />
		<!--s:VGroup id="networkStartBlock" width="100%" includeIn="loginNetwork" horizontalAlign="center" >
			<s:Spacer height="20" />
			<s:Button id="justStartButton" label="Start" />
			<s:Spacer height="20" />
		</s:VGroup>
		<s:VGroup width="100%" includeIn="loginNetwork" >
			<s:Rect verticalCenter="0" width="88%" height="1"  >
				<s:fill>
					<s:SolidColor color="0x999999"  />
				</s:fill>
			</s:Rect>
			<s:Spacer height="3" />
		</s:VGroup-->
		
		<s:VGroup id="loginBlock" width="100%" includeIn="loginStates" >
			<s:Label id="loginDetailLabel" width="100%" lineHeight="18" />
			<s:Spacer height="3" />
			<s:HGroup>
				<s:Label id="loginKey_lbl" text="{hostComponent.loginKey_lbl}" fontWeight="bold" paddingTop="6" />
				<s:TextInput id="loginKeyInput" width="180" />
			</s:HGroup>
			<s:Spacer height="5" />
			<s:HGroup id="passwordBlock" includeInLayout="{hostComponent.verified}" visible="{hostComponent.verified}">
				<s:Label id="passwordLabel" fontWeight="bold" paddingTop="6" />
				<s:TextInput id="passwordInput" displayAsPassword="true" width="180" />
			</s:HGroup>
			<s:Spacer height="3" />
			<s:HGroup>
				<s:Button id="loginButton" label="Log in" />
				<!-- gh#100 
				<s:Button id="newUserButton" label="New user" visible="{hostComponent.selfRegister > 0}" includeInLayout="{hostComponent.selfRegister > 0}" includeIn="loginStates" />
				-->
			</s:HGroup>
			<s:Group>
					
			</s:Group>				
			<!--s:Button id="testDriveAcademicButton" label="Test drive" visible="{hostComponent.noAccount}" includeInLayout="{hostComponent.noAccount}" includeIn="login" /-->
		</s:VGroup>
			
		<s:VGroup id="registerBlock" width="100%" includeIn="registerStates">
			<s:Label id="registerDetailLabel" 
					text.registerNetwork="This is the first time you have used the program, click New user to confirm." 
					width="100%" lineHeight="18" />
			<s:Spacer height="3" visible="{hostComponent.selfRegisterName}" includeInLayout="{hostComponent.selfRegisterName}"/>
			<s:HGroup id="nameGroup" visible="{hostComponent.selfRegisterName}" includeInLayout="{hostComponent.selfRegisterName}">
				<s:Label id="loginName_lbl" text="{hostComponent.loginName_lbl}" fontWeight="bold" paddingTop="6" />
				<s:TextInput id="loginNameInput" width="180" text="{hostComponent.savedName}"/>
			</s:HGroup>
			<s:Spacer height="3" visible="{hostComponent.selfRegisterID}" includeInLayout="{hostComponent.selfRegisterID}" />
			<s:HGroup id="idGroup" visible="{hostComponent.selfRegisterID}" includeInLayout="{hostComponent.selfRegisterID}">
				<s:Label id="loginID_lbl" text="{hostComponent.loginID_lbl}" fontWeight="bold" paddingTop="6" />
				<s:TextInput id="loginIDInput" width="180" text="{hostComponent.savedName}"/>
			</s:HGroup>
			<s:Spacer height="3" visible="{hostComponent.selfRegisterEmail}" includeInLayout="{hostComponent.selfRegisterEmail}" />
			<s:HGroup id="emailGroup" visible="{hostComponent.selfRegisterEmail}" includeInLayout="{hostComponent.selfRegisterEmail}">
				<s:Label id="loginEmail_lbl" text="{hostComponent.loginEmail_lbl}" fontWeight="bold" paddingTop="6" />
				<s:TextInput id="loginEmailInput" width="180" left="500" text="{hostComponent.savedName}" />
			</s:HGroup>
			<s:Spacer height="3" visible="{hostComponent.verified}" includeInLayout="{hostComponent.verified}" />
			<s:HGroup id="passwordGroup" visible="{hostComponent.verified}" includeInLayout="{hostComponent.verified}">
				<s:Label text="{hostComponent.loginPassword_lbl}" fontWeight="bold" paddingTop="6" />
				<s:TextInput id="newPasswordInput" displayAsPassword="true" width="180" text="{hostComponent.savedPassword}" />
			</s:HGroup>
			<s:Spacer height="3" />
			<s:HGroup>
				<s:Button id="addUserButton" label="New user" />
				<s:Button id="cancelButton" label="Cancel" />
			</s:HGroup>
		</s:VGroup>
		<s:Spacer height="3" />
		<s:Rect verticalCenter="0" width="88%" height="1"  >
			<s:fill>
				<s:SolidColor color="0x999999"  />
			</s:fill>
		</s:Rect>
	</s:VGroup>
	</s:BorderContainer>
