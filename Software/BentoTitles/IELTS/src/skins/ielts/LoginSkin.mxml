<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009"
		xmlns:s="library://ns.adobe.com/flex/spark"
		xmlns:mx="library://ns.adobe.com/flex/mx">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.clarityenglish.ielts.view.login.LoginView")]
	</fx:Metadata>
	
	<s:VGroup width="100%" top="18">
		<s:Image source="@Embed(source='skins/ielts/assets/assets.swf', symbol='RoadToIELTSBigIcon')" width="100%" top="13" />
		<s:RichText text="IELTS preparation and practice" color="0x00426B" fontFamily="HelveticaNeueLtStd" fontSize="15" />
	</s:VGroup>
	
	<s:VGroup width="100%" height="100%" top="120" left="30"  >
		<s:Label text="User login" fontFamily="HelveticaNeueLtStd" fontSize="20" />
		<s:Spacer height="3" />
		<s:Rect left="100" right="0" top="200" bottom="0" width="100%" height="2" >
			<s:fill>
				<s:SolidColor color="0x999999" />
			</s:fill>
		</s:Rect>

		<s:Label text="Login ID:" />
		<s:TextInput id="nameInput" />
		<s:Label text="This is the ID given to you to start Road to IELTS." />
		<s:Label text="It looks like this: 1280-8666-1111." color="#666666"/>
		<s:Spacer height="3" />
		<s:Label text="Password:" />
		<s:TextInput id="passwordInput" displayAsPassword="true" />
		<s:Label id="lostYourPasswordButton" text="Lost your password?" textDecoration="underline"/>
		<s:Spacer height="3" />
		<s:Button id="loginButton" label="Login" />
		<s:Button id="quickStartButton" label="Quick start" />
		
	</s:VGroup>
	
	<s:SWFLoader source="@Embed(source='skins/ielts/assets/assets.swf', symbol='LoginGraphic')" top="70" right="30" />
	
</s:Skin>