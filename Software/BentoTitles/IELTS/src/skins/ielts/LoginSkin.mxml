<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.clarityenglish.ielts.view.login.LoginView")]
	</fx:Metadata>
	
	<s:layout>
		<s:VerticalLayout />
	</s:layout>
	
	<s:Panel id="loginPanel" width="40%" height="50%" horizontalCenter="0" verticalCenter="0" >
		<s:VGroup left="10" top="10" right="10" bottom="10">
			<s:HGroup>
				<s:Label id="nameLabel" text="name" />			
				<s:TextInput id="nameInput" />				
			</s:HGroup>
			<s:HGroup>
				<s:Label id="passwordLabel" text="password" />			
				<s:TextInput id="passwordInput" displayAsPassword="true"/>				
			</s:HGroup>
			<s:Button id="loginButton" label="Start" />
		</s:VGroup>
	</s:Panel>
</s:Skin>