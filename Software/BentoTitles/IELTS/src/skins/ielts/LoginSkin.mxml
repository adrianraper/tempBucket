<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009"
		xmlns:s="library://ns.adobe.com/flex/spark"
		xmlns:mx="library://ns.adobe.com/flex/mx">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.clarityenglish.ielts.view.login.LoginView")]
	</fx:Metadata>
	
	<s:layout>
		<s:VerticalLayout />
	</s:layout>
	
	<s:Group width="100%">
		<s:Image source="@Embed(source='skins/ielts/assets/assets.swf', symbol='RoadToIELTSBigIcon')" width="100%" top="13" />
	</s:Group>
	
	<s:Group width="100%" height="100%">
		<s:Form>
			<s:FormHeading id="loginHeading" label="Licenced to: " />
			
			<s:FormItem label="Login ID">
				<s:TextInput id="nameInput" width="100%" />
			</s:FormItem>
			
			<s:FormItem label="Password">
				<s:TextInput id="passwordInput" width="100%" displayAsPassword="true" />
			</s:FormItem>
			
			<s:FormItem>
				<s:Button id="loginButton" label="Start" />
				<s:Button id="quickStartButton" label="Quick start" />
			</s:FormItem>
		</s:Form>
		
		<s:SWFLoader source="@Embed(source='skins/ielts/assets/assets.swf', symbol='LoginGraphic')" right="0" />
		
	</s:Group>
	
</s:Skin>