<!--- Based on the skin class for a Spark SkinnableContainer container.  

     @see spark.components.SkinnableContainer
        
      @langversion 3.0
      @playerversion Flash 10
      @playerversion AIR 1.5
      @productversion Flex 4
-->
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" 
    xmlns:fb="http://ns.adobe.com/flashbuilder/2009" alpha.disabled="0.5">

    <fx:Metadata>
    <![CDATA[ 
        /** 
         * @copy spark.skins.spark.ApplicationSkin#hostComponent
         */
        [HostComponent("spark.components.SkinnableContainer")]
    ]]>
    </fx:Metadata> 
	<fx:Declarations>
		<s:DropShadowFilter id="dropShadowFilter" blurX="3" blurY="3" alpha="0.3" distance="0" angle="180" knockout="false"/>
	</fx:Declarations>

    <s:states>
        <s:State name="normal" />
        <s:State name="disabled" />
    </s:states>
    
    <!--- Border and background for the container -->
	<s:Rect id="background" left="0" right="0" top="0" bottom="0" topRightRadiusX="8" topRightRadiusY="8" bottomRightRadiusX="8" bottomRightRadiusY="8" filters="{[dropShadowFilter]}">
		<s:fill>
			<s:LinearGradient rotation="-90">
				<s:GradientEntry color="#F7F7F7" ratio="0" />
				<s:GradientEntry color="#EDEDED" ratio="0.13"/>
				<s:GradientEntry color="#F9F9F9" ratio="0.51"/>
				<s:GradientEntry color="#EAEAEA" ratio="0.84"/>
				<s:GradientEntry color="#FFFFFF" ratio="0.92"/>
				<s:GradientEntry color="#E8E8E8" ratio="1"/>
			</s:LinearGradient>
		</s:fill>
	</s:Rect>
	<s:Rect top="8" right="8" bottom="8" left="0" width="100%" height="100%" topRightRadiusX="8" topRightRadiusY="8" bottomRightRadiusX="8" bottomRightRadiusY="8" >
		<s:fill>
			<s:LinearGradient rotation="90">
				<s:GradientEntry color="#EAEAEB" ratio="0" />
				<s:GradientEntry color="#FFFFFF" ratio="0.37" />
				<s:GradientEntry color="#E5E5E5" ratio="0.86"/>
				<s:GradientEntry color="#E2E3E2" ratio="1"/>
			</s:LinearGradient>
		</s:fill>
	</s:Rect>
    
    <!--
        Note: setting the minimum size to 0 here so that changes to the host component's
        size will not be thwarted by this skin part's minimum size.   This is a compromise,
        more about it here: http://bugs.adobe.com/jira/browse/SDK-21143
    -->
    <!--- @copy spark.components.SkinnableContainer#contentGroup -->
    <s:Group id="contentGroup" left="0" right="0" top="0" bottom="0" minWidth="0" minHeight="0">
        <s:layout>
            <s:BasicLayout/>
        </s:layout>
    </s:Group>

</s:Skin>
