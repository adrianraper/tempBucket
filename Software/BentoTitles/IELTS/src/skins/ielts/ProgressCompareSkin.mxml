<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx"
		xmlns:ns1="com.anychart.*"
		creationComplete="creationComplete(event)">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.clarityenglish.ielts.view.progress.components.ProgressCompareView")]
	</fx:Metadata>
	<fx:Script>
		<![CDATA[
			import com.clarityenglish.common.vo.content.Title;
			
			import mx.events.FlexEvent;
			
			protected function creationComplete(event:FlexEvent):void {
				if (hostComponent.licenceType==Title.LICENCE_TYPE_AA) {
					label1.text="This chart compares your scores in this session with other Road To IELTS users worldwide.";
					label2.text="The bars in the front row show your average scores. The bars in the back row are everyone else's.";
				} else {
					label1.text="This chart compares your scores with other Road To IELTS users worldwide.";
					label2.text="The bars in the front row show your average scores. The bars in the back row are everyone else's.";				
				}
			}
			
		]]>
	</fx:Script>
	
	<s:layout>
		<s:VerticalLayout />
	</s:layout>
	<s:Group>
	<s:SkinnableComponent id="courseKeyComponent" skinClass="skins.ielts.progress.CourseKeyGroupSkin" width="100%" height="30" top="0" />
	</s:Group>
	<s:Group>
		<s:Label id="label1" fontSize="12.6" paddingLeft="10" paddingTop="29"/>
		<s:Label id="label2" fontSize="12.6" paddingLeft="10" paddingTop="47"/>
		<ns1:AnyChartFlex id="compareChart" width="600" height="300" top="35" />
	</s:Group>
</s:Skin>