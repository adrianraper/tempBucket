<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.clarityenglish.ielts.view.account.AccountView")]
	</fx:Metadata>
	
	<s:layout>
		<s:VerticalLayout paddingTop="5" />
	</s:layout>
	
	<s:VGroup width="100%" >
		<s:Label text="My Account" fontSize="20" width="100%" />
		
		<s:Rect left="100" right="0" top="200" bottom="0" width="100%" height="2" >
			<s:fill>
				<s:SolidColor color="0x999999" />
			</s:fill>
		</s:Rect>

		<s:Spacer height="3" />
		<s:Label text="You have 30 days until your program expires." fontSize="12" width="100%" />	

		<s:VGroup width="100%" height="100%" top="120"  >
			<s:Label text="User full name:" />
			<s:TextInput id="nameInput" />
			<s:Label text="Email:" />
			<s:Label text="Expiry date:"/>
			<s:Spacer height="3" />
			<s:Label text="Version:" />
			<s:Label text="New password:" />
			<s:Label text="Confirm password:" />
			<s:TextInput id="passwordInput" />
			<s:Spacer height="3" />
			<s:Button id="loginButton" label="Save changes" />

	</s:VGroup></s:VGroup>
	
</s:Skin>