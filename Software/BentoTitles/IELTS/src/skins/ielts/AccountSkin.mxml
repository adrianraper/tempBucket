<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.clarityenglish.ielts.view.account.AccountView")]
	</fx:Metadata>
	
	<s:layout>
		<s:VerticalLayout paddingTop="5" />
	</s:layout>
	
	<s:VGroup width="100%" paddingTop="20" >
		<s:Label text="My Account" fontSize="20" width="100%" />
		
		<s:Rect left="100" right="0" top="200" bottom="0" width="100%" height="1" >
			<s:fill>
				<s:SolidColor color="0x999999" />
			</s:fill>
		</s:Rect>

		<s:Spacer height="3" />
		<s:Label text="You have 30 days until your program expires." fontWeight="bold" fontSize="12" width="100%" />	
		<s:Spacer height="3" />
		<s:HGroup width="100%" height="100%" top="120" >
			<s:Label text="User full name:" />
			<s:Label text="Matthew J" fontWeight="bold" />
		</s:HGroup>
		<s:Spacer height="1" />

		<s:HGroup width="100%" height="100%" top="120">
			<s:Label text="Email:"/>
			<s:Label text="matthewj@email.com" fontWeight="bold" />
		</s:HGroup>
		<s:Spacer height="1" />

		<s:HGroup width="100%" height="100%" top="120">
			<s:Label text="Expiry date:"/>
			<s:Label text="27th May 2012" fontWeight="bold"/>
		</s:HGroup>
		<s:Spacer height="1" />

		<s:HGroup width="100%" height="100%" top="120">
			<s:Label text="Version:" />
			<s:Label text="Academic module - Last minute" fontWeight="bold"/>
		</s:HGroup>
		<s:Spacer height="1" />

		<s:HGroup width="100%" height="100%" top="120">
			<s:Label text="New password:" />
			<s:TextInput id="newPassword" width="180" />
		</s:HGroup>
		<s:Spacer height="1" />

		<s:HGroup width="100%" height="100%" top="120">
			<s:Label text="Confirm password:" />
			<s:TextInput id="confirmPassword" width="180" />
		</s:HGroup>
		<s:Spacer height="1" />

			<s:Button id="saveChangesButton" label="Save changes" />

	</s:VGroup>
	
</s:Skin>