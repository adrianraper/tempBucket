<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009"
		xmlns:s="library://ns.adobe.com/flex/spark"
		xmlns:mx="library://ns.adobe.com/flex/mx">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.clarityenglish.bento.view.ending.EndingView")]
	</fx:Metadata>
	
	<fx:Script>
		<![CDATA[
			import flash.net.navigateToURL;
			
			protected function clickHandler(event:MouseEvent):void {
				
				var urlReq:URLRequest = new URLRequest("http://www.clarityenglish.com/questionnaire/rtiv2feedback.php");
				navigateToURL(urlReq, "_self");
			}
			
			protected function onMoreClicked(event:MouseEvent):void {
				var urlReq:URLRequest = new URLRequest(hostComponent.getCopyProvider().getCopyForId("moreURL"));
				navigateToURL(urlReq, "_self");
			}
		]]>
		<![CDATA[
			import flashx.textLayout.conversion.TextConverter;
		]]>
	</fx:Script>
	
	<s:states>
		<s:State name="disabled" />
		<s:State name="normal" />
		
		<s:State name="lastMinute" stateGroups="bcStates" />
		<s:State name="testDrive" stateGroups="bcStates" />
	</s:states>
	
	<s:BorderContainer horizontalCenter="0" borderAlpha="0" backgroundAlpha="0" width="90%" includeIn="normal">
		<s:layout>
			<s:VerticalLayout paddingTop="30" horizontalAlign="center"/>
		</s:layout>
		
		<s:Group width="100%" height="440" top="30">
			<s:SWFLoader id="endLogo" source="@Embed(source='/skins/ielts/assets/assets.swf', symbol='CreditGraphic')" autoLoad="true" horizontalAlign="center" horizontalCenter="0" />
			<s:Spacer height="0" />
			<s:VGroup width="100%" horizontalAlign="center" paddingTop="80">
				<s:SWFLoader source="@Embed(source='/skins/ielts/assets/credits.png')" horizontalAlign="center" horizontalCenter="0" />
				<s:Spacer height="10" />
				<s:Label id="thankYouLabel" fontSize="21" color="0x174A7D" fontWeight="bold" horizontalCenter="0" />
				<s:Spacer height="0" />
				<s:Label id="weWouldLabel" fontSize="21" color="0x174A7D" fontWeight="bold" click="clickHandler(event)" horizontalCenter="0" />
				<s:Spacer height="0" />
				<s:SWFLoader source="@Embed(source='/skins/ielts/assets/assets.swf', symbol='QuestionnairekButton')" click="clickHandler(event)" buttonMode="true" useHandCursor="true" width="313" horizontalCenter="0" />
				<s:Spacer height="10" />
				<s:RichText id="creditCaptionLabel" fontSize="21" horizontalCenter="0" />
			</s:VGroup>
		</s:Group>
		
		<s:VGroup>
			<s:Rect left="100" right="0" top="100" bottom="0" width="100%" height="1">
				<s:fill>
					<s:SolidColor color="0x999999" />
				</s:fill>
			</s:Rect>
			<s:Scroller width="800" height="20%">
				<s:Group>
					<s:RichText id="creditsRichText" />
				</s:Group>
			</s:Scroller>
			
			<s:Rect width="100%" height="1" horizontalCenter="0">
				<s:fill>
					<s:SolidColor color="0x999999" />
				</s:fill>
			</s:Rect>
		</s:VGroup>
	</s:BorderContainer>
	
	<s:BorderContainer horizontalCenter="0" borderAlpha="0" backgroundAlpha="0" width="90%" includeIn="bcStates">
		<s:Group width="100%" height="440" top="150">
			<s:SWFLoader source="@Embed(source='/skins/ielts/assets/assets.swf', symbol='CreditGraphic')" autoLoad="true" horizontalAlign="center" horizontalCenter="0" />
			<s:Spacer height="0" />
			<s:VGroup width="100%" horizontalAlign="center" paddingTop="80">
				<s:SWFLoader source="@Embed(source='/skins/ielts/assets/credits.png')" horizontalAlign="center" horizontalCenter="0" />
				<s:Spacer height="10" />
				<s:Label id="thankYouLabel2" fontSize="21" color="0x174A7D" fontWeight="bold" horizontalCenter="0" />
				<s:Spacer height="10" />
				<s:HGroup>
					<s:Label id="upgradeLabel" fontSize="21" fontFamily="Segoe Print" fontWeight="bold" color="#0094D5" horizontalCenter="0" />
					<s:Label id="fullVersionLabel" fontSize="21" fontFamily="Segoe Print" fontWeight="bold" color="#E86C1F" horizontalCenter="0" paddingLeft="3" />
				</s:HGroup>
				<s:Spacer height="10" />
				<s:HGroup paddingLeft="-100">
					<s:SWFLoader source="@Embed(source='/skins/ielts/assets/credits/click_here.png')"/>
					<s:Button useHandCursor="true" buttonMode="true" id="moreButton" click="onMoreClicked(event)" width="200" height="40" />
				</s:HGroup>				
			</s:VGroup>			
		</s:Group>
	</s:BorderContainer>	
</s:Skin>
