<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009"
		xmlns:s="library://ns.adobe.com/flex/spark"
		xmlns:zone="com.clarityenglish.ielts.view.zone.*"
		xmlns:title="com.clarityenglish.ielts.view.title.*">

	<fx:Metadata>
		[HostComponent("com.clarityenglish.ielts.view.title.TitleView")]
	</fx:Metadata>
	
	<fx:Script>
		<![CDATA[
		import com.clarityenglish.bento.BentoApplication;
		import com.clarityenglish.ielts.IELTSApplication;
		]]>
	</fx:Script>
	
	<s:states>
		<s:State name="disabled" />
		<s:State name="normal" />
		
		<s:State name="home" />
		<s:State name="zone" />
		<s:State name="progress" />
		<s:State name="account" />
		<s:State name="support" />
		<s:State name="exercise" />
		<s:State name="candidates" />
	</s:states>
	
	<zone:PracticeZonePopoutView id="practiceZonePopoutView" right="457" y="104" />

	<s:Group width="100%" height="38" excludeFrom="exercise">
		<s:Image source="@Embed(source='/skins/ielts/assets/assets.swf', symbol='RoadToIELTSBigIcon')" width="100%"
				 top="12"/>
		<s:SWFLoader source="@Embed(source='/skins/ielts/assets/assets.swf', symbol='RoadToIELTSSubIcon')" top="52"/>
		<!--s:SWFLoader source="{hostComponent.productVersionLogo}" left="0" top="74" /-->
		<s:Group left="0" top="74">
			<s:Group left="{hostComponent.productVersion != BentoApplication.DEMO ? 2 : 35}" top="3" height="23">
				<s:Rect left="0" right="0" top="0" bottom="0" radiusX="10" radiusY="10">
					<s:fill>
						<s:SolidColor color="#08416B"/>
					</s:fill>
				</s:Rect>
				<s:Label left="{hostComponent.productVersion != IELTSApplication.FULL_VERSION ? 55 : 40}" right="40"
						 verticalCenter="{hostComponent.copyProvider.getLanguageCode() != 'ZH' ? 2 : 0}"
						 text="{hostComponent.productVersionText}" color="#FFFFFF"/>
			</s:Group>
			<s:SWFLoader source="{hostComponent.lastMinuteLogo}" left="0" top="0"
						 visible="{hostComponent.productVersion == IELTSApplication.LAST_MINUTE}"
						 includeInLayout="{hostComponent.productVersion == IELTSApplication.LAST_MINUTE}"/>
			<s:SWFLoader source="{hostComponent.testDriveLogo}" left="0" top="0"
						 visible="{hostComponent.productVersion == IELTSApplication.TEST_DRIVE}"
						 includeInLayout="{hostComponent.productVersion == IELTSApplication.TEST_DRIVE}"/>
			<s:SWFLoader source="{hostComponent.demoLogo}" left="0" top="0"
						 visible="{hostComponent.productVersion == BentoApplication.DEMO}"
						 includeInLayout="{hostComponent.productVersion == BentoApplication.DEMO}"/>
		</s:Group>
		<s:Button id="logoutButton" right="0" height="35" top="5" buttonMode="true" />
	</s:Group>
	
	<!--<s:SWFLoader id="infoButton" source="{hostComponent.productVersionInfo}" right="0" top="44" buttonMode="true" useHandCursor="true" visible="{hostComponent.productVersion == IELTSApplication.TEST_DRIVE}" excludeFrom="exercise, candidates" />-->
	<!--gh#383-->
	<title:InforButton id="topInforButton" richTextFlow="{hostComponent.inforButtonTextFlow}" right="10" top="55" buttonMode="true" useHandCursor="true" visible="{hostComponent.productVersionInforButton}" excludeFrom="exercise, candidates" />
	
	<s:Group width="100%" includeIn="exercise">
		<s:SWFLoader source="@Embed(source='/skins/ielts/assets/assets.swf', symbol='RoadToIELTSSmallIcon')"/>
		<s:SWFLoader source="@Embed(source='/skins/ielts/assets/assets.swf', symbol='RoadToIELTSSubIcon')" left="210"
					 top="7"/>
		<!--s:SWFLoader source="{hostComponent.productVersionLogo}" left="460" top="0" /-->
		<s:Group left="460" top="0">
			<s:Group left="{hostComponent.productVersion != BentoApplication.DEMO ? 2 : 35}" top="3" height="23">
				<s:Rect left="0" right="0" top="0" bottom="0" radiusX="10" radiusY="10">
					<s:fill>
						<s:SolidColor color="#08416B"/>
					</s:fill>
				</s:Rect>
				<s:Label left="{hostComponent.productVersion != IELTSApplication.FULL_VERSION ? 55 : 40}" right="40"
						 verticalCenter="{hostComponent.copyProvider.getLanguageCode() != 'ZH' ? 2 : 0}"
						 text="{hostComponent.productVersionText}" color="#FFFFFF"/>
			</s:Group>
			<s:SWFLoader source="{hostComponent.lastMinuteLogo}" left="0" top="0"
						 visible="{hostComponent.productVersion == IELTSApplication.LAST_MINUTE}"
						 includeInLayout="{hostComponent.productVersion == IELTSApplication.LAST_MINUTE}"/>
			<s:SWFLoader source="{hostComponent.testDriveLogo}" left="0" top="0"
						 visible="{hostComponent.productVersion == IELTSApplication.TEST_DRIVE}"
						 includeInLayout="{hostComponent.productVersion == IELTSApplication.TEST_DRIVE}"/>
			<s:SWFLoader source="{hostComponent.demoLogo}" left="0" top="0"
						 visible="{hostComponent.productVersion == BentoApplication.DEMO}"
						 includeInLayout="{hostComponent.productVersion == BentoApplication.DEMO}"/>
		</s:Group>
		<s:Button id="backToMenuButton" skinClass="skins.ielts.title.BackToMenuButtonSkin" label="Back to Menu" right="10" top="4" />
	</s:Group>

	<s:TabbedViewNavigator id="sectionNavigator" left="0" right="0" top="0" bottom="0" creationPolicy="all">
		<s:ViewNavigator id="homeViewNavigator" firstView="com.clarityenglish.ielts.view.home.HomeView" icon="{getStyle('homeIcon')}" left="0" right="0" height="100%" />
		<s:ViewNavigator id="myProgressViewNavigator" firstView="com.clarityenglish.bento.view.progress.ProgressView" icon="{getStyle('progressIcon')}" left="0" right="0" height="100%" />
		<s:ViewNavigator id="myProfileViewNavigator" firstView="com.clarityenglish.ielts.view.account.AccountView" icon="{getStyle('profileIcon')}" left="0" right="0" height="100%" />
		<s:ViewNavigator id="candidatesViewNavigator" firstView="com.clarityenglish.ielts.view.candidates.CandidatesView" icon="{getStyle('candidatesIcon')}" left="-20" right="0" height="100%" />
		<s:ViewNavigator id="helpViewNavigator" firstView="com.clarityenglish.ielts.view.support.SupportView" icon="{getStyle('helpIcon')}" left="0" right="0" height="100%" />
	</s:TabbedViewNavigator>
		
</s:Skin>