<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009"
		xmlns:s="library://ns.adobe.com/flex/spark"
		xmlns:mx="library://ns.adobe.com/flex/mx"
		xmlns:controls="com.clarityenglish.bento.view.*"
		xmlns:home="com.clarityenglish.ielts.view.home.*"
		xmlns:zone="com.clarityenglish.ielts.view.zone.*"
		xmlns:progress="com.clarityenglish.ielts.view.progress.*"
		xmlns:account="com.clarityenglish.ielts.view.account.*"
		xmlns:support="com.clarityenglish.ielts.view.support.*"
		xmlns:exercise="com.clarityenglish.ielts.view.exercise.*">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.clarityenglish.ielts.view.title.TitleView")]
	</fx:Metadata>
	
	<s:states>
		<s:State name="disabled" />
		<s:State name="normal" />
		
		<s:State name="home" />
		<s:State name="zone"  />
		<s:State name="progress" />
		<s:State name="account" />
		<s:State name="support" />
		<s:State name="exercise" />
	</s:states>
	
	<s:layout>
		<s:VerticalLayout paddingTop="3" />
	</s:layout>
	
	<s:Group width="100%" height="38" excludeFrom="exercise">
		<s:Image source="@Embed(source='skins/ielts/assets/assets.swf', symbol='RoadToIELTSBigIcon')" width="100%" top="12" />
		<s:SWFLoader source="@Embed(source='skins/ielts/assets/assets.swf', symbol='RoadToIELTSSubIcon')" top="52" />
		<s:SWFLoader source="{hostComponent.productVersionLogo}" left="0" top="74" />
		<s:Label text="{hostComponent.productVersionText}" top="84" left="12" color="#FFFFFF" />
		<s:ButtonBar id="navBar" right="105" height="35" top="5" />

		<s:SWFLoader id="infoButton" source="{hostComponent.productVersionInfo}" right="0" top="44"
					 buttonMode="true" useHandCursor="true" />
		<s:Button id="logoutButton" right="0" height="35" top="5" buttonMode="true"/>
	</s:Group>
	
	<s:Group width="100%" includeIn="exercise">
		<s:SWFLoader source="@Embed(source='skins/ielts/assets/assets.swf', symbol='RoadToIELTSSmallIcon')"/>
		<s:SWFLoader source="@Embed(source='skins/ielts/assets/assets.swf', symbol='RoadToIELTSSubIcon')" left="210" top="7" />
		<s:SWFLoader source="{hostComponent.productVersionLogo}" left="460" top="0" />
		<s:Label text="{hostComponent.productVersionText}" top="10" left="472" color="#FFFFFF" />
		<s:Button id="backToMenuButton" skinClass="skins.ielts.title.BackToMenuButtonSkin" label="Back to Menu" right="10" top="4" />
	</s:Group>
	
	<s:HGroup width="100%" height="100%">
		<s:Group width="100%" height="100%">
			<home:HomeView id="homeView" width="100%" height="100%" includeIn="home" />
			<zone:ZoneView id="zoneView" width="100%" height="100%" includeIn="zone" course="{hostComponent.selectedCourseXML}" />
			<progress:ProgressView id="progressView" width="100%" height="100%" includeIn="progress" />
			<account:AccountView id="accountView" width="100%" height="100%" includeIn="account" />
			<support:SupportView id="supportView" width="100%" height="100%" includeIn="support" />
			<exercise:ExerciseView id="exerciseView" width="100%" height="100%" includeIn="exercise" />
		</s:Group>
	</s:HGroup>
	
</s:Skin>