<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009"
		xmlns:s="library://ns.adobe.com/flex/spark"
		xmlns:mx="library://ns.adobe.com/flex/mx"
		xmlns:controls="com.clarityenglish.bento.view.*"
		xmlns:home="com.clarityenglish.ielts.view.home.*"
		xmlns:zone="com.clarityenglish.ielts.view.zone.*"
		xmlns:progress="com.clarityenglish.ielts.view.progress.*"
		xmlns:account="com.clarityenglish.ielts.view.account.*"
		xmlns:exercise="com.clarityenglish.ielts.view.exercise.*">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.clarityenglish.ielts.view.title.TitleView")]
	</fx:Metadata>
	
	<s:states>
		<s:State name="home" />
		<s:State name="zone" />
		<s:State name="progress" />
		<s:State name="account" />
		<s:State name="exercise" />
	</s:states>
	
	<s:layout>
		<s:VerticalLayout paddingTop="5" />
	</s:layout>
	
	<s:Group width="100%" excludeFrom="exercise">
		<s:Image source="@Embed(source='skins/ielts/assets/assets.swf', symbol='RoadToIELTSBigIcon')" width="100%" top="13" />
		<s:Label text = "Welcome, {hostComponent.user.fullName}. Today is {hostComponent.dateFormatter.format(new Date())}. (config={hostComponent.configID})" top="50" right="0" />
		<s:ButtonBar id="navBar" right="0" height="35" top="0" />
	</s:Group>
	
	<s:Group width="100%" includeIn="exercise">
		<s:SWFLoader source="@Embed(source='skins/ielts/assets/assets.swf', symbol='RoadToIELTSSmallIcon')" />
		<s:Button id="backToMenuButton" skinClass="skins.ielts.title.BackToMenuButtonSkin" label="Menu" right="5" />
	</s:Group>
	
	<s:HGroup width="100%" height="100%">
		<s:Group width="100%" height="100%">
			<home:HomeView id="homeView" width="100%" height="100%" includeIn="home" />
			<zone:ZoneView id="zoneView" width="100%" height="100%" includeIn="zone" />
			<progress:ProgressView id="progressView" width="100%" height="100%" includeIn="progress" />
			<account:AccountView id="accountView" width="100%" height="100%" includeIn="account" />
			
			<exercise:ExerciseView id="exerciseView" width="100%" height="100%" includeIn="exercise" />
		</s:Group>
	</s:HGroup>
	
</s:Skin>