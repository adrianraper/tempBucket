<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark"
		xmlns:video="com.clarityenglish.controls.video.*" creationComplete="onCreationComplete(event)">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.clarityenglish.ielts.view.zone.QuestionZoneVideoSectionView")]
	</fx:Metadata>
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			
			protected function onCreationComplete(event:FlexEvent):void
			{
				// TODO Auto-generated method stub
				if (hostComponent.isPlatformiPad) {
					videoSelector.left = 55;
					videoSelector.top = 37;
				} else {
					videoSelector.left = 20;
					videoSelector.top = 57;
				}
			}
			
		]]>
	</fx:Script>
	
	<!-- states -->
	<s:states>
		<s:State name="disabled" />
		<s:State name="normal" />
		
		<s:State name="reading" />
		<s:State name="writing" />
		<s:State name="listening" />
		<s:State name="speaking" />
	</s:states>
	
	<s:Group right="17" top="13" visible="{!hostComponent.isPlatformiPad}">
		<s:SWFLoader source="@Embed(source='/skins/ielts/assets/zone/channelTipTextReading.png')" includeIn="reading" />
		<s:SWFLoader source="@Embed(source='/skins/ielts/assets/zone/channelTipTextWriting.png')" includeIn="writing" />
		<s:SWFLoader source="@Embed(source='/skins/ielts/assets/zone/channelTipTextListening.png')" includeIn="listening" />
		<s:SWFLoader source="@Embed(source='/skins/ielts/assets/zone/channelTipTextSpeaking.png')" includeIn="speaking" />
	</s:Group>
	<s:Group right="4" top="33" visible="{!hostComponent.isPlatformiPad}">
		<s:SWFLoader source="@Embed(source='/skins/ielts/assets/zone/channelTipArrowReading.png')" includeIn="reading" />
		<s:SWFLoader source="@Embed(source='/skins/ielts/assets/zone/channelTipArrowWriting.png')" includeIn="writing" />
		<s:SWFLoader source="@Embed(source='/skins/ielts/assets/zone/channelTipArrowListening.png')" includeIn="listening" />
		<s:SWFLoader source="@Embed(source='/skins/ielts/assets/zone/channelTipArrowSpeaking.png')" includeIn="speaking" />
	</s:Group>
	
	<video:VideoSelector id="videoSelector"
						 left="20"
						 top="57"
						 showSelector="false"
						 autoPlay="true"
						 placeholderSource="@Embed(source='/skins/ielts/assets/initializing_video.png')"
						 />
	
</s:Skin>