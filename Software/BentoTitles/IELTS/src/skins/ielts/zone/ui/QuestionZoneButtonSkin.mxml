<!--- The default skin class for the Spark Button component.

 @see spark.components.Button

 @langversion 3.0
 @playerversion Flash 10
 @playerversion AIR 1.5
 @productversion Flex 4
-->
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009"
        xmlns:s="library://ns.adobe.com/flex/spark"
        xmlns:assets="skins.ielts.assets.zone.*"
        minWidth="21" minHeight="21"
        alpha.disabled="0.5" creationComplete="onCreationComplete(event)">

    <fx:Metadata>
        <![CDATA[
        /**
         * @copy spark.skins.spark.ApplicationSkin#hostComponent
         */
        [HostComponent("com.clarityenglish.ielts.view.zone.ui.ExamPracticeButton")]
        ]]>
    </fx:Metadata>

    <fx:Script>
        <![CDATA[
            [Embed(source="/skins/ielts/assets/assets.swf", symbol="SearchIcon")]
            [Bindable]
            private var searchIcon:Class;

            [Embed(source="/skins/ielts/assets/assets.swf", symbol="WatchIcon")]
            [Bindable]
            private var watchIcon:Class;

            protected function onCreationComplete(event:Event):void {
                iconSWEFLoader.source = getIcon();
            }

            protected function getIcon():Class {
                iconSWEFLoader.visible = true;
                iconSWEFLoader.includeInLayout = true;
                switch (hostComponent.thumbnailSource) {
                    case 'search' :
                        return searchIcon;
                        break;
                    case 'watch' :
                        return watchIcon;
                        break;
                    default:
                        iconSWEFLoader.visible = false;
                        iconSWEFLoader.includeInLayout = false;
                        return null;
                }

            }

        ]]>
    </fx:Script>

    <fx:Declarations>
        <s:DropShadowFilter id="dropShadowFilterLeft" color="#CCCCCC" blurX="5" blurY="5" alpha="0.75" distance="1" angle="180" knockout="false"/>
        <s:DropShadowFilter id="dropShadowFilterRight" color="#CCCCCC" blurX="5" blurY="5" alpha="0.75" distance="1" angle="0" knockout="false"/>
    </fx:Declarations>

    <!-- states -->
    <s:states>
        <s:State name="up"/>
        <s:State name="over"/>
        <s:State name="down"/>
        <s:State name="disabled"/>
    </s:states>

    <s:Group width="100%" height="100%" filters="{[dropShadowFilterLeft, dropShadowFilterRight]}">
        <s:Rect width="100%" height="100%" radiusY="3" radiusX="3">
            <s:fill>
                <s:SolidColor color="{hostComponent.textBackgroundColor}"/>
            </s:fill>
        </s:Rect>

        <s:HGroup width="100%" height="100%" verticalAlign="middle" horizontalAlign="center">
            <s:SWFLoader id="iconSWEFLoader" source="{getIcon}"
                         horizontalCenter="0" verticalCenter="15" filters="{[dropShadowFilterLeft]}"/>
            <!-- layer 8: text -->
            <!--- @copy spark.components.supportClasses.ButtonBase#labelDisplay  -->
            <s:Label id="labelDisplay"
                     paddingTop="3"
                     maxDisplayedLines="2"
                     fontWeight="normal"
                     color="#FFFFFF" fontSize="15">
            </s:Label>
        </s:HGroup>
    </s:Group>

    <!-- Mouse over effect-->
    <s:Rect width="100%" height="100%" radiusY="3" radiusX="3" includeIn="over, down">
        <s:fill>
            <s:SolidColor color="#4C4C4C" alpha="0.15" />
        </s:fill>
    </s:Rect>

</s:Skin>
