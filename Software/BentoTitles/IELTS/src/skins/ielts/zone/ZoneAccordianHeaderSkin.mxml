<!--- The default skin class for the middle buttons in a Spark ButtonBar component.  

       @see spark.components.ButtonBar
       @see spark.components.ButtonBarButton
        
      @langversion 3.0
      @playerversion Flash 10
      @playerversion AIR 1.5
      @productversion Flex 4
-->
<s:SparkButtonSkin xmlns:fx="http://ns.adobe.com/mxml/2009" 
                   xmlns:s="library://ns.adobe.com/flex/spark" 
                   xmlns:fb="http://ns.adobe.com/flashbuilder/2009"
                   minWidth="21" minHeight="30" 
                   alpha.disabled="0.5" xmlns:zone="skins.ielts.zone.*">

    <!-- host component -->
    <fx:Metadata>
        <![CDATA[ 
            /** 
             * @copy spark.skins.spark.ApplicationSkin#hostComponent
             */
            [HostComponent("spark.components.ButtonBarButton")]
        ]]>
    </fx:Metadata>
    
    <fx:Script>
		<![CDATA[
			import com.clarityenglish.ielts.view.zone.ZoneView;
			
		]]>
    </fx:Script>
    
    <!-- states -->
    <s:states>
        <s:State name="up" stateGroups="unselectedStates" />
        <s:State name="over" stateGroups="overStates, unselectedStates" />
        <s:State name="down" stateGroups="downStates, unselectedStates" />
        <s:State name="disabled" stateGroups="disabledStates, unselectedStates" />
        <s:State name="upAndSelected" stateGroups="selectedStates, selectedUpStates" />
        <s:State name="overAndSelected" stateGroups="overStates, selectedStates" />
        <s:State name="downAndSelected" stateGroups="downStates, selectedStates" />
        <s:State name="disabledAndSelected" stateGroups="selectedUpStates, disabledStates, selectedStates" />
    </s:states>
    
	<!-- Hit area -->
	<s:Rect left="0" right="0" top="0" bottom="0">
		<s:fill>
			<s:SolidColor alpha="0" />
		</s:fill>
	</s:Rect>
	
	<s:Group left="0" right="0" top="0" bottom="0">
		<s:layout>
			<s:HorizontalLayout verticalAlign="middle" />
		</s:layout>
		
		<s:Label id="labelDisplay" maxDisplayedLines="1" fontWeight="bold" fontSize="14" color.up="#303030" color.selectedStates="{getStyle(ZoneView.horribleHackCourseClass + 'Color')}" />
		
		<s:Line width="100%">
			<s:stroke>
				<s:SolidColorStroke color="#303030" />
			</s:stroke>
		</s:Line>
		
		<zone:HideIcon courseColor="{getStyle(ZoneView.horribleHackCourseClass + 'Color')}" courseColorDark="{getStyle(ZoneView.horribleHackCourseClass + 'ColorDark')}" includeIn="selectedStates" />
		<s:SWFLoader source="@Embed(source='skins/ielts/assets/assets.swf', symbol='ShowIcon')" includeIn="unselectedStates" />
	</s:Group>
</s:SparkButtonSkin>
