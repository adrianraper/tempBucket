<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx"
		xmlns:ui="com.clarityenglish.ielts.view.progress.ui.*"
		xmlns:skins="skins.ielts.progress.*"
		xmlns:ns1="com.anychart.*">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.clarityenglish.ielts.view.progress.components.ProgressCoverageView")]
	</fx:Metadata>
	
	<fx:Script>
		<![CDATA[
			import mx.collections.XMLListCollection;
			
			
		]]>
	</fx:Script>
	
	<s:layout>
		<s:VerticalLayout />
	</s:layout>

	<ui:ProgressCourseBarComponent id="progressCourseBar" width="100%" height="100" />
	
	<ui:ProgressBarRenderer id="progressBar" width="100%" height="100" />
	
	<s:HGroup width="100%" height="100%" >
		<!-- HELP. Why does using getStyle here give a run-time crash (anonymous function in setup...)
			Other skins use it identically -->
		<skins:CoverageExerciseSkin id="practiceZoneCoverage"
				caption="Practice zone"
				dataProvider="{new XMLListCollection(hostComponent.practiceZoneDataProvider)}"  />
		<skins:CoverageExerciseSkin id="questionZoneCoverage"
				caption="Question zone"
				dataProvider="{hostComponent.questionZoneDataProvider}" />
		<skins:CoverageExerciseSkin id="adviceZoneCoverage"
				caption="Advice zone"
				dataProvider="{hostComponent.adviceZoneDataProvider}" />
		<skins:CoverageExerciseSkin id="examPracticeCoverage"
				caption="Exam practice"
				dataProvider="{hostComponent.examPracticeDataProvider}" />
		<!--
				courseColor="{getStyle(hostComponent.courseClass + 'Color')}"
				courseColorDark="{getStyle(hostComponent.courseClass + 'ColorDark')}"
		-->
		<!-- Can you do this so that detailDataProvider can simply be bindable itself? 
			I get internal build errors if I mix up single and double quotes
				dataProvider="{new XMLListCollection(hostComponent.detailDataProvider.course.(@["class"]==hostComponent.courseClass).unit.(@["class"]=='exam-practice').exercise}"
		-->
	</s:HGroup>

</s:Skin>