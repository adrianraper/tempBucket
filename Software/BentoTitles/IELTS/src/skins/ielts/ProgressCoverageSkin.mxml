									  dataProvider="{hostComponent.questionZoneDataProvider}" />
		<ui:CoverageExerciseComponent id="adviceZoneCoverage" width="20%"
									  caption="Advice zone"
									  dataProvider="{hostComponent.adviceZoneDataProvider}" />
