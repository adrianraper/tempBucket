<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:fb="http://ns.adobe.com/flashbuilder/2009" alpha.disabled="0.5" 
		xmlns:ui="com.clarityenglish.bento.view.progress.ui.*"  
		xmlns:certificate="skins.clearpronunciation.assets.progress.certificate.*">
	
	<fx:Metadata>
		[HostComponent("com.clarityenglish.clearpronunciation.view.progress.ProgressCertificateView")]
	</fx:Metadata>
	
	<s:states>
		<s:State name="normal" />
		<s:State name="disabled" />
	</s:states>
	
	<s:VGroup left="20" right="20" top="10" bottom="0" gap="5">
		<ui:ProgressCourseButtonBar id="progressCourseButtonBar" height="40">
			<ui:layout>
				<s:ButtonBarHorizontalLayout gap="35" />
			</ui:layout>
		</ui:ProgressCourseButtonBar>
		
		<s:Rect id="titleLine" height="1" width="100%">
			<s:fill>
				<s:SolidColor color="#000000" />
			</s:fill>
		</s:Rect>
	</s:VGroup>
	
	<!-- Not complete text-->
	<s:VGroup id="oopsVGroup" horizontalCenter="0" verticalCenter="-20" visible="false" gap="20">
		<certificate:oops />
		<s:RichEditableText id="notCompleteRichEditableText" verticalCenter="0" horizontalCenter="0" fontSize="13" lineHeight="30" />
	</s:VGroup>
	
	<s:Scroller top="60" horizontalCenter="0">
		<s:Group id="certificateGroup">
			<s:SWFLoader id="certificateSWFLoader" left="60" />
			<s:HGroup top="150" left="160" gap="16">
				<s:VGroup gap="10">
					<s:Label id="nameTextLabel" fontSize="15" />
					<s:Label id="courseTextLabel" fontSize="15" />
					<s:Label id="dateTextLabel" fontSize="15" />
				</s:VGroup>
				<s:VGroup gap="10">
					<s:Label id="nameLabel" fontWeight="bold" fontSize="16" />						
					<s:Label id="courseLabel" fontWeight="bold" fontSize="16" />
					<s:Label id="dateLabel" fontWeight="bold" fontSize="16" />
				</s:VGroup>										
			</s:HGroup>						
			<s:RichEditableText id="certificateRichEditableText" width="500" horizontalCenter="0" top="260" fontSize="14" textAlign="center" editable="false" />
		</s:Group>
	</s:Scroller>
	
	<!--Print button group-->
	<s:HGroup id="printGroup" right="20" top="0" horizontalAlign="right">
		<s:SWFLoader source="@Embed(source='skins/clearpronunciation/assets/progress/certificate/printTip.png')" right="150" top="10" />
		<s:Button id="printButton"  color="0xFFFFFF" buttonMode="true" useHandCursor="true" right="60" />		
	</s:HGroup>
</s:Skin>