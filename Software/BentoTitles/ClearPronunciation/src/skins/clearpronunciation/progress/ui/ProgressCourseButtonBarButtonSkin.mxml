<!--- The default skin class for a Spark ToggleButton component.  

     @see spark.components.ToggleButton
        
      @langversion 3.0
      @playerversion Flash 10
      @playerversion AIR 1.5
      @productversion Flex 4
-->
<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009" 
                   xmlns:s="library://ns.adobe.com/flex/spark" 
                   xmlns:fb="http://ns.adobe.com/flashbuilder/2009"
                   minWidth="21" minHeight="21" 
                   alpha.disabledStates="0.5" creationComplete="onCreatinComplete(event)" xmlns:home="skins.clearpronunciation.assets.home.*" xmlns:exercise="skins.clearpronunciation.assets.exercise.*">
	<fx:Metadata>
		<![CDATA[
			[HostComponent("spark.components.ButtonBarButton")]
		]]>
	</fx:Metadata>
	
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			
			[Bindable]
			private var courseClass:String;
			
			protected function onCreatinComplete(event:FlexEvent):void
			{
				// TODO Auto-generated method stub
				courseClass = hostComponent.label;
			}
			
		]]>
	</fx:Script>
    
    <!-- host component -->
    <!-- states -->
    <s:states>
        <s:State name="up" />
        <s:State name="over" stateGroups="overStates" />
        <s:State name="down" stateGroups="downStates" />
        <s:State name="disabled" stateGroups="disabledStates" />
        <s:State name="upAndSelected" stateGroups="selectedStates, selectedUpStates" />
        <s:State name="overAndSelected" stateGroups="overStates, selectedStates" />
        <s:State name="downAndSelected" stateGroups="downStates, selectedStates" />
        <s:State name="disabledAndSelected" stateGroups="selectedUpStates, disabledStates, selectedStates" />
    </s:states>
    
	<s:HGroup gap="8" verticalCenter="0" horizontalCenter="0" verticalAlign="middle">
		<s:Group>
			<!--exercise:elementarySIcon visible="{courseClass == 'Elementary'}" />
			<exercise:lowerinterSIcon visible="{courseClass == 'Lower Intermediate'}" />
			<exercise:interSIcon visible="{courseClass == 'Intermediate'}" />
			<exercise:upperinterSIcon visible="{courseClass == 'Upper Intermediate'}"/>
			<exercise:advanceSIcon visible="{courseClass == 'Advanced'}"/-->
		</s:Group>	
		
		<!--s:Group left="0" right="0" top="0" bottom="0"-->
		<!-- layer 2: fill -->
		<!--- @private -->
		<!--s:Rect id="fill" left="2" right="1" top="2" bottom="2" topLeftRadiusX="12">
		<s:fill>
		<s:LinearGradient rotation="90">
		<s:GradientEntry color="0xFFFFFF" 
		alpha="1" />
		<s:GradientEntry color="0xFFFFFF" 
		alpha="1" />
		</s:LinearGradient>
		</s:fill>
		</s:Rect>
		</s:Group-->
		
		<!-- layer 8: icon and text -->
		<!---  @copy spark.components.supportClasses.ButtonBase#labelDisplay -->
		<!--- source="{(hostComponent as ButtonBarButton).data.courseIcon}" -->
		<s:Label id="labelDisplay"
				 maxDisplayedLines="1"
				 left="10" right="10"
				 color="0x303030"
				 color.selectedUpStates="0x303030"
				 color.over="0x303030"
				 color.up="0xCCCCCC"
				 fontSize="14" fontWeight="bold">
		</s:Label>
	</s:HGroup>  
</s:SparkSkin>
