<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx"
		xmlns:widgets="skins.rotterdam.unit.widgets.*"
		xmlns:components="com.clarityenglish.textLayout.components.*"
		minHeight="80"
		creationComplete="creationComplete(event)">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.clarityenglish.rotterdam.view.unit.widgets.AudioWidget")]
	</fx:Metadata>
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			
			//gh #106
			protected function creationComplete(event:FlexEvent):void
			{
				// TODO Auto-generated method stub
				audioPlayer.playComponent.addEventListener(MouseEvent.CLICK, hostComponent.onPlayClicked);
			}
			
		]]>
	</fx:Script>
	
	<s:states>
		<s:State name="normal" />
		<s:State name="editing_normal" stateGroups="editing" />
		<s:State name="editing_selected" stateGroups="editing,selected" />
		<s:State name="dragging" />
	</s:states>
	
	<s:HGroup left="30" right="10" top="10" paddingBottom="10" verticalAlign="middle" width="100">
		<!-- Audio player -->
		<components:AudioPlayer id="audioPlayer" src="{hostComponent.audioUrl}" controls="full" />
		
		<!-- Text -->
		<widgets:WidgetText id="widgetText" widget="{hostComponent}" editing.editing="true" width="100%" minHeight="20"/>
	</s:HGroup>
	
</s:Skin>
