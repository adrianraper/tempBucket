<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009"
		xmlns:s="library://ns.adobe.com/flex/spark"
		xmlns:ui="com.clarityenglish.rotterdam.view.title.ui.*"
		xmlns:title="skins.clearpronunciation.assets.title.*"
		xmlns:home="skins.clearpronunciation.assets.home.*"
		creationComplete="onCreationComplete(event)"
		width="100%" height="100%">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.clarityenglish.clearpronunciation.view.title.TitleView")]
	</fx:Metadata>
	
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			
			protected function onCreationComplete(event:FlexEvent):void {
				
			}
		]]>
	</fx:Script>
	
	<!-- states -->
	<s:states>
		<s:State name="disabled" />
		<s:State name="normal" />
		
		<s:State name="home" />
		<s:State name="exercise" />
		<s:State name="progress" />
		
		<!-- delete me -->
		<s:State name="course" />
	</s:states>
	
	<s:Rect id="backgroundRect" width="100%" height="100%">
		<s:fill>
			<s:RadialGradient y="300" scaleX="2000" scaleY="2000" >
				<s:GradientEntry ratio="0.00" color="#03BBC6"/>
				<s:GradientEntry ratio="0.25" color="#07B0D3"/>
				<s:GradientEntry ratio="0.44" color="#1295D3"/>
				<s:GradientEntry ratio="0.68" color="#097DC2"/>
				<s:GradientEntry ratio="0.97" color="#0D5AA9"/>
			</s:RadialGradient>
		</s:fill>
	</s:Rect>
	
	<home:homeBgBubbles top="300" left="300" />
	<home:homeBgBubbles top="350" left="350" />
	<home:homeBgBubbles top="100" left="-100" scaleX="2" scaleY="2" />
	<home:homeBgBubbles verticalCenter="-100" left="500" scaleX="1" scaleY="1" />
	<home:homeBgBubbles bottom="0" left="200" scaleX="2" scaleY="2" />
	
	<!-- CP1 logo -->
	<s:BitmapImage left="0" top="0" source="@Embed(source='skins/clearpronunciation/assets/home/homeLogo.png')" includeIn="home" />
	
	<!-- footer (sits on top of application skin footer) -->
	<s:Group left="0" bottom="0" width="100%">
		<s:BitmapImage left="0" bottom="0" source="@Embed(source='skins/clearpronunciation/assets/home/homeGirl.png')" includeIn="home" />
	</s:Group>
	
	<ui:CancelableTabbedViewNavigator id="sectionNavigator" left="0" right="0" top="0" bottom="0">
		<s:ViewNavigator id="myCoursesViewNavigator" firstView="com.clarityenglish.clearpronunciation.view.home.HomeView" left="0" right="0" height="100%" />
		<s:ViewNavigator id="progressViewNavigator" firstView="com.clarityenglish.clearpronunciation.view.progress.ProgressView" left="0" right="0" height="100%" />
	</ui:CancelableTabbedViewNavigator>
	
	<s:Group right="0" includeIn="home">
		<s:HGroup gap="0" width="100%">
			<!-- NOTE: This should be a repeating image on left and right, with the 'mid' point set based on titleButtonHGroup width -->
			<title:menuBarLT id="menuBarLT" width="{backgroundRect.width - titleButtonHGroup.width - 64}" top="-70" />
			<title:menuBarMid id="menuBarMid" width="64" top="-70" />
			<title:menuBarRT id="menuBarRT" right="0" width="{titleButtonHGroup.width}" top="-70" />
		</s:HGroup>
		<s:HGroup id="titleButtonHGroup" top="5" right="0" gap="30">
			<s:Button id="progressButton" useHandCursor="true" buttonMode="true" />
			<s:Button id="settingsButton" useHandCursor="true" buttonMode="true" />
			<s:Button id="phonemicChartButton" useHandCursor="true" buttonMode="true" />
			<s:Button id="helpButton" useHandCursor="true" buttonMode="true" />
			<s:Button id="logoutButton" useHandCursor="true" buttonMode="true" />
		</s:HGroup>
	</s:Group>
	
	<s:Button id="backButton" top="12" right="10" useHandCursor="true" buttonMode="true" includeIn="progress" />
</s:Skin>
