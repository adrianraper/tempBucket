<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx"
		xmlns:ui="com.clarityenglish.rotterdam.view.title.ui.*" 
		xmlns:title="skins.clearpronunciation.assets.title.*"
		xmlns:home="skins.clearpronunciation.assets.home.*" 
		creationComplete="onCreationComplete(event)">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.clarityenglish.clearpronunciation.view.title.TitleView")]
	</fx:Metadata>
	
	<fx:Script>
		<![CDATA[
			import mx.core.FlexGlobals;
			import mx.events.FlexEvent;
			
			import skins.clearpronunciation.assets.title.menuProgressOff;
			
			protected function onCreationComplete(event:FlexEvent):void {
				backgroundRect.x = FlexGlobals.topLevelApplication.width * 0.75;
			}
			
		]]>
	</fx:Script>
	
	<!-- states -->
	<s:states>
		<s:State name="disabled" />
		<s:State name="normal" />
		
		<s:State name="home" />
		<s:State name="course" />
		<s:State name="progress" />
	</s:states>
	
	<!-- gh#1054 	-->
	<s:Rect width="100%" height="100%">
		<s:fill>
			<s:RadialGradient id="backgroundRect" y="300" scaleX="2000" scaleY="2000" >
				<s:GradientEntry ratio="0.00" color="#03BBC6"/>
				<s:GradientEntry ratio="0.25" color="#07B0D3"/>
				<s:GradientEntry ratio="0.44" color="#1295D3"/>
				<s:GradientEntry ratio="0.68" color="#097DC2"/>
				<s:GradientEntry ratio="0.97" color="#0D5AA9"/>
			</s:RadialGradient>
		</s:fill>
	</s:Rect>
	<!-- <s:Image source="@Embed(source='skins/clearpronunciation/assets/home/homeBgBubbles.png')" top="0" left="0" fillMode="clip" includeIn="home" /> -->
	
	<ui:CancelableTabbedViewNavigator id="sectionNavigator" left="0" right="0" top="0" bottom="30">
		<s:ViewNavigator id="myCoursesViewNavigator" firstView="com.clarityenglish.clearpronunciation.view.home.HomeView" left="0" right="0" height="100%"  />
		<s:ViewNavigator id="progressViewNavigator" firstView="com.clarityenglish.clearpronunciation.view.progress.ProgressView" left="0" right="0" height="100%" />
	</ui:CancelableTabbedViewNavigator>
	
	<s:HGroup id="titleButtonHGroup" top="5" gap="20" right="2">
		<s:Button id="settingsButton" useHandCursor="true" buttonMode="true" includeIn="home" />
		<s:Button id="phonemicChartButton" useHandCursor="true" buttonMode="true" includeIn="home" />
		<s:Button id="helpButton" useHandCursor="true" buttonMode="true" includeIn="home" />
		<s:Button id="logoutButton" useHandCursor="true" buttonMode="true" scaleX.course="0.6" scaleY.course="0.6" includeIn="home, course" />	
	</s:HGroup>
	
	<s:Button id="backButton" top="12" right="10" useHandCursor="true" buttonMode="true" includeIn="progress" />	
</s:Skin>
