<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.clarityenglish.common.view.error.ErrorView")]
	</fx:Metadata>
	
	<!-- states -->
	<s:states>
		<s:State name="disabled" />
		<s:State name="normal" />
	</s:states>
	
	<s:VGroup width="100%" paddingLeft="20" paddingBottom="30" paddingRight="20">
		<s:Label id="problemLabel" width="310" fontSize="16" fontWeight="bold" paddingTop="10" />
		<s:Spacer height="1" />
		<s:Label width="400" text="{hostComponent.error.errorContext}" lineHeight="20" />
		<s:Spacer height="1" />
	</s:VGroup>
	<s:Button id="closeButton" bottom="0" right="11" fontWeight="bold" fontSize="14" buttonMode="true" useHandCursor="true" />
</s:Skin>
