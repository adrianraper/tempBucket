<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
    	xmlns:fb="http://ns.adobe.com/flashbuilder/2009" alpha.disabled="0.5" height="100%" xmlns:login="skins.activereading.assets.login.*" xmlns:credits="skins.activereading.assets.credits.*" xmlns:title="skins.activereading.assets.title.*">
	
	<fx:Metadata>
		[HostComponent("com.clarityenglish.activereading.view.credits.CreditsView")]
	</fx:Metadata>
	
	<fx:Declarations>
		<s:DropShadowFilter id="dropShadowFilter" blurX="8" blurY="8" alpha="0.3" distance="1" angle="180" knockout="false" />
	</fx:Declarations>

    <s:states>
        <s:State name="normal" />
        <s:State name="disabled" />
    </s:states>
	
	<!--Header-->
	<s:HGroup width="100%" top="0" gap="0">
		<title:menuTopBarM width="80%" />
		<title:menuTopBarRT />
	</s:HGroup>
	
	<!--AR logo-->
	<title:titlelogoAR right="50" top="10" scaleX="1.3" scaleY="1.3" />
	
	<!--CE logo-->
	<credits:whiteCE top="18" left="30"/>
    
	<!--Letter background-->
	<login:loginbg left="0" bottom="70" scaleX="0.6" scaleY="0.6" />
	
	<!--Text-->
	<credits:thankYouText verticalCenter="-100" horizontalCenter="-120" top="200" />
	
	<!--Book-->
	<s:SWFLoader bottom="0" right="-100" source="@Embed(source='skins/activereading/assets/login/loginbook.png')" />
	
	<!--Footer-->
	<s:Group width="100%" height="28" bottom="20" left="10">
		<s:Rect width="90%" height="28" radiusX="14" radiusY="14">
			<s:fill>
				<s:LinearGradient>
					<s:GradientEntry color="#D4D4D4" alpha="1"  />
					<s:GradientEntry color="#D4D4D4" alpha="0"  />
				</s:LinearGradient>
			</s:fill>
		</s:Rect>
		<s:HGroup height="100%" left="10" verticalAlign="middle" gap="5">
			<s:Label id="versionLabel" color="#333333" fontSize="11" />
			<s:Label id="copyrightLabel" color="#333333" fontSize="11" />
		</s:HGroup>
	</s:Group>
	
	<!--Girl-->
	<s:SWFLoader bottom="0" right="50" source="@Embed(source='skins/activereading/assets/login/logingirl.png')" />
	
</s:Skin>
