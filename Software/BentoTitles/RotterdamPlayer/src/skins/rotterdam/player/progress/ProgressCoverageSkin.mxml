<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009"
		xmlns:s="library://ns.adobe.com/flex/spark"
		xmlns:mx="library://ns.adobe.com/flex/mx"
		xmlns:ui="com.clarityenglish.bento.view.progress.ui.*"
		xmlns:skins="skins.ielts.progress.*">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.clarityenglish.bento.view.progress.components.ProgressCoverageView")]
	</fx:Metadata>
	
	<fx:Script>
		<![CDATA[
			import com.clarityenglish.bento.view.progress.ui.CoverageUnitRenderer;
			import com.clarityenglish.bento.view.progress.ui.CoverageGroupRenderer;
			
			/**
			 * This is specific to the IELTS ProgressCoverageSkin and replaces the default item renderer with a unit version for 'practice-zone'
			 */
			private function getItemRenderer(item:Object):ClassFactory {
				if (item.@["class"] == "practice-zone") {
					return new ClassFactory(CoverageGroupRenderer);
				} else {
					return new ClassFactory(CoverageUnitRenderer);
				}
			}
			
		]]>
	</fx:Script>
	
	<s:states>
		<s:State name="disabled" />
		<s:State name="normal" />
	</s:states>
	
	<ui:ProgressCourseButtonBar id="progressCourseButtonBar" right="20" height="50">
		<ui:layout>
			<s:ButtonBarHorizontalLayout gap="25" />
		</ui:layout>
	</ui:ProgressCourseButtonBar>
	
	<ui:ProgressBarRenderer id="progressBar" top="73" left="0" right="0" />
	
	<s:Scroller left="0" right="0" top="137" bottom="0">
		<s:DataGroup id="dataGroup" width="100%" height="100%" minWidth="0" minHeight="0" itemRendererFunction="getItemRenderer">
			<s:layout>
				<s:HorizontalLayout paddingTop="5" />
			</s:layout>
		</s:DataGroup>
	</s:Scroller>
	
</s:Skin>
