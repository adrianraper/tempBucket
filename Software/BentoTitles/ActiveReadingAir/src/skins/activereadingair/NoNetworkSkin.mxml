<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" xmlns:login="skins.activereading.assets.login.*" xmlns:title="skins.activereading.assets.title.*" xmlns:nonetwork="skins.activereadingair.nonetwork.*" xmlns:credits="skins.activereading.assets.credits.*">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.clarityenglish.bento.view.nonetwork.NoNetworkView")]
	</fx:Metadata>
	
	<!-- states -->
	<s:states>
		<s:State name="disabled" />
		<s:State name="normal" />
	</s:states>
	
	<!--Header-->
	<s:HGroup width="100%" top="0" gap="0">
		<title:menuTopBarM width="80%" />
		<title:menuTopBarRT />
	</s:HGroup>
	
	<!--AR logo-->
	<title:titlelogoAR right="50" top="10" scaleX="1.3" scaleY="1.3" />
	
	<!--CE logo-->
	<credits:whiteCE top="18" left="30"/>
	
	<!--Letter background-->
	<login:loginbg left="0" bottom="70" scaleX="0.6" scaleY="0.6" />
	
	<s:VGroup verticalCenter="20" horizontalCenter="-120" height="500" width="600" gap="60">
		<nonetwork:noConnectionText top="150" />
		<s:HGroup width="100%" paddingLeft="70">
			<s:SWFLoader source="@Embed(source='skins/activereadingair/nonetwork/noConnection.png')" />
		</s:HGroup>	
	</s:VGroup>
	
	
	<!--Book-->
	<s:SWFLoader bottom="0" right="-100" source="@Embed(source='skins/activereading/assets/login/loginbook.png')" />
	
	<!--Girl-->
	<s:SWFLoader bottom="0" right="50" source="@Embed(source='skins/activereading/assets/login/logingirl.png')" />
</s:Skin>
