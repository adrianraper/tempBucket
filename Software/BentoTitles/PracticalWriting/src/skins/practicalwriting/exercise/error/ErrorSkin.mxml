<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" xmlns:mx="library://ns.adobe.com/flex/mx">
    <!-- host component -->
    <fx:Metadata>
        [HostComponent("com.clarityenglish.common.view.error.ErrorView")]
    </fx:Metadata>

    <s:states>
        <s:State name="disabled" />
        <s:State name="normal" />
    </s:states>

    <s:layout>
        <s:VerticalLayout />
    </s:layout>

    <!-- gh#1364 -->
    <s:VGroup width="100%" paddingTop="20" paddingRight="30" paddingBottom="30" paddingLeft="30" gap="15" horizontalAlign="center">
        <s:Label id="problemLabel" width="360" />
        <s:Label id="errorMessage" width="360" text="{hostComponent.error.errorContext}" lineHeight="125%" />
        <s:Button id="closeButton" width="65" height="35" />
    </s:VGroup>

</s:Skin>
