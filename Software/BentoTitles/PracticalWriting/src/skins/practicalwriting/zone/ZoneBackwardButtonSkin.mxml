<!--- The default skin class for the Spark Button component.

 @see spark.components.Button

 @langversion 3.0
 @playerversion Flash 10
 @playerversion AIR 1.5
 @productversion Flex 4
-->
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009"
                   xmlns:s="library://ns.adobe.com/flex/spark"
                   xmlns:title="skins.practicalwriting.assets.title.*"
                   minWidth="21" minHeight="21"
                   alpha.disabled="0.5">

    <fx:Metadata>
        <![CDATA[
        /**
         * @copy spark.skins.spark.ApplicationSkin#hostComponent
         */
        [HostComponent("spark.components.Button")]
        ]]>
    </fx:Metadata>

    <fx:Declarations>
        <s:DropShadowFilter id="dropShadowFilter" angle="0" distance="0.4" alpha="0.3" color="#888888" />
    </fx:Declarations>

    <!-- states -->
    <s:states>
        <s:State name="up" />
        <s:State name="over" />
        <s:State name="down" />
        <s:State name="disabled" />
    </s:states>

    <s:Rect width="40" height="50" left="-12" top="-12">
        <s:fill>
            <s:SolidColor color="#FFFFFF" alpha="0" />
        </s:fill>
    </s:Rect>

    <s:Path data="M14.3037 28.6084L0 14.3032 14.3037 0 14.3037 28.6084Z">
        <s:fill>
            <s:SolidColor color="#5090A6" color.over="#0d6A8A" color.down="#0d6A8A" />
        </s:fill>
    </s:Path>

    <!-- layer 8: text -->
    <!--- @copy spark.components.supportClasses.ButtonBase#labelDisplay  -->
    <s:Label id="labelDisplay"
             textAlign="center"
             verticalAlign="middle"
             maxDisplayedLines="1"
             paddingTop="4" fontSize="17" fontWeight="normal"
             color="#787878">
    </s:Label>

</s:Skin>
