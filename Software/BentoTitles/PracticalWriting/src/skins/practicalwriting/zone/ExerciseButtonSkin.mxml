<?xml version="1.0"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark">

    <fx:Metadata>
        [HostComponent("com.clarityenglish.practicalwriting.view.zone.CompletenessButton")]
    </fx:Metadata>

    <!-- states -->
    <s:states>
        <s:State name="disabled" />
        <s:State name="normal" />

        <s:State name="complete" />
        <s:State name="incomplete" />
    </s:states>

    <s:Button id="completeButton" width="100%" height="100%" label="{hostComponent.labelText}" color="{hostComponent.completeColor}" focusColor="{hostComponent.mouseOverColor}" includeIn="complete" />
    <s:Button id="incompleteButton" width="100%" height="100%" label="{hostComponent.labelText}" color="{hostComponent.incompleteColor}" focusColor="{hostComponent.mouseOverColor}" chromeColor="{hostComponent.completeColor}" includeIn="incomplete" />

</s:Skin>
