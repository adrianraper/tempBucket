<?xml version="1.0"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009"
        xmlns:s="library://ns.adobe.com/flex/spark"
        width="80%" height="80%">

    <fx:Metadata>
        [HostComponent("com.clarityenglish.practicalwriting.view.zone.ZoneView")]
    </fx:Metadata>

    <!-- states -->
    <s:states>
        <s:State name="disabled" />
        <s:State name="normal" />
    </s:states>

    <s:TabbedViewNavigator right="100" width="60%" top="0" bottom="100" creationPolicy="all">
        <s:ViewNavigator id="startOutViewNavigator" firstView="com.clarityenglish.practicalwriting.view.zone.StartOutZoneView" firstViewData="{hostComponent.course}" label="Start Out" left="0" right="0" top="0" bottom="0" />
        <s:ViewNavigator id="practiceZoneViewNavigator" firstView="com.clarityenglish.practicalwriting.view.zone.PracticeZoneView" firstViewData="{hostComponent.course}" label="Practice Zone" left="0" right="0" top="0" bottom="0" />
        <s:ViewNavigator id="resourcesViewNavigator" firstView="com.clarityenglish.practicalwriting.view.zone.ResourcesZoneView" firstViewData="{hostComponent.course}" label="Resources" left="0" right="0" top="0" bottom="0" />
    </s:TabbedViewNavigator>
</s:Skin>
