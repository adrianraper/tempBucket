<practicalwriting:PracticalWritingApplication xmlns:fx="http://ns.adobe.com/mxml/2009"
                                              xmlns:practicalwriting="com.clarityenglish.practicalwriting.*" initialize="onInitialize(event)" preloader="com.clarityenglish.practicalwriting.PracticalWritingPreloader">

    <fx:Style source="PracticalWriting.css"/>

    <fx:Style>
        @font-face {
            src: url("skins/practicalwriting/assets/HelveticaNeueLTStd-Roman.otf");
            fontFamily: Helvetica;
            fontStyle: normal;
            fontWeight: normal;
            embedAsCFF: true;
            advancedAntiAliasing: true;
        }

        @font-face {
            src: url("skins/practicalwriting/assets/HelveticaNeueLTStd-Roman.otf");
            fontFamily: HelveticaNoCFF;
            fontStyle: normal;
            fontWeight: normal;
            embedAsCFF: false;
            advancedAntiAliasing: true;
        }

        @font-face {
            src: url("skins/practicalwriting/assets/HelveticaNeueLTStd-Bd.otf");
            fontFamily: Helvetica;
            fontStyle: normal;
            fontWeight: bold;
            embedAsCFF: true;
            advancedAntiAliasing: true;
        }

        global {
            fontFamily: Helvetica;
            fontLookup: embeddedCFF;
            fontAntiAliasType: advanced;
        }
    </fx:Style>

    <fx:Script>
        <![CDATA[
        import com.clarityenglish.practicalwriting.PracticalWritingApplicationFacade;

        import mx.events.FlexEvent;

            protected function onInitialize(event:FlexEvent):void {
                versionNumber = "23-Sept";

                facade = PracticalWritingApplicationFacade.getInstance();
            }
        ]]>
    </fx:Script>

</practicalwriting:PracticalWritingApplication>
