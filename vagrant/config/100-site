<VirtualHost *:80>
  ServerName dock.projectbench

  ## Vhost docroot
  DocumentRoot "/vagrant/software"

  ## Directories, there should at least be a declaration for /vagrant

  <Directory "/vagrant/software">
    Options Indexes FollowSymLinks MultiViews
    AllowOverride All
    Order allow,deny
    Allow from all
  </Directory>

  ## Load additional static includes

  ## Logging
  #ErrorLog "/var/log/apache2/aFLVmgiHAgBb_error.log"
  #ServerSignature Off
  #CustomLog "/var/log/apache2/aFLVmgiHAgBb_access.log" combined

  ## CORS (needs testing!)
  <IfModule mod_headers.c>
    SetEnvIf Origin (.*) AccessControlAllowOrigin=$1
    SetEnvIf Origin (.*) AccessControlAll
    Header add Access-Control-Allow-Origin %{AccessControlAllowOrigin}e env=AccessControlAllowOrigin
    Header set Access-Control-Allow-Credentials true
    Header set Access-Control-Allow-Headers "origin, x-requested-with, content-type"
    Header set Access-Control-Allow-Methods "PUT, GET, POST, DELETE, OPTIONS"
  </IfModule>
</VirtualHost>

