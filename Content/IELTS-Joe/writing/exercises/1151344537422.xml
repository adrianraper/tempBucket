<section id="body">
	<img class="rightFloat" src="../Media/AC_AW_006s.jpg" mode="1" id="1003"  /><img class="leftFloat" src="../Media/AC_AW_006.jpg" mode="16" id="1004"  /><br/><ol id="questionList"></ol>
