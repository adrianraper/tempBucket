<?xml version="1.0" encoding="UTF-8"?>
<bento xmlns="http://www.w3.org/1999/xhtml">
	<head>
		<link rel="stylesheet" href="css/exercises.css" type="text/css" />
		<style type="text/css">
		<![CDATA[
			#body p {
				padding-bottom: 25;
			}
			
			.feedback.titlebar.correct {
				background-color: #00FF00;
				opacity: 0.2;
				color: #333333;
			}
			
			.feedback.titlebar.incorrect {
				background-color: #FF0000;
				opacity: 0.2;
				color: #000000;
			}
		]]>
		</style>
		<script id="model" type="application/xml">
			<questions>
				<TargetSpottingQuestion>
					<answer correct="true" source="target1">
						<feedback source="fb1" title="Correct feedback" />
					</answer>
				</TargetSpottingQuestion>
				
				<TargetSpottingQuestion>
					<answer correct="false" source="target2">
						<feedback source="fb2" title="Incorrect feedback" />
					</answer>
				</TargetSpottingQuestion>
				
				<TargetSpottingQuestion>
					<answer correct="true" source="target3">
						<feedback source="fb3" />
					</answer>
				</TargetSpottingQuestion>
				
				<TargetSpottingQuestion>
					<answer correct="false" source="target4">
						<feedback source="fb4" />
					</answer>
				</TargetSpottingQuestion>
				
				<TargetSpottingQuestion>
					<answer correct="neutral" source="target5">
						<feedback source="fb5" title="Neutral feedback" />
					</answer>
				</TargetSpottingQuestion>
				
				<TargetSpottingQuestion>
					<answer correct="true" source="target6">
						<feedback source="fb6" />
					</answer>
				</TargetSpottingQuestion>
			</questions>
		</script>
	</head>
	
	<body>
		<header>
			This is Dave's test to check out feedback.
		</header>
		
		<section id="body">
			<p>
				<g id="target1">
					This is a target spotting question linked to feedback (feedback 1) correct
				</g>
			</p>
			
			<p>
				<g id="target2">
					This is a target spotting question linked to feedback (feedback 2) incorrect
				</g>
			</p>
			
			<p>
				<g id="target3">
					This is a target spotting question linked to feedback (feedback 3) correct
				</g>
			</p>
			
			<p>
				<g id="target4">
					This is a target spotting question linked to feedback (feedback 4) incorrect
				</g>
			</p>
			
			<p>
				<g id="target5">
					This is a target spotting question linked to feedback (feedback 5) neutral
				</g>
			</p>
			
			<p>
				<g id="target6">
					This is a target spotting question linked to feedback (feedback 6) correct
				</g>
			</p>
		</section>
		
		<section id="fb1">
			This is feedback 1
		</section>
		
		<section id="fb2">
			This is feedback 2
		</section>
		
		<section id="fb3">
			This is feedback 3
		</section>
		
		<section id="fb4">
			This is feedback 4
		</section>
		
		<section id="fb5">
			This is feedback 5
		</section>
	</body>
	
</bento>