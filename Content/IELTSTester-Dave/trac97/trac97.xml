<?xml version="1.0" encoding="UTF-8" ?>
<bento xmlns="http://www.w3.org/1999/xhtml">
	<head>
		<meta name="conversion-from" content="gapfill" />
		<meta name="conversion-date" content="2011-11-10" />
		<meta name="customised" content="true" />
		<link rel="stylesheet" href="../tests/css/exercises.css" type="text/css" />
		<style type="text/css">
	<![CDATA[
		/*
		 * List any exercise specific css here
		 */
		 
		 input {
		 	width: 100px;
		 }
	]]>
		</style>
		
		<script id="model" type="application/xml">
			<settings>
				<!-- <param name="delayedMarking" value="true" /> -->
			</settings>
			<questions>
				<GapFillQuestion source="{input}" block="b1">
					<answer value="1" correct="true" synonymGroup="numbers" />
					<answer value="2" correct="true" synonymGroup="numbers" />
					<answer value="3" correct="true" synonymGroup="numbers" />

					<answer value="a" correct="true" synonymGroup="letters" />
					<answer value="b" correct="true" synonymGroup="letters" />
					<answer value="c" correct="true" synonymGroup="letters" />

					<answer value="$" correct="true" synonymGroup="symbols" />
					<answer value="%" correct="true" synonymGroup="symbols" />
					<answer value="^" correct="true" synonymGroup="symbols" />
				</GapFillQuestion>
			</questions>
		</script>

	</head>
	<body>

		<header>Synonym groups</header>

		<section id="body">
			<p>Enter a number (1,2,3), a letter (a,b,c) and a symbol ($,%,^)</p>
			<br />
			<input id="input1" />
			<br />
			<input id="input2" />
			<br />
			<input id="input3" />
			<br />
		</section>
	</body>
</bento>